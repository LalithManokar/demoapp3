<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:ino="sap.ino.controls">
	<VBox id="vBoxForAdminContentVisible" visible="false">
		<Toolbar width="100%">
			<content>
				<Title class="sapInoInternal" text="{i18n>INTERNAL_ADMIN_FORM_TIT}"/>
				<Title class="sapInoInternal" id="nameOfAdminForm" text="{ path: 'object>/AdminFieldsValue', formatter: '.formatter.adminFormTitle'}" />
		      	<ToolbarSpacer />
				<Button icon="sap-icon://edit" id="editButtonForAdminFields" press="onEditButtonForAdminFields" type="Accept" />
			</content>
		</Toolbar>
		<VBox class="sapUiSmallMarginTopBottom" id="vBoxForAdminFields" visible="false" ></VBox>
		<VBox class="sapUiSmallMarginTopBottom" id="vBoxForDisplayAdminFields" visible="true"></VBox>
		<OverflowToolbar id="overToolbarAdminButtons" visible="false">
			<ToolbarSpacer/>
			<Button text = "{i18n>INTERNAL_ADMIN_FORM_SAVE_PUB_BUTTON}" press="onSaveWithPub" type="Accept"/>
			<Button text = "{i18n>INTERNAL_ADMIN_FORM_SAVE_NOTPUB_BUTTON}" press="onSaveWithoutPub"/>
			<Button text = "{i18n>INTERNAL_ADMIN_FORM_CANCEL_BUTTON}" press="onAdminFormEditCancel"/>
		</OverflowToolbar>
	</VBox>
</core:FragmentDefinition>