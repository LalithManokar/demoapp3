<mvc:View
    controllerName="sap.ino.vc.internal.InternalWall"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ino="sap.ino.controls">
    <ino:WrappingList id="interalwalllistinidea"
        growing="true"
        growingThreshold="{path : 'device>/system', formatter: '.formatter.listThreshold'}"
        growingScrollToLoad="true"
        itemPress="onItemPress"
        showNoData="true"
        wrapping="true">
        <ino:headerToolbar>
			<Toolbar width="100%">
				<content>
						<Title  text="{i18n>INTERNALWALL_TIT}" />
						<ToolbarSpacer />
						<Button id="walllistinideaadd" icon="sap-icon://add"  press="onWallAdd" 
	                            visible="true"
	                    />
				</content>
			</Toolbar>
	    </ino:headerToolbar>
    </ino:WrappingList>
</mvc:View>