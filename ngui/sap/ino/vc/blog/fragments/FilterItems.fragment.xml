<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout">
    <!-- height: 99% to avoid unneccessary scrollbars during zoom -->
    <VBox
        width="100%"
        height="99%"
        alignItems="Start"
        justifyContent="SpaceBetween"
        class="sapInoFilterSidePanelContent">
        <l:VerticalLayout
            width="100%"
            class="sapUiContentPadding"
            id="filterItems">
            <Label 
                id="campaignFilterLabel"
                visible="{= ${view>/HIDE_CAMPAIGN_FILTER} !== true}"
                text="{i18n>LIST_TIT_FILTER_CAMPAIGN_HEADER}"/>
            <Select
                ariaLabelledBy="campaignFilterLabel"
                width="100%"
                visible="{= ${view>/HIDE_CAMPAIGN_FILTER} !== true}"
                items="{
                    path : 'data>/CampaignSmallBlogFilter'
                }"
                selectedKey="{view>/List/CAMPAIGN}"
                change="onFilterCampaignChange"
                class="sapUiMediumMarginBottom">
                <core:ListItem
                    key="{data>ID}"
                    text="{data>SHORT_NAME}">
                </core:ListItem>
            </Select>
        </l:VerticalLayout>
        <l:VerticalLayout
            class="sapUiContentPadding sapInoFilterSidePanelFilterButtons"
            width="100%">
            <Button 
                icon="sap-icon://sys-cancel"
                width="100%"
                text="{i18n>LIST_BTN_RESET_FILTERS}"
                press="onFilterReset">
            </Button>
        </l:VerticalLayout>
    </VBox>
</core:FragmentDefinition>