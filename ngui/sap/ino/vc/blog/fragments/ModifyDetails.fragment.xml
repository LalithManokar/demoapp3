<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:ino="sap.ino.controls"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<l:Grid>
		<f:SimpleForm 
		    editable="true"
            layout="{view>/Layouts/SimpleFormLayout/layout}"
            labelSpanL="{view>/Layouts/SimpleFormLayout/labelSpanL}"
            labelSpanM="{view>/Layouts/SimpleFormLayout/labelSpanM}"
            emptySpanL="{view>/Layouts/SimpleFormLayout/emptySpanL}"
            emptySpanM="{view>/Layouts/SimpleFormLayout/emptySpanM}">
			<f:layoutData>
				<l:GridData span="XL12 L12 M11 S12"/>
			</f:layoutData>
			<core:ExtensionPoint name="extension_details_top_left"/>
			<!-- Title -->
			<Label text="{i18n>BLOG_OBJECT_TIT_NAME}" required="{object>meta/nodes/Root/attributes/TITLE/required}" class="sapInoBlogModifyLabel" />
			<Input 
    			id="TITLE"
                value="{object>TITLE}"
                maxLength="{object>meta/nodes/Root/attributes/TITLE/maxLength}"
                enabled="{object>property/nodes/Root/attributes/TITLE/changeable}"
                change="onTitleChange">
				<layoutData>
					<l:GridData span="XL11 L11 M11 S12"/>
				</layoutData>
			</Input>
			<core:ExtensionPoint name="extension_details_middle_left"/>
			<!--Description-->
			<Label 
			    text="{i18n>BLOG_OBJECT_TIT_BLOG_CONTENT}" 
                required="{object>meta/nodes/Root/attributes/DESCRIPTION/required}" 
                class="sapInoIdeaModifyDescriptionLabel"></Label>
			<VBox 
			    id="rteContainer"
                class="sapInoBlogModify" 
                height="100%" 
                width="100%" 
                visible="{=${device>/system/desktop}}">
				<layoutData>
					<l:GridData span="XL11 L11 M11 S12"/>
				</layoutData>
				<!-- RTE is created lazily in controller initRTE to prevent loading issues when cache is not filled -->
			</VBox>
			<ino:MobileTextEditor 
			    visible="{=!${device>/system/desktop}}"
                showToolbar="false"
                value="{object>DESCRIPTION}"
                editable="{object>property/nodes/Root/attributes/DESCRIPTION/changeable}"
                maxHeight="20rem"
                minHeight="10rem"
                openInDialog="true"
                dialogTitle="{i18n>BLOG_OBJECT_TIT_DESCRIPTION}"></ino:MobileTextEditor>
			<!-- Tags -->
			<core:ExtensionPoint name="extension_details_top_left"/>
			<Label text="{i18n>BLOG_OBJECT_TIT_TAGS}" class="sapInoBlogModifyLabel" />
			<MultiInput
                id="Tags"
                change="onTagChanged"
                tokenChange="onTagTokenChanged"
                startSuggestion="1"
                showSuggestion="true"
                filterSuggests="false"
                showValueHelp="false"
                enableMultiLineMode="false">
				<layoutData>
					<l:GridData span="XL11 L11 M11 S12"/>
				</layoutData>
			</MultiInput>
			<core:ExtensionPoint name="extension_details_top_left"/>
			<!-- ATTACHMENTS -->
			<Label text="{i18n>BLOG_OBJECT_TIT_ATTACHMENTS}" class="sapInoBlogModifyLabel" />
			<VBox>
				<mvc:XMLView 
			    viewName="sap.ino.vc.attachment.Attachment"
                class="sapInoFormUploadCollection"
                app:editable="true"></mvc:XMLView>
				<core:ExtensionPoint name="extension_details_top_left"/>
				<layoutData>
					<l:GridData span="XL11 L11 M11 S12"/>
				</layoutData>
			</VBox>
		</f:SimpleForm>
	</l:Grid>
</core:FragmentDefinition>