<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls">
    <Panel id="campaignComment" width="auto" class="sapInoHomeTitledPanel sapInoHomepageBord sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader sapInoCampaignCommentHeader" active="true" press="onNavigateToComment" tooltip="{i18n>CAMPAIGN_HOME_PANEL_COMMENTS_NAVIGATE}">
				<Title id="panelTitle" text="{i18n>CAMPAIGN_HOME_PANEL_COMMENT}"/>
				<ToolbarSpacer />
				<Button icon="sap-icon://navigation-right-arrow" press="onNavigateToComment" id="navigationRightArrowButton" tooltip="{i18n>CAMPAIGN_HOME_PANEL_COMMENTS_NAVIGATE}"/>
			</Toolbar>
		</headerToolbar>
		<content>
            <List id="campaginCommentList" 
                  noDataText="{i18n>CAMPAIGN_LIST_FLD_NO_COMMENT}"
                  items="{
                        path: 'data>Comments',
                        sorter:[{path: 'CHANGED_AT', descending: true}],
                        length: 3
                        }" 
                   showSeparators="None">
                <CustomListItem >
                    <HBox>
                        <ino:IdentityCard 
                                id="campaignHomeComment" 
                                identityPress="onOpenIdentityQuickView"
                                identityId="{data>CHANGED_BY_ID}"
                                userImageUrl="{path: 'data>CHANGED_BY_IMAGE_ID', formatter:'.formatter.userImage' }" 
                                imageSize="S"
                                class="sapInoCampaignCommentIdentity">
                        </ino:IdentityCard>
                        <VBox class="sapInoCampaignCommentBubbleDialog">
                            <Link id="campaignHomeCommentUserId" class="sapInoCampaignCommentText" text="{data>CHANGED_BY_NAME}" press="commentMixinOnUserPressed"/>
                            <Label class="sapInoCampaignCommentTimeStamp " text="{path: 'data>CHANGED_AT', type: 'sap.ui.model.type.DateTime', formatOptions: { relative: false}}" />
                            <Text class="sapInoCampaignCommentText" text="{data>COMMENT}" width="90%" />
                        </VBox>
                    </HBox>
                </CustomListItem>
            </List>
        </content>
    </Panel>
</core:FragmentDefinition>