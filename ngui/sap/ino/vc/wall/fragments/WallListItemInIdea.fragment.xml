<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:wall="sap.ino.wall">
    <CustomListItem 
        type="Active"
        press="onItemPress"
        ariaLabelledBy="not-available-id">
        <core:InvisibleText
            text="{i18n>ACC_FLD_WALL_PREVIEW}">
        </core:InvisibleText>
        <wall:WallPreview 
	        owner="{object>CREATED_BY_NAME}"
	        hits="{path: 'object>VIEW_COUNT', type:'sap.ui.model.type.Integer', formatOptions: { style: 'short'}}"
	        textOnly="true"
	    	showRemoveIcon="{view>/EDITABLE}"
	        remove=".onWallRemove">
        </wall:WallPreview>
    </CustomListItem >
</core:FragmentDefinition>