<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:wall="sap.ino.wall">
    <CustomListItem 
        type="Active"
        press="onWallListItemPress"
        ariaLabelledBy="not-available-id">
        <core:InvisibleText
            text="{i18n>ACC_FLD_WALL_PREVIEW}">
        </core:InvisibleText>
        <wall:WallPreview 
            owner="{data>CREATED_BY_NAME}"
	        hits="{path: 'data>VIEW_COUNT', type:'sap.ui.model.type.Integer', formatOptions: { style: 'short'}}"
	        textOnly="true">
        </wall:WallPreview>
    </CustomListItem >
</core:FragmentDefinition>