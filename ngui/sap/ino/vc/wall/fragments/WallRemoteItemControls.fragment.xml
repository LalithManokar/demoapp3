<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
            <FlexBox height="1px"
                class="sapInoDivideLine"
                justifyContent="Center">
                <FlexBox
                    width="96%"
                    >
                </FlexBox>
            </FlexBox>
            <VBox visible="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }">
                <FlexBox direction="Column" alignItems="Center">
                    <HBox width="144px" alignItems="Center" justifyContent="SpaceBetween">
         	        	<Button icon="sap-icon://navigation-left-arrow" press="onMoveLeft"/>
         	        	<VBox height="144px" justifyContent="SpaceBetween">
             		        <Button icon="sap-icon://navigation-up-arrow" press="onMoveUp" />
             		        <Button icon="sap-icon://back-to-top" press="onToFront" />
        		            <Button icon="sap-icon://navigation-down-arrow" press="onMoveDown"/>
         	        	</VBox>
        		        <Button icon="sap-icon://navigation-right-arrow" press="onMoveRight"/>   
                    </HBox>
                </FlexBox>
    	        <Slider change="onSliderChange" max="400" value="{wallremote>/SLIDER/VALUE}"/>
	        </VBox>
</core:FragmentDefinition>