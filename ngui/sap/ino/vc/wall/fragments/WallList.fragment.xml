<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ino="sap.ino.controls"
	xmlns:l="sap.ui.layout">
	<Panel width="auto" class="sapInoHomeTitledPanel sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader" active="true" press="onNavigateToWalls" tooltip="{i18n>HOMEPAGE_PANEL_WALLS_NAVIGATE}">
				<Title text="{i18n>WALL_LIST_MIT_MY}"/>
				<ToolbarSpacer />
				<Button icon="sap-icon://navigation-right-arrow" press="onNavigateToWalls" tooltip="{i18n>HOMEPAGE_PANEL_WALLS_NAVIGATE}"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<ino:WrappingList
                visible="{= !${device>/system/phone} }"
                id="wallList"
                noDataText="{i18n>WALL_LIST_FLD_NO_WALL}"
                growing="false"
                growingThreshold="4"
                growingScrollToLoad="false"
                wrapping="true"
                class="sapInoListHideGrowing"></ino:WrappingList>
			<Carousel
                id="wallCarousel"
                visible="{= ${device>/system/phone} }"
                loop="true"
                class="sapInoMyWallCarousel sapInoHomepageCarouselMargin"></Carousel>
		</content>
	</Panel>
</core:FragmentDefinition>