<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core" >
    <Dialog
        contentWidth="700px"
        contentHeight="400px"
        stretch="{= ${device>/system/phone} }"
        horizontalScrolling ="false"
        beforeOpen="onWallPickerOpen"
        afterClose="onWallPickerAfterClose">
        <customHeader>
            <OverflowToolbar class="sapMBar" design="Auto">
                <ToolbarSpacer/>
                <Button id="templatePickerFilterButton" 
                    class="sapInoTitleButton" 
                    iconFirst="false" 
                    text="{path : 'view>/Picker/VARIANT', formatter : '.objectListFormatter.variantTitle'}" 
                    icon="sap-icon://arrow-down" 
                    press="onListVariants"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </customHeader>
        <content>
            <mvc:XMLView viewName="sap.ino.vc.wall.TemplatePicker" />
        </content>
        <endButton>
            <Button text="{i18n>BTN_CANCEL}" press="onWallPickerCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>