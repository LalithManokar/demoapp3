<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ActionSheet
		showCancelButton="false"
		placement="Bottom">
		<buttons>
			<Button text="{i18n>WALL_LIST_BUT_ADD_MENU_CREATE_WALL}" press="onCreateWall"/>
			<Button text="{i18n>WALL_LIST_BUT_ADD_MENU_CREATE_FROM_TEMPLATE}" press="onCreateWallFromTemplate"/>
			<Button text="{i18n>BTN_CANCEL}" press="onCreateWallCancel" visible="{= ${device>/system/phone} }" type="Reject"/>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>