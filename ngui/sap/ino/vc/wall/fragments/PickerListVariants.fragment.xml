<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		showHeader="false"
		placement="Bottom"
		verticalScrolling="true"
		horizontalScrolling="false">
	    <List 
            items="{
                path: 'list>/Picker/Variants/Values'
            }"
            width="100%">
            <StandardListItem
                title="{path : 'list>TEXT', formatter : '.formatter.text'}"
        		type="Active"
        		press="onVariantBasePress">
        	</StandardListItem>
        </List>
    </Popover>
</core:FragmentDefinition>