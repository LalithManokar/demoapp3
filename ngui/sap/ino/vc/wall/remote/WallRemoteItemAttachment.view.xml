<mvc:View
        controllerName="sap.ino.vc.wall.remote.WallRemoteItemAttachment"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:ino="sap.ino.controls"
        xmlns:u="sap.ui.unified">
    <Page>
        <customHeader>
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemHeader" type="XML" />
        </customHeader>
        <f:SimpleForm 
            class="sapUiWallRemoteItem"
            layout="{view>/Layouts/SimpleFormLayout/layout}"
            labelSpanL="{view>/Layouts/SimpleFormLayout/labelSpanL}"
            labelSpanM="{view>/Layouts/SimpleFormLayout/labelSpanM}"
            emptySpanL="{view>/Layouts/SimpleFormLayout/emptySpanL}"
            emptySpanM="{view>/Layouts/SimpleFormLayout/emptySpanM}">
            <f:content>
                <Label text="{i18n>WALL_ITEM_DESCRIPTION}"/>
                <Input enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  id="title" value="{object>CONTENT/CAPTION}" change="onChange" maxLength="500"/>
                <Label text="{i18n>WALL_ITEM_FILE}"/>
                <HBox alignItems="Center" justifyContent="SpaceBetween">
                <u:FileUploader 
                    id="imageUploader"
                    uploadUrl="{view>/ATTACHMENT_UPLOAD_URL}" multiple="false"
                    buttonOnly="true" buttonText="{i18n>WALL_ITEM_FILE_SELECT}" icon="sap-icon://upload"
                    change="onFileUploaderChange" uploadComplete="onFileUploaderComplete" uploadOnChange="true"
                    useMultipart="false" sendXHR="true"
                    visible="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }" 
                    mimeType="/*"/>
                    <Button text="{i18n>WALL_ITEM_ATTACHMENT_CLEAR}" press="onClear" enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"/>
                </HBox>
                <core:Icon id="attachmentIcon" src="sap-icon://document" size="70px" color="#007cc0"
                           visible="{=!! ${object>Attachment} &amp;&amp; ${object>Attachment}.length > 0}"/>
            </f:content>
        </f:SimpleForm>
        <footer>  
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemFooter" type="XML" />
        </footer>
    </Page>
</mvc:View>
