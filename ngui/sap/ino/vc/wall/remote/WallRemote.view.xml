<mvc:View
    controllerName="sap.ino.vc.wall.remote.WallRemote"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:wall="sap.ino.wall">
    <Page>
        <customHeader>
            <Toolbar  class="sapMBar" design="Auto">
                <core:Fragment fragmentName="sap.ino.vc.commons.fragments.NavBackButton" type="XML" />
                <ToolbarSpacer/>
                <Text id="title" text="{wall>/NAME}" visible="{= !(${view>/edit} &amp;&amp; ${wall>/WALL_ADMINISTRABLE} &amp;&amp; !${wallremote>/Offline}) }" />
                <Input id="inputTitle" value="{wall>/NAME}" visible="{= ${view>/edit} &amp;&amp; ${wall>/WALL_ADMINISTRABLE} &amp;&amp; !${wallremote>/Offline} }" change="onTitleChange"/>
                <ToolbarSpacer/>
                   <ToggleButton 
                        icon="sap-icon://edit"
                        press="onEditPressed"
                        pressed="{= ${view>/edit}}"
                        visible="{wall>/WALL_EDITABLE}"/>
                   <Button 
                        id="editButton"
                        icon="sap-icon://add"
                        press="onCreateItemPressed"
                        visible="{wall>/WALL_EDITABLE}"/>
                    <ToggleButton
                        id="offlineButton"
                        icon="{= ${wallremote>/Offline} ? 'sap-icon://disconnected' : 'sap-icon://connected'}"
                        pressed="{= ${wallremote>/Offline}}"
                        press="onOfflineMode"
                        visible="{wall>/WALL_EDITABLE}"/>

            </Toolbar>
        </customHeader>
        <content>   
	        <PullToRefresh
				id="pullToRefresh"
				visible="{=(${device>/support/touch}) ? true : false}"
				refresh="onRefresh" />
			<List   
			    id="wallRemotelist"
                growing="true"
                delete="onItemDelete"
                growingScrollToLoad="true"
                swipe="onListSwipe"
                itemPress="onItemPress">
                <swipeContent>
        			<Button
        			    id="listDeleteButton"
        				text="{i18n>WALL_REMOTE_DEL_ITEM}"
        				type="Reject"
        				press="onItemDelete" />
        		</swipeContent>
            </List>
        </content>
        <footer>
            <Toolbar>
            <Button visible="{= ${wallremote>/Offline} &amp;&amp; ${wallremote>/OfflineChanges}}"
            type="Accept"
            width="100%"
            text="{i18n>WALL_REMOTE_BTN_SHARE}"
            press="onActivateAllItems"/> 
            
            <Button visible="{= ${view>/edit} &amp;&amp; ${wall>/WALL_ADMINISTRABLE} &amp;&amp; !${wallremote>/Offline}}"
            type="Reject"
            width="100%"
            text="{i18n>WALL_REMOTE_BTN_DEL_WALL}"
            press="onWallDelete"/>
            
            <Button visible="{= !${view>/edit} &amp;&amp; ${wall>/WALL_ADMINISTRABLE} &amp;&amp; !${wallremote>/Offline}}"
            type="Accept"
            width="100%"
            text="{i18n>WALL_REMOTE_BTN_CREATE_IDEA_FROM_WALL}"
            press="onCreateIdeaFromWall"/>
                        
            <Button visible="{= ${view>/edit} &amp;&amp; ${wallremote>/Offline} &amp;&amp; ${wallremote>/OfflineChanges}}"
            type="Reject"
            width="100%"
            text="{i18n>WALL_REMOTE_BTN_DISCARD_ALL}"
            press="onDiscardChanges"/> 
        </Toolbar>
        </footer>
    </Page>
</mvc:View>