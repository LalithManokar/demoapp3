<mvc:View
        controllerName="sap.ino.vc.wall.remote.WallRemoteItemArrow"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.ui.layout.form"
        xmlns:ino="sap.ino.controls"
        xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Page>
        <customHeader>
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemHeader" type="XML" />
        </customHeader>
        <f:SimpleForm
            class="sapUiWallRemoteItem"
            editable="true"
            layout="{view>/Layouts/SimpleFormLayout/layout}"
            labelSpanL="{view>/Layouts/SimpleFormLayout/labelSpanL}"
            labelSpanM="{view>/Layouts/SimpleFormLayout/labelSpanM}"
            emptySpanL="{view>/Layouts/SimpleFormLayout/emptySpanL}"
            emptySpanM="{view>/Layouts/SimpleFormLayout/emptySpanM}"
            id="wallRemoteItemForm">
            <f:content>
                <Label text="{i18n>WALL_ITEM_TITLE}"/>
                <Input enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  id="title" value="{object>CONTENT/TEXT}" change="onChange" maxLength="500"/>
    		    <Label text="{i18n>WALL_ITEM_STYLE}"/>
    		    <HBox>
        		    <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false"  class="sapInoWallRemoteToggleButton" app:STYLE="SOLID" 
        		    icon="{=${object>CONTENT/STYLE} === 'SOLID' ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineSolid_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineSolid.png'}" 
        		    press="onTogglePressed" />
    		        <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:STYLE="DASHED" 
    		        icon="{=${object>CONTENT/STYLE} === 'DASHED' ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineDashed_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineDashed.png'}" 
    		        press="onTogglePressed" />
    		        <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:STYLE="DOTTED" 
    		        icon="{=${object>CONTENT/STYLE} === 'DOTTED' ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineDotted_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineDotted.png'}" 
    		        press="onTogglePressed" />
    		    </HBox>
    		    <Label text="{i18n>WALL_ITEM_THICKNESS}"/>
    		    <HBox>
        		    <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:THICKNESS="2" 
        		    icon="{=${object>CONTENT/THICKNESS} === 2 ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/line3_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/line3.png'}" 
        		    press="onTogglePressed" />
    		        <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:THICKNESS="4" 
    		        icon="{=${object>CONTENT/THICKNESS} === 4 ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/line4_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/line4.png'}" 
    		        press="onTogglePressed" />
    		        <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:THICKNESS="6" 
    		        icon="{=${object>CONTENT/THICKNESS} === 6 ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/line5_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/line5.png'}" 
    		        press="onTogglePressed" />
    		    </HBox>
                <Label text="{i18n>WALL_ITEM_HEAD_STYLE}"/>
                <HBox>
                    <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:HEAD_STYLE="NONE" 
                    icon="{=${object>CONTENT/HEAD_STYLE} === 'NONE' ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineNone_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineNone.png'}" 
                    press="onTogglePressed" />
                    <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:HEAD_STYLE="START" 
                    icon="{=${object>CONTENT/HEAD_STYLE} === 'START' ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineStart_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineStart.png'}"
                    press="onTogglePressed" />
                    <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:HEAD_STYLE="END" 
                    icon="{=${object>CONTENT/HEAD_STYLE} === 'END' ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineEnd_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineEnd.png'}"
                    press="onTogglePressed"/>
		            <ToggleButton enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  iconDensityAware="false" class="sapInoWallRemoteToggleButton" app:HEAD_STYLE="BOTH" 
		            icon="{=${object>CONTENT/HEAD_STYLE} === 'BOTH' ? '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineBoth_white.png' : '/sap/ino/ngui/sap/ino/controls/themes/base/img/toggleButtons/lineBoth.png'}"
		            press="onTogglePressed" />
                </HBox>
    		    <Label text="{i18n>WALL_ITEM_COLOR}"/>
            	<ino:ColorPickerLite visible="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  id="colorPicker" change="onChange" color="{object>CONTENT/COLOR}" />
            </f:content>
        </f:SimpleForm>
        <footer>  
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemFooter" type="XML" />
        </footer>
    </Page>
</mvc:View>