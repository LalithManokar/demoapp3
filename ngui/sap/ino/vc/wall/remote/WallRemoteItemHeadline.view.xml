<mvc:View
        controllerName="sap.ino.vc.wall.remote.WallRemoteItemHeadline"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <customHeader>
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemHeader" type="XML" />
        </customHeader>
        <f:SimpleForm
            class="sapUiWallRemoteItem"
            editable="true"
            layout="{view>/Layouts/SimpleFormLayout/layout}"
            labelSpanL="{view>/Layouts/SimpleFormLayout/labelSpanL}"
            labelSpanM="{view>/Layouts/SimpleFormLayout/labelSpanM}"
            emptySpanL="{view>/Layouts/SimpleFormLayout/emptySpanL}"
            emptySpanM="{view>/Layouts/SimpleFormLayout/emptySpanM}">
            <f:content>
                <Label text="{i18n>WALL_ITEM_TITLE}"/>
                <Input id="title" value="{object>CONTENT/TEXT}" change="onChange" maxLength="500"
                    enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"/>
                <Label text="{i18n>WALL_ITEM_STYLE}" />
                <Select
                    id="styleSelect"
                    change="onChange"
                    selectedKey="{object>CONTENT/STYLE}"
                    enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"/>
                <Label text="{i18n>WALL_ITEM_SIZE}" />
                    <Select
                    id="sizeSelect"
                    change="onChange"
                    selectedKey="{object>CONTENT/SIZE}"
                    enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"/>
            </f:content>
        </f:SimpleForm>
        <footer>  
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemFooter" type="XML" />
        </footer>
    </Page>
</mvc:View>