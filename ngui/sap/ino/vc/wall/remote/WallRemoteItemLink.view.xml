<mvc:View
        controllerName="sap.ino.vc.wall.remote.WallRemoteItemLink"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <customHeader>
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemHeader" type="XML" />
        </customHeader>
        <f:SimpleForm 
            class="sapUiWallRemoteItem"
            layout="{view>/Layouts/SimpleFormLayout/layout}"
            labelSpanL="{view>/Layouts/SimpleFormLayout/labelSpanL}"
            labelSpanM="{view>/Layouts/SimpleFormLayout/labelSpanM}"
            emptySpanL="{view>/Layouts/SimpleFormLayout/emptySpanL}"
            emptySpanM="{view>/Layouts/SimpleFormLayout/emptySpanM}">
            <f:content>
                <Label text="{i18n>WALL_ITEM_TITLE}"/>
                <Input enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  id="title" value="{object>CONTENT/TEXT}" change="onChange" maxLength="500"/>
                <Label text="{i18n>WALL_ITEM_ICON_TYPE}" />
                <Select
                    id="iconSelect"
                    change="onChange"
                    enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }" 
                    selectedKey="{object>CONTENT/ICON}"/>
                <Label text="{i18n>WALL_ITEM_URL}" />
                <Input id="url" enabled="{ path:'object>WALL_ID', formatter:'.formatter.wallUpdateEnabledFormatter' }"  value="{object>CONTENT/URL}" change="onChange" maxLength="500"/>
            </f:content>
        </f:SimpleForm>
        <footer>  
            <core:Fragment fragmentName="sap.ino.vc.wall.fragments.WallRemoteItemFooter" type="XML" />
        </footer>
    </Page>
</mvc:View>