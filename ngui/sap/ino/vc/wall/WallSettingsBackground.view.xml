<mvc:View controllerName="sap.ino.vc.wall.WallSettingsBackground"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:wall="sap.ino.wall" xmlns:layout="sap.ui.layout"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Text text="{i18n>WALL_SETTING_BACKGROUND_MISSING_PERMISSION}"
		visible="{=!${object>WALL_ADMINISTRABLE}}">
	</Text>
	<HBox id="tiles" visible="{object>WALL_ADMINISTRABLE}" class="sapInoWallSettingsBg">
	    <Button id="colorOpener" press="onColorOpener" icon="sap-icon://palette"
			    class="sapInoWallSettingsBgPreview sapInoWallSettingsColorSelectorButton sapInoWallSettingsColorSelectorButtonNormal">
		</Button>
		<layout:VerticalLayout id="customImageUploadOpener" class="sapInoWallSettingsBgCustomImage">
			<wall:DropUpload id="customImageUpload"
				tooltip="{i18n>WALL_DROPUPLOAD_TOOLTIP_BGIMAGE}" change="onCustomImageUpload"
				class="sapInoWallSettingsBgUploader">
			</wall:DropUpload>
			<VBox>
			<CheckBox enabled="{= ${object>BackgroundImage}.length > 0}"
    				selected="{ path:'object>BACKGROUND_IMAGE_REPEAT', formatter:'.formatter.toBool'}"
    				text="{i18n>WALL_SETTING_BACKGROUND_REPEAT}" width="100px" select="onRepeatChange"
    				class="sapInoWallSettingsBgRepeat"/>
			<layout:HorizontalLayout class="sapInoWallSettingsBgUploaderZoom">
				<Slider enabled="{= ${object>BackgroundImage}.length > 0}" min="10" max="100" width="70px"
					value="{ path:'object>BACKGROUND_IMAGE_ZOOM', formatter:'.formatter.atLeastZero'}"
					liveChange="onZoomChange" class="sapInoWallSettingsBgUploaderZoomSlider">
				</Slider>
				<Label
					text="{ path:'object>BACKGROUND_IMAGE_ZOOM', formatter:'.formatter.asPercent'}"
					class="sapInoWallSettingsBgUploaderZoomLabel">
				</Label>
    		</layout:HorizontalLayout>
    	    </VBox>
		</layout:VerticalLayout>
	</HBox>
</mvc:View>