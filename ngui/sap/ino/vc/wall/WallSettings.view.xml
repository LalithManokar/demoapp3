<mvc:View controllerName="sap.ino.vc.wall.WallSettings" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:wall="sap.ino.wall"
	xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
	<Panel headerText="{i18n>WALL_SETTING_PANEL_INFO}" expandable="true"
		expanded="true" expandAnimation="true" expand="handleSettingsChange">
		<form:Form editable="false" class="sapInoGenericWallSettings"
			id="wallSettingsLayout">
			<form:layout>
				<form:ResponsiveGridLayout labelSpanL="3"
					labelSpanM="3" labelSpanS="3" emptySpanL="1" emptySpanM="1"
					columnsL="9" columnsM="9" />
			</form:layout>
			<form:formContainers>
				<form:FormContainer>
					<form:formElements>
						<form:FormElement label="{i18n>WALL_SETTING_CREATED_BY}">
							<form:fields>
								<Text text="{object>CREATED_BY_NAME}">
								</Text>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>WALL_SETTING_CREATED_ON}">
							<form:fields>
								<Text
									text="{ path: 'object>CREATED_AT', formatter:'.formatter.toRelativeDate' }">
								</Text>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>WALL_SETTING_EDITABLE}">
							<form:fields>
								<Text
									text="{ path: 'object>WALL_EDITABLE', formatter:'.formatter.isEditableText' }">
								</Text>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>WALL_SETTING_LAST_CHANGE}">
							<form:fields>
								<Text
									text="{ path: 'object>CHANGED_AT', formatter:'.formatter.toRelativeDate' }">
								</Text>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>WALL_SETTING_VIEW_COUNT}">
							<form:fields>
								<Text
									text="{ path: 'object>VIEW_COUNT', formatter:'.formatter.atLeastOne' }">
								</Text>
							</form:fields>
						</form:FormElement>
					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
		</form:Form>
	</Panel>
	<Panel headerText="{i18n>WALL_SETTING_PANEL_ACTIONS}" expandable="true"
		expanded="{= !${device>/system/tablet} }" expandAnimation="true" expand="handleSettingsChange">
		<VBox>
			<HBox>
				<Button text="{i18n>WALL_SETTING_PANEL_ACTION_DELETE}" press="onDelete"
					visible="{object>WALL_ADMINISTRABLE}" class="sapUiTinyMarginEnd">
				</Button>
				<Button text="{i18n>WALL_SETTING_PANEL_ACTION_COPY}" press="onCopy"
					class="sapUiTinyMarginEnd">
				</Button>
				<Button text="{i18n>WALL_SETTING_PANEL_ACTION_SAVE_AS_TEMPLATE}"
					press="onSaveAsTemplate"
					visible="{ path:'object>WALL_TYPE_CODE', type:null, formatter:'.formatter.isTypeWall' }"
					class="sapUiTinyMarginEnd">
				</Button>
				<Button text="{i18n>WALL_SETTING_PANEL_ACTION_CREATE_FROM_TEMPLATE}"
					press="onCreateFromTemplate"
					visible="{ path:'object>WALL_TYPE_CODE', type:null, formatter:'.formatter.isTypeTemplate' }"
					class="sapUiTinyMarginEnd">
				</Button>
				<Button text="{i18n>WALL_SETTING_PANEL_ACTION_CREATE_IDEA_FROM_WALL}"
					press="onCreateIdeaFromWall" class="sapUiTinyMarginEnd">
				</Button>
			</HBox>
			<HBox class="sapUiTinyMarginTop">
				<Label text="{i18n>WALL_SETTING_PANEL_ACTION_AUTO_SYNC}"
					visible="{ path:'object>IS_LOCKED', type:null, formatter:'.formatter.toBoolNot' }"
					class="sapInoWallSettingsAutoSync sapUiTinyMarginEnd">
				</Label>
				<Switch id="autoSyncSwitch"
					visible="{ path:'object>IS_LOCKED', type:null, formatter:'.formatter.toBoolNot' }"
					change="onAutoSync" class="sapUiTinyMarginEnd">
				</Switch>
			</HBox>
		</VBox>
	</Panel>
	<Panel headerText="{i18n>WALL_SETTING_PANEL_SHARING_USER}"
		expandable="true" expanded="{= !${device>/system/tablet} }" expandAnimation="true" expand="handleSettingsChange">
		<VBox>
			<HBox>
				<Input id="suggestUser" type="Text"
					placeholder="{i18n>WALL_SETTING_SHARING_USER_PLACEHOLDER}" tooltip="{i18n>WALL_SETTING_SHARING_USER_TOOLTIP}"
					maxPopupItems="10" displaySecondaryValues="true" showSuggestion="true"
					suggest="handleSuggest" suggestionItemSelected="addUser"
					visible="{object>WALL_ADMINISTRABLE}" filterSuggests="true"
					class="sapUiTinyMarginEnd" width="300px">
				</Input>
				<Button text="{i18n>WALL_SETTING_SHARING_USER_ADD}" visible="{object>WALL_ADMINISTRABLE}"
					press="addUser" class="sapUiTinyMarginEnd">
				</Button>
			</HBox>
			<List items="{object>Permissions}"
				mode="{ path:'object>WALL_ADMINISTRABLE', formatter:'.formatter.isModeDelete' }"
				delete="removeUser" noDataText="{i18n>WALL_SETTING_SHARING_USER_NOT_DEFINED}"
				class="sapUiTinyMarginTop">
				<InputListItem label="{object>IDENTITY_NAME}"
					editable="{object>/WALL_ADMINISTRABLE}">
					<content>
						<SegmentedButton selectedKey="{object>ROLE_CODE}"
							select="updateUserPermission" enabled="{object>/WALL_ADMINISTRABLE}">
							<items>
								<SegmentedButtonItem text="{i18n>WALL_SETTING_PERMISSION_READ}"
									key="WALL_READER">
								</SegmentedButtonItem>
								<SegmentedButtonItem text="{i18n>WALL_SETTING_PERMISSION_WRITE}"
									key="WALL_WRITER">
								</SegmentedButtonItem>
								<SegmentedButtonItem text="{i18n>WALL_SETTING_PERMISSION_ADMIN}"
									key="WALL_ADMIN">
								</SegmentedButtonItem>
							</items>
						</SegmentedButton>
					</content>
				</InputListItem>
			</List>
		</VBox>
	</Panel>
	<Panel headerText="{i18n>WALL_SETTING_PANEL_BACKGROUND}"
		expandable="true" expanded="{= !${device>/system/tablet} }" expandAnimation="true" expand="handleSettingsChange">
		<mvc:XMLView id="backgroundSettings" viewName="sap.ino.vc.wall.WallSettingsBackground"></mvc:XMLView>
	</Panel>
</mvc:View>