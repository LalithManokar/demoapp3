<core:FragmentDefinition 
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">
    <Table
		id="gamificationReportTable"
		visibleRowCount="15"
		enableColumnReordering="true"
		rowSelectionChange="onGamiTableSelectionChange"
		enableCellFilter="true"
		class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiTinyMarginTop sapUiSmallMarginBottom"
		visible="{= ${view>/List/IS_GAMIFICATION_REPORT}}">
		<columns>
			<Column id="colUserName" hAlign="Begin" sortProperty="USER_NAME" filterProperty="USER_NAME" autoResizable="true">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_USER_NAME}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_USER_NAME}"/>
				<template>
					<m:Text text="{data>USER_NAME}"  wrapping="false"  />
				</template>
			</Column>
			<Column id="colFullName" hAlign="Begin" showFilterMenuEntry="true" sortProperty="NAME" filterProperty="NAME" autoResizable="true">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_FULL_NAME}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_FULL_NAME}"/>
				<template>
					<m:Text text="{data>NAME}"  wrapping="false"  />
				</template>
			</Column>
			<Column id="colCurrentValue" hAlign="Begin" showFilterMenuEntry="true" sortProperty="CURRENT_VALUE" autoResizable="true" filterProperty="CURRENT_VALUE" filterType="sap.ui.model.type.Integer">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_CURRENT_VALUE}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_CURRENT_VALUE}"/>
				<template>
                <m:Link text="{data>CURRENT_VALUE}" wrapping="false"  press="onPressCurrentValue" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_CURRENT_VALUE_LINK}"/>
				</template>
			</Column>
			<Column id="colConsumedValue" hAlign="Begin" showFilterMenuEntry="true" autoResizable="true" sortProperty="CONSUMED_VALUE" filterType="sap.ui.model.type.Integer">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_CONSUMED_VALUE}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_CONSUMED_VALUE}"/>
				<template>
							<m:Text text="{data>CONSUMED_VALUE}" />
				</template>
			</Column>
			<Column id="colDimensionName" hAlign="Begin" showFilterMenuEntry="true" autoResizable="true" sortProperty="DIMENSION_NAME" filterProperty="DIMENSION_NAME">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_DIMENSION_NAME}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_DIMENSION_NAME}"/>
				<template>
							<m:Text text="{data>DIMENSION_NAME}"  wrapping="false" />
				</template>
			</Column>
			<Column id="colStatus" hAlign="Begin" showFilterMenuEntry="true" autoResizable="true" sortProperty="STATUS" filterProperty="STATUS_TEXT">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_STATUS}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_STATUS}"/>
				<template>
									<m:Text text="{data>STATUS_TEXT}" />
				</template>
			</Column>
			<Column id="colRedeem" hAlign="Begin" showFilterMenuEntry="true" autoResizable="true" sortProperty="REDEEM_TEXT" filterProperty="REDEEM_TEXT">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_REDEEM}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_REDEEM}"/>
				<template>
					<m:Text text="{data>REDEEM_TEXT}" />
				</template>
			</Column>
			<Column id="colEmail" hAlign="End" showFilterMenuEntry="true" sortProperty="EMAIL" filterProperty="EMAIL" autoResizable="true">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_EMAIL}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_EMAIL}"/>
				<template>
						<m:Text text="{data>EMAIL}" wrapping="false" />
				</template>
			</Column>
			<Column id="colUnit" hAlign="Begin" showFilterMenuEntry="true" sortProperty="DIMENSION_UNIT" filterProperty="DIMENSION_UNIT" autoResizable="true">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_UNIT}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_UNIT}"/>
				<template>
						<m:Text text="{data>DIMENSION_UNIT}"  wrapping="false"  />
				</template>
			</Column>
			<Column id="colScope" hAlign="Begin" showFilterMenuEntry="true" sortProperty="SCOPE" filterProperty="SCOPE" autoResizable="true">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_SCOPE}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_SCOPE}"/>
				<template>
						<m:Text text="{data>SCOPE}" />
				</template>
			</Column>
			<Column id="colBadge" hAlign="Begin" showFilterMenuEntry="true" sortProperty="BADGE_NAME" filterProperty="BADGE_NAME" autoResizable="true">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_BADGE}" tooltip="{i18n>IDEA_LIST_REWARD_LIST_GAMIFICATION_FLD_BADGE}"/>
				<template>
						<m:Text text="{data>BADGE_NAME}"  wrapping="false"  />
				</template>
			</Column>
		</columns>
	</Table>
</core:FragmentDefinition>