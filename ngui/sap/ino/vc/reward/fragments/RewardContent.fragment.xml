<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ino="sap.ino.controls"
	xmlns:l="sap.ui.layout">
	<l:HorizontalLayout
        id="objectListLayout"
        class="sapInoObjectListLayout">
		<l:VerticalLayout
            id="filterPanel"
            class="sapInoFilterSidePanel"
            visible="{= ${device>/system/desktop} }">
			<core:Fragment id="panelFilterFragment" fragmentName="sap.ino.vc.reward.fragments.Filter" type="XML" />
		</l:VerticalLayout>
		<Dialog
            title="{i18n>LIST_TIT_FILTER_HEADER}"
            visible="{= !${device>/system/desktop} }"
            contentHeight="80%"
            id="filterDialog"
            beforeOpen="createViewModelBackup"
            afterClose="restoreViewModelBackup"
            stretchOnPhone="true">
			<content>
				<core:Fragment id="dialogFilterFragment" fragmentName="sap.ino.vc.reward.fragments.Filter" type="XML" />
			</content>
			<beginButton>
				<Button
                    text="{i18n>BTN_APPLY}"
                    press="onApplyFilter"
                    type="Accept"></Button>
			</beginButton>
			<endButton>
				<Button
                    text="{i18n>BTN_CANCEL}"
                    press="onCancelFilter"
                    type="Reject"></Button>
			</endButton>
		</Dialog>
		<ScrollContainer
            id="scrollContainer"
            horizontal="false"
            vertical="{= !!${view>/List/IS_IDEA_LIST}}"
            height="100%"
            class="sapInoScrollContainer sapInoObjectList">
			<PullToRefresh
                id="pullToRefresh"
                visible="{device>/support/touch}"
                refresh="onRefresh" />
			<core:Fragment id="rewardTableFragment" fragmentName="sap.ino.vc.reward.fragments.RewardTable" type="XML" />
			<core:Fragment id="rewardListFragment" fragmentName="sap.ino.vc.reward.fragments.RewardList" type="XML" />
            <core:Fragment id="rewardTableGamificationFragment" fragmentName="sap.ino.vc.reward.fragments.RewardGamificationReportTable"  type="XML" />						
		</ScrollContainer>
	</l:HorizontalLayout>
</core:FragmentDefinition>