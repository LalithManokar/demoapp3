<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout">
    <NavContainer
        class="sapInoFilterSidePanelNavContainer"
        id="navContainer"
        height="100%"
        width="100%">
         <Page
            id="main"
            showHeader="false">
            
            <!-- height: 99% to avoid unneccessary scrollbars during zoom -->
            <VBox
                id="mainContainer"
                class="sapInoFilterSidePanelContent"
                width="100%"
                alignItems="Start"
                justifyContent="SpaceBetween">
                <VBox class="sapInoFilterSidePanelItemsMainSection" width="100%">
                  	<Bar>
						<contentLeft>
							<Label 
					class="sapUiSmallMarginBegin"
                   text="{path : 'list>/NAME', formatter : '.formatter.text'}"/>
						</contentLeft>
					</Bar>
					<List
                        class="sapUiTinyMarginBottom sapUiSmallMarginTop"
                        mode="SingleSelectMaster"
                        itemPress="onVariantBasePress"
                        items="{
                            path: 'list>/Variants/Values'
                        }"
                        width="100%"
                        showSeparators="None">
						<CustomListItem
                            ariaLabelledBy="showHeader"
                            type="Active"
                            visible="{path:'list>VISIBLE', formatter:'.visibleItem'}"
                            selected="{= ${list>ACTION} === ${view>/List/VARIANT} || ${list>ACTION} === ${view>/Search/VARIANT}}">
							<content>
								<Label
									width="80%"
                                    text="{path : 'list>TEXT', formatter : '.formatter.text'}"
                                    class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom sapInoHierarchyLabel">
									<customData>
										<core:CustomData key="object" value="{list>OBJECT}"/>
									</customData>
								</Label>
							
							</content>
						</CustomListItem>
					</List>
                </VBox>
            </VBox>
            <VBox
                with="100%"
                class="sapInoFilterSidePanelItemsMainSection sapInoFilterSidePanelContentWH">
                <l:VerticalLayout
                    width="100%"
                    class="sapUiContentPadding"
                    visible="{= !${view>/List/IS_GAMIFICATION_REPORT}}"
                    id="filterItems">
                    <Label 
                        id="campaignFilterLabel"
                        text="{i18n>LIST_TIT_FILTER_CAMPAIGN_HEADER}"/>
                    <Input 
                        id="campaignFilterList"
                        width="100%"
                        showValueHelp="true"
                        showSuggestion="true"
                        suggest="onCampaignSuggestion"
                        suggestionItems = "{view>/campaignSuggestion}"
                        valueHelpRequest = "onHandleCampaignFilterHelp"
                        suggestionItemSelected ="onFilterCampaignChange"
                        submit="onClearCampaignFilter"
                        class="sapUiSmallMarginBottom">
                        <suggestionItems>
        					<core:Item text="{view>SHORT_NAME}" key="{view>ID}"/>
        				</suggestionItems>
                    </Input>
                </l:VerticalLayout>
            </VBox>
            <VBox id="btnContainer">
                <l:VerticalLayout
                    class="sapUiContentPadding sapInoFilterSidePanelFilterButtonsWH"
                    width="100%">
                    <Button 
                        icon="sap-icon://sys-cancel"
                        width="100%"
                        text="{i18n>LIST_BTN_RESET_FILTERS}"
                        press="onFilterReset">
                    </Button>
                </l:VerticalLayout>
            </VBox>
        </Page>
    </NavContainer>
</core:FragmentDefinition>