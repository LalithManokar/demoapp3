<core:FragmentDefinition 
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">
    <Table
		id="objectTable"
		visibleRowCount="15"
		enableColumnReordering="true"
		rowSelectionChange="onTableSelectionChange"
		class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiTinyMarginTop sapUiSmallMarginBottom"
		visible="{= !${view>/List/IS_IDEA_LIST} &amp;&amp; !${view>/List/IS_GAMIFICATION_REPORT}}">
		<columns>
			<Column id="colRewardId" hAlign="Begin" sortProperty="ID" visible="false">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_REWARD_ID}" />
				<template>
					<m:Text text="{data>ID}" />
				</template>
			</Column>
			<Column id="colEmployeeName" hAlign="Begin" showFilterMenuEntry="true" sortProperty="EMPLOYEE_NAME">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_EMPLOYEE_NAME}" />
				<template >
				   
					<m:Link enabled="{path:'data>EMPLOYEE_ID',formatter:'.formatter.rewardEmployeeNameLinkEnabled'}" text="{parts:[{path: 'data>EMPLOYEE_NAME'}, {path: 'data>EMPLOYEE_ID'}],formatter: '.formatter.rewardEmployeeName'}" press="onOpenSubmitter" wrapping="false"/>
				   
				</template>
			</Column>
			<Column id="colEmployeeEmail" hAlign="Begin" showFilterMenuEntry="true" sortProperty="EMPLOYEE_EMAIL" visible="false">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_EMPLOYEE_EMAIL}" />
				<template>
					<m:Text text="{data>EMPLOYEE_EMAIL}"/>
				</template>
				<customData>
						<core:CustomData key="exportIgnore" />
				</customData>
			</Column>
			<Column id="colEmployeeId" hAlign="Begin" showFilterMenuEntry="true" sortProperty="USER_NAME" visible="false">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_EMPLOYEE_ID}" />
				<template>
					<m:Text text="{data>USER_NAME}"/>
				</template>
				<customData>
						<core:CustomData key="is_export"  />
				</customData>
			</Column>
			<Column id="colCampaignName" hAlign="Begin" showFilterMenuEntry="true" sortProperty="CAMPAIGN_NAME">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_CAMPAIGN_NAME}" />
				<template>
					<m:Link text="{data>CAMPAIGN_NAME}" href="{path: 'data>CAMPAIGN_ID', formatter: '.formatter.campaignNavigationLink'}" wrapping="false"/>
				</template>
			</Column>
			<Column id="colIdeaName" hAlign="Begin" showFilterMenuEntry="true" sortProperty="IDEA_NAME">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_IDEA_NAME}" />
				<template>
					<m:Link text="{data>IDEA_NAME}" href="{parts: [{path: 'data>IDEA_ID'}, {path: 'view>/List/IDEA_NAVIGATION_SECTION'}], formatter: '.formatter.ideaNavigationLink'}" wrapping="false"/>
				</template>
			</Column>
			<Column id="colIdeaPhase" hAlign="Begin" showFilterMenuEntry="true" sortProperty="IDEA_PHASE_TEXT">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_IDEA_PHASE}" />
				<template>
					<m:Text text="{data>IDEA_PHASE_TEXT}" wrapping="false"/>
				</template>
			</Column>
			<Column id="colContributionShare" hAlign="Begin" showFilterMenuEntry="true" sortProperty="CONTRIBUTION_SHARE" visible="false">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_CONTRIBUTION_SHARE}" />
				<template>
					<m:Text text="{path: 'data>CONTRIBUTION_SHARE', formatter: '.formatter.addPercentage'}"/>
				</template>
			</Column>
			<Column id="colRewardAmount" hAlign="End" showFilterMenuEntry="true" sortProperty="REWARD_AMOUNT">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_REWARD_AMOUNT}" />
				<template>
					<m:Text text="{parts: [{path: 'data>REWARD_AMOUNT'}, {path: 'data>REWARD_UNIT'}], formatter: '.formatter.rewardAmountUnit' }" wrapping="false"/>
				</template>
			</Column>
			<Column id="colRewardShare" hAlign="Begin" showFilterMenuEntry="true" sortProperty="REWARD_SHARE" visible="false">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_REWARD_SHARE}" />
				<template>
					<m:Text text="{path: 'data>REWARD_SHARE', formatter: '.formatter.addPercentage'}"/>
				</template>
			</Column>
			<Column id="colDownloadCount" hAlign="Begin" showFilterMenuEntry="true" sortProperty="DOWNLOAD_COUNT" visible="{= ${view>/List/VARIANT} !== 'rewardobjects'}">
				<m:Label text="{i18n>IDEA_LIST_REWARD_LIST_FLD_DOWNLOAD_COUNT}" />
				<template>
					<m:Text text="{data>DOWNLOAD_COUNT}" wrapping="false"/>
				</template>
			</Column>
		</columns>
	</Table>
</core:FragmentDefinition>