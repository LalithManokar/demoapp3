<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:commons="sap.ui.commons"
	xmlns:core="sap.ui.core"
	xmlns:table="sap.ui.table">
    <Dialog title="{i18n>REGISTER_APPR_TIT_REJECT_REASON}"  contentWidth="35%">
        <VBox>
        <Label text="{i18n>REGISTER_APPR_LABEL_REJECT_REASON}"/>
		<TextArea id="rejectReasonTextArea" class="sapInoRejectTextArea" width="100%" 
		        value="{path: 'register>/REJECT_REASON', 
		                type: 'sap.ui.model.type.String',
		                constraints : {
                                        minLength: 1,
                                        maxLength: 500
                                        } }" 
                liveChange="onRejectReasonLiveChange"
                required="true"
				placeholder = "{i18n>REGISTER_APPR_PLACEHOLDER_REASON_INPUT}"
                rows="4" >
		</TextArea>
		</VBox>
        <beginButton>
            <Button id="rejectReasonBtn" text="{i18n>BTN_OK}" type="Reject" press="onHandleRejectOK"  
            enabled="{parts: [{path: 'register>/REJECT_REASON'}],
                        formatter: '.formatter.enableRejectOKButton'}"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>BTN_CANCEL}" press="onHandleRejectCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>