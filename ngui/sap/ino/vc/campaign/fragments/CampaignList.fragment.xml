<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout">
    <Panel width="auto" class="sapInoHomeTitledPanel sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader" active="true" press="onNavigateToCampaigns" tooltip="{i18n>HOMEPAGE_PANEL_CAMPAIGN_TOOLTIP}">
				<Title text="{i18n>HOMEPAGE_PANEL_CAMPAIGN_OPEN}"/> 
				<ToolbarSpacer />
				<Button icon="sap-icon://navigation-right-arrow" press="onNavigateToCampaigns" tooltip="{i18n>HOMEPAGE_PANEL_CAMPAIGN_TOOLTIP}"/>
			</Toolbar>
		</headerToolbar>
		<content>
		    <List
                id="campaignsList"
                visible="{= ${component>/SHOW_BACKOFFICE} &amp;&amp; !${device>/system/phone} }"
                growing="true"
                growingThreshold="3"
                growingScrollToLoad="false"
                
                class="sapInoListWidthL sapInoListHideGrowing">
                <!--noDataText="{i18n>CAMPAIGN_LIST_FLD_NO_CAMPAIGN}"-->
            </List>
            <Carousel
                id="campaignsCarousel"
                visible="{= !${component>/SHOW_BACKOFFICE} || ${device>/system/phone} }"
                loop="true">
            </Carousel>
        </content>
    </Panel>
</core:FragmentDefinition>
