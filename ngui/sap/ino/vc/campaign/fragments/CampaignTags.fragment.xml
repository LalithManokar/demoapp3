<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ino="sap.ino.controls">
	<Panel id="campaignTags" width="auto" class="sapInoHomeTitledPanel sapInoTopPanelHiddenfooter sapInoHomepageBorder">
	    <headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader">
				<Title id="panelTitle" text="{i18n>CAMPAIGN_HOME_PANEL_TAGS}"/>
				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
		    <HBox class="sapInoCampaignTagsContainer">
		    <Tokenizer id="Tags" class="sapInoWrap" tokens="{data>Tags}" editable="false">
                <tokens>
                    <Token class="sapInoCampaginTagsToken" key="{data>TAG_ID}" text="{data>NAME}" editable="false" press="showPopupTagCard" />
                </tokens>
            </Tokenizer>
            </HBox>
		</content>
	</Panel>
</core:FragmentDefinition>