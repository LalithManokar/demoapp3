<mvc:View
    controllerName="sap.ino.vc.campaign.CampaignManagerList"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:ino="sap.ino.controls"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ino:ColorBar 
    	    backgroundColor="{= !!${data>COLOR_CODE} ? (${path : 'data>COLOR_CODE', formatter : '.formatter.color'}) : undefined }"
    	    class="sapMBar" 
    	    design="Auto">
		<ToolbarSpacer/>
		<Label text="{data>SHORT_NAME}"/>
		<ToolbarSpacer/>
		<core:Fragment fragmentName="sap.ino.vc.commons.fragments.FullScreenButton" type="XML" />
	</ino:ColorBar>
	<Page id="CampaignManagerList" height="inherit"  showHeader="false">
		<content>
			<ino:WrappingList  
			    id="ManagerList"
                showSeparators="Inner"
                items="{path: 'data>Managers', sorter:[{path: 'NAME', descending: true}]}"
                wrapping="true"
                >
					<CustomListItem 
                    type="Active">
						<l:VerticalLayout 
                        width="100%">
							<l:content>
								<ino:IdentityActionCard 
                                identityId="{data>IDENTITY_ID}" 
                                userName="{data>NAME}"
                                userOrganization="{data>ORGANIZATION}"
                                userImageUrl="{ path: 'data>IMAGE_ID', formatter: '.formatter.userImage' }"
                                actionable="false"
                                pinnable="{clipboard>/enabled}"
                                isPinned="{ parts: [{path: 'data>ID'}, {path: 'clipboard>/changed'}], formatter: '.formatIsUserInClipboard' }"
                                pinPressed="onUserPinPressed"
                                identityPress="onOpenIdentityQuickView"
                            />
							</l:content>
						</l:VerticalLayout>
					</CustomListItem >
			</ino:WrappingList>
		</content>
	</Page>
</mvc:View>