<mvc:View
	id="campaignbackoffice"
    controllerName="sap.ino.vc.campaign.BackOfficeHome"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:ino="sap.ino.controls"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page 
        class="sapInoCampaignHomepage"
        id="backofficehomepage"
        showHeader="false"
        showSubHeader="false"
        app:aofSmartControl="true"
        app:aofModel="data"
        app:aofObject="sap.ino.xs.object.campaign.Campaign">
		<HBox 
            visible="{view>/objectExists}"
            class="sapInoBaseHomepageContent sapInoCampaignHomepageContent"
            alignItems="Start"
			justifyContent="Center">
			<VBox>
				<VBox
            	    alignItems="End"
            	    justifyContent="Center">
					<HBox
            		    class="sapInoBaseHomepageButtons"
            		    visible="{ parts: ['user>/privileges/sap.ino.ui::backoffice.access', 'property>/nodes/Root/customProperties/backofficeCampaignPrivilege'], formatter: '.formatter.baseCampaignHomePageButtons' }">
						<core:Fragment id="backofficeButton" fragmentName="sap.ino.vc.commons.fragments.BackofficeToggleButton" type="XML" />
						<core:Fragment id="campaignSettingsButton" fragmentName="sap.ino.vc.campaign.fragments.CampaignSettingsButton" type="XML" />
					</HBox>
				</VBox>
				<HBox>
					<VBox
                    class="sapInoBaseHomepageLeft sapInoCampaignHomepageLeft">
						<VBox id="leftProfileContainer"/>
						<VBox id="leftExtensionContainer"/>
						<VBox id="leftCommentContainer"/>
						<VBox id="leftTagsContainer"/>
						<VBox id="leftReportCampaignActivitiesContainer" />
						<VBox id="leftReportUnchangedIdeasContainer"/></VBox>
					<VBox
                    class="sapInoBaseHomepageCenter sapInoCampaignHomepageCenter">
						<core:Fragment id="bannerFragment" fragmentName="sap.ino.vc.campaign.fragments.Banner" type="XML" class="sapInoCampaignHomeMarginBottom"/>
						<VBox width="100%" id="milestoneContainer"></VBox>
						<VBox id="centerExtensionContainer">
							<core:Fragment id="extensionFragment" fragmentName="sap.ino.vc.campaign.fragments.BackOfficeHomeExtension" type="XML" class="sapInoFloatingBackground"/>
						</VBox>
						<VBox id="centerProfileContainer">
							<core:Fragment id="identityProfileFragment" fragmentName="sap.ino.vc.iam.fragments.IdentityProfile" type="XML" class="sapInoFloatingBackground"/>
						</VBox>
						<core:Fragment id="ideasFragment" fragmentName="sap.ino.vc.idea.fragments.CampaignIdeasBackoffice" type="XML" />
						<core:Fragment id="feedsFragment" fragmentName="sap.ino.vc.campaign.fragments.CampaignFeeds" type="XML" />
						<core:Fragment id="blogsFragment" fragmentName="sap.ino.vc.blog.fragments.BlogsBackoffice" type="XML" />
						<VBox id="centerCommentContainer">
							<core:Fragment id="ideasCommentFragment" fragmentName="sap.ino.vc.comment.fragments.CampaignComment" type="XML"/>
						</VBox>
						<VBox id="centerTagsContainer">
							<core:Fragment id="campaignTagsFragment" fragmentName="sap.ino.vc.campaign.fragments.CampaignTags" type="XML" />
						</VBox>
						<HBox 
                            class="sapInoCampaignHomeCenterSegment"
                            fitContainer="true">
							<VBox id="centerReportCampaignActivitiesSplitContainer">
								<layoutData>
									<FlexItemData minWidth="50%" maxWidth="50%" />
								</layoutData>
							</VBox>
							<VBox id="centerReportUnchangedIdeasSplitContainer">
								<layoutData>
									<FlexItemData minWidth="50%" maxWidth="50%" />
								</layoutData>
							</VBox>
						</HBox>
						<VBox id="centerReportCampaignActivitiesContainer"/>
						<VBox id="centerReportUnchangedIdeasContainer"/></VBox>
					<VBox
                    class="sapInoBaseHomepageRight sapInoCampaignHomepageRight">
						<VBox id="rightReportCampaignActivitiesContainer">
							<core:Fragment id="campaignActivitiesFragment" fragmentName="sap.ino.vc.campaign.fragments.CampaignActivities" type="XML"/>
						</VBox>
						<VBox id="rightReportUnchangedIdeasContainer">
							<core:Fragment id="unchangedIdeasFragment" fragmentName="sap.ino.vc.campaign.fragments.UnchangedIdeas" type="XML"/>
						</VBox>
					</VBox>
				</HBox>
			</VBox>
		</HBox>
		<core:Fragment fragmentName="sap.ino.vc.commons.fragments.ObjectNotExists"
                       type="XML"/>
	</Page>
</mvc:View>