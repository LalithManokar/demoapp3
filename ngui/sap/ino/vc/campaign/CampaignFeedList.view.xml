<mvc:View
    controllerName="sap.ino.vc.campaign.CampaignFeedList"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ino="sap.ino.controls">
    <ino:ColorBar 
    	    backgroundColor="{= !!${data>COLOR_CODE} ? (${path : 'data>COLOR_CODE', formatter : '.formatter.color'}) : undefined }"
    	    class="sapMBar" 
    	    design="Auto">
    	        <ToolbarSpacer/>
    	        <Label text="{data>SHORT_NAME}"/>
    	        <ToolbarSpacer/>
    	        <core:Fragment fragmentName="sap.ino.vc.commons.fragments.RefreshButton" type="XML" />
    	        <core:Fragment fragmentName="sap.ino.vc.commons.fragments.FullScreenButton" type="XML" />
    </ino:ColorBar>
    <Page id="campaignCommentList" height="inherit" class="sapInoFeedListBackgroud" showHeader="false">
        <content>
        	<mvc:XMLView id="campaignFeedListComment" viewName="sap.ino.vc.follow.CampaignFeedList"></mvc:XMLView>
        </content>
    </Page>
</mvc:View>