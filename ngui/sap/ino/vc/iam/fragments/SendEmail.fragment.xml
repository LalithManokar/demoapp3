<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<Dialog
	    class="sapInoSendEmailDialog"
	    contentWidth="840px"
	    stretch="{= ${device>/system/phone} }"
        verticalScrolling="true"
        title="{i18n>MAIL_TITLE_LABEL}">
		<f:SimpleForm
            maxContainerCols="2"
            layout="ResponsiveGridLayout"
            editable="false"
            labelSpanL="1"
			labelSpanM="1"
			emptySpanL="4"
			emptySpanM="4"
			columnsL="1"
			columnsM="1"
            width="100%">
			<f:content>
				<Label text="{i18n>MAIL_TO_LABEL}" required="true"/>
				<Input
				required="true"
				value="{mail>/username}"
				enabled="false">
					<layoutData>
						<l:GridData span="XL11 L11 M11 S11"/>
					</layoutData>
				</Input>
				<Label text="{i18n>MAIL_SUBJECT_LABEL}" required="true"/>
				<Input
				required="true"
				value="{mail>/subject}"
				enabled="true">
					<layoutData>
						<l:GridData span="XL11 L11 M11 S11"/>
					</layoutData>
				</Input>
				<Label text="{i18n>MAIL_CONTENT_LABEL}"/>
				<TextArea value="{mail>/body}" rows="15">
					<layoutData>
						<l:GridData span="XL11 L11 M11 S11"/>
					</layoutData>
				</TextArea>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="{i18n>MAIL_SEND_BUTTON}" type="Accept" press="onEmailDialogSend" />
			<Button text="{i18n>BTN_CANCEL}" press="onEmailDialogCancel" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>