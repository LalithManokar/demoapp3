<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<IconTabBar id="mySettingTabbar" expandable="false" select = "onSettingTabSelect" class="sapUiResponsiveContentPadding sapInoRowTabBar sapInoMySetting">
		<items>
		    <IconTabFilter text="{i18n>USER_BTN_SETTINGS}" icon="sap-icon://action-settings" class="">
				<core:Fragment fragmentName="sap.ino.vc.iam.fragments.ProfileDataTest" type="XML" />
				<OverflowToolbar class="sapInoPersonalizeToolbar">
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>BTN_SAVE}" press="onSettingsOk"/>
				</OverflowToolbar>
			</IconTabFilter>
			<IconTabFilter id="mySettingIdentityCardPage" text="{i18n>MY_SETTINGS_PROFILE_DATA}" icon="sap-icon://personnel-view" class="sapInoMySettingProfile">
				<core:Fragment fragmentName="sap.ino.vc.iam.fragments.IdentityCardPage" type="XML"/>
				<OverflowToolbar class="sapInoPersonalizeToolbar">
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>USER_DETAILS_DOWNLOAD_MY_PERSONAL_DATA}" press="exportProfileData" />
				</OverflowToolbar>
			</IconTabFilter>
			<IconTabFilter text="{i18n>MY_SETTINGS_PROSONALIZE}" icon="sap-icon://user-settings" class="">
				<core:Fragment fragmentName="sap.ino.vc.iam.fragments.PersonalizeSetting" type="XML" />
				<OverflowToolbar class="sapInoPersonalizeToolbar">
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>BTN_SAVE}" press="personalizeSave"/>
				</OverflowToolbar>
			</IconTabFilter>
			<IconTabFilter text="{i18n>MY_SETTINGS_NOTIFICATION}" icon="sap-icon://email" visible="{=${view>/ENABLE_NEW_NOTIFICATION} === false }" class="">
				<core:Fragment fragmentName="sap.ino.vc.iam.fragments.NotificationSetting" type="XML" />
				<OverflowToolbar class="sapInoPersonalizeToolbar">
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>BTN_SAVE}" press="notificationSave"/>
				</OverflowToolbar>
			</IconTabFilter>
			<IconTabFilter text="{i18n>MY_SETTINGS_NOTIFICATION}" icon="sap-icon://email" visible="{=${view>/ENABLE_NEW_NOTIFICATION} === true }" class="">
				<core:Fragment fragmentName="sap.ino.vc.iam.fragments.NewNotificationSetting" type="XML" />
				<OverflowToolbar class="sapInoPersonalizeToolbar">
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>BTN_SAVE}" press="NewNotificationSave"/>
				</OverflowToolbar>
			</IconTabFilter>
			<IconTabFilter text="{i18n>MY_SETTINGS_FEEDS}" icon="sap-icon://feed" visible="{=${view>/ENABLE_FEED_EMAIL} === true}" class="">
				<core:Fragment fragmentName="sap.ino.vc.iam.fragments.NewFeedsSetting" type="XML" />
				<OverflowToolbar class="sapInoPersonalizeToolbar">
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>BTN_SAVE}" press="newFeedsSave"/>
				</OverflowToolbar>
			</IconTabFilter>
			<IconTabFilter text="{i18n>MY_SETTINGS_CHANGE_HISTORY}" icon="sap-icon://customer-history" class="">
				<core:Fragment fragmentName="sap.ino.vc.iam.fragments.IdentityLog" type="XML"/>
			</IconTabFilter>
			<IconTabFilter text="{i18n>MY_SETTINGS_USER_GROUP}" icon="sap-icon://group" visible="{path: 'identityData>/open_group', formatter:'.transGroupVisible'}" class="">  
				<core:Fragment id="mySettingUserGroup" fragmentName="sap.ino.vc.shell.fragments.UserGroup" type="XML" />
				<OverflowToolbar class="sapInoPersonalizeToolbar">
					<ToolbarSpacer/>
					<Button type="Accept" text="{i18n>BTN_SAVE}" press="saveUserGroup"/>
				</OverflowToolbar>
			</IconTabFilter>
		</items>
	</IconTabBar>
</core:FragmentDefinition>
