<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ino="sap.ino.controls">
    <CustomListItem 
        type="Active">
        <l:VerticalLayout 
            width="100%">
            <l:content>
                <ino:IdentityActionCard 
                    identityId="{data>ID}" 
                    userName="{data>NAME}"
                    userOrganization="{data>ORGANIZATION}"
                    userImageUrl="{ path: 'data>IMAGE_ID', formatter: '.formatter.userImage' }"
                    actionable="false"
                    pinnable="{clipboard>/enabled}"
                    isPinned="{ parts: [{path: 'data>ID'}, {path: 'clipboard>/changed'}], formatter: '.formatIsUserInClipboard' }"
                    pinPressed="onUserPinPressed"
                    mailable="{path: 'data>IS_VALID_EMAIL', type:'sap.ino.commons.models.types.IntBooleanType'}"
                    mailPressed="onMailPressed"
                    identityPress="onOpenIdentityQuickView"
                />
            </l:content>
        </l:VerticalLayout>
    </CustomListItem >
</core:FragmentDefinition>