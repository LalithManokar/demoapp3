<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<l:Grid
        class="sapInoEvaluationCriterion"
        defaultSpan="XL11 L11 M10 S10"
        vSpacing="0"
        hSpacing="0">
		<l:content>
			<l:Grid
                class="sapUiSmallMarginTopBottom"
                defaultSpan="XL5 L5 M6 S12"
                vSpacing="0"
                hSpacing="0">
				<l:content>
					<l:Grid
                        defaultSpan="XL12 L12 M12 S12"
                        vSpacing="0"
                        hSpacing="0">
						<l:content>
						    <HBox justifyContent="End" alignItems="Center">
    							<Text
                                    class="sapInoSliderAligned"
                                    text="{:= ${path: 'object>CRITERION_CODE', formatter: '.formatter.criterionCode'}} {:= ${path: 'object>WEIGHT', formatter: '.formatter.getWeight'}}"
                                    textAlign="{= ${device>/system/phone} ? 'Begin' : 'End'}"
                                    width="100%"></Text>
                                <core:Icon src="sap-icon://message-information" visible="{:= ${path: 'object>DEFAULT_LONG_TEXT',formatter: '.formatter.criterionCodeLongTextVisible'}}"  class="sapUiTinyMarginBegin" tooltip="{path: 'object>DEFAULT_LONG_TEXT'}" />
                            </HBox>
							<!--<Text
                            class="sapInoLightText sapInoCriterionHelp"
                            text="{:= ${path: 'object>CRITERION_CODE', formatter: '.formatter.criterionCodeLongText'}}"
                            textAlign="Begin"
                            width="100%"/>-->
						</l:content>
					</l:Grid>
					<l:Grid
                        defaultSpan="XL10 L10 M10 S10"
                        vSpacing="0"
                        hSpacing="0">
						<l:layoutData>
							<l:GridData span="XL5 L5 M4 S12"/>
						</l:layoutData>
						<l:content>
							<l:VerticalLayout width="100%">
								<l:layoutData>
									<l:GridData span="XL2 L2 M2 S2"/>
								</l:layoutData>
								<Text
                                class="sapInoSliderAligned"
                                text="{:= ${object>NUM_VALUE_MIN}}"
                                textAlign="End"
                                visible="{:= ${parts: [{path: 'object>NUM_VALUE_MIN'},
                                                                   {path: 'object>NUM_VALUE_MAX'},
                                                                   {path: 'object>children'},
                                                                   {path: 'object>VALUE_OPTION_LIST_CODE'},
                                                                   {path: 'object>DATATYPE_CODE'}],
                                                      formatter: '.formatter.showAggregatingProgressIndicatorControl'}}"
                                width="100%"></Text>
							</l:VerticalLayout>
							<l:VerticalLayout width="100%">
								<CheckBox
                                    selected="{path: 'object>BOOL_VALUE', type: '.intBoolean'}"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'}, 
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                   formatter: '.formatter.isBooleanControl'}}"/>
								<Select
                                    selectedKey="{path: 'object>TEXT_VALUE'}"
                                    items="{path: 'object>valueOptionList', templateShareable: true}"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                   formatter: '.formatter.isTextVoL'}}"
                                    width="100%">
									<core:Item
                                        key="{:= ${path: 'object>CODE'}}"
                                        text="{:= ${path: 'object>DEFAULT_TEXT'}}"/>
								</Select>
								<Select
                                    selectedKey="{path: 'object>NUM_VALUE'}"
                                    items="{path: 'object>valueOptionList', templateShareable: true}"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                   formatter: '.formatter.isIntegerVoL'}}"
                                    width="100%">
									<core:Item
                                        key="{:= ${path: 'object>NUM_VALUE'}}"
                                        text="{:= ${path: 'object>DEFAULT_TEXT'}}"/>
								</Select>
								<Select
                                    selectedKey="{path: 'object>NUM_VALUE'}"
                                    items="{path: 'object>valueOptionList', templateShareable: true}"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                   formatter: '.formatter.isNumericVoL'}}"
                                    width="100%">
									<core:Item
                                        key="{:= ${path: 'object>NUM_VALUE'}}"
                                        text="{:= ${path: 'object>DEFAULT_TEXT'}}"/>
								</Select>
								<Select
                                    selectedKey="{path: 'object>BOOL_VALUE', type: '.integerType'}"
                                    items="{path: 'object>valueOptionList', templateShareable: true}"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                   formatter: '.formatter.isBooleanVoL'}}"
                                    width="100%">
									<core:Item
                                        key="{:= ${path: 'object>BOOL_VALUE'}}"
                                        text="{:= ${path: 'object>DEFAULT_TEXT'}}"/>
								</Select>
								<Input
                                    description="{:= ${path: 'object>UOM_CODE', formatter: '.formatter.uomCode'}}"
                                    value="{path: 'object>NUM_VALUE'}"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>NUM_VALUE_MIN'},
                                                           {path: 'object>NUM_VALUE_MAX'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                              formatter: '.formatter.showInputControl'}}"
                                    width="100%"/>
								<Slider
                                    max="{:= ${path: 'object>NUM_VALUE_MAX', formatter: '.formatter.toFloat'}}"
                                    min="{:= ${path: 'object>NUM_VALUE_MIN', formatter: '.formatter.toFloat'}}"
                                    step="{:= ${parts: [{path: 'object>NUM_VALUE_MIN'},
                                                        {path: 'object>NUM_VALUE_MAX'},
                                                        {path: 'object>NUM_VALUE_STEP_SIZE'},
                                                        {path: 'object>DATATYPE_CODE'}],
                                                formatter: '.formatter.formatSliderStep'}}"
                                    value="{path: 'object>NUM_VALUE'}"
                                    visible="{:= ${parts: [{path: 'object>NUM_VALUE_MIN'},
                                                           {path: 'object>NUM_VALUE_MAX'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'},
                                                           {path: 'object>DATATYPE_CODE'}],
                                              formatter: '.formatter.isProgressIndicatorControl'}}"
                                    width="100%"/>
								<TextArea
                                    placeholder="{:= ${i18n>EVALUATION_FLD_COMMENT}}"
                                    rows="3"
                                    value="{object>TEXT_VALUE}"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                   formatter: '.formatter.isTextControl'}}"
                                    width="100%"/>
							</l:VerticalLayout>
							<l:VerticalLayout width="100%">
								<l:layoutData>
									<l:GridData span="XL2 L2 M2 S2"/>
								</l:layoutData>
								<Text
                                class="sapInoSliderAligned"
                                text="{:= ${object>NUM_VALUE_MAX}}"
                                textAlign="Begin"
                                visible="{:= ${parts: [{path: 'object>NUM_VALUE_MIN'},
                                                                   {path: 'object>NUM_VALUE_MAX'},
                                                                   {path: 'object>children'},
                                                                   {path: 'object>VALUE_OPTION_LIST_CODE'},
                                                                   {path: 'object>DATATYPE_CODE'}],
                                                      formatter: '.formatter.showAggregatingProgressIndicatorControl'}}"
                                width="100%"></Text>
							</l:VerticalLayout>
							<TextArea
                                class="sapInoEvaluationComment"
                                placeholder="{:= ${i18n>EVALUATION_FLD_COMMENT}}"
                                rows="3"
                                textAlign="Begin"
                                value="{path: 'object>COMMENT'}"
                                visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'}, {path: 'object>COMMENT'}],
                                          formatter: '.formatter.showComment'}}"
                                width="100%">
								<layoutData>
									<l:GridData
                                        indent="XL2 L2 M2 S0"
                                        span="XL10 L10 M10 S12"/>
								</layoutData>
							</TextArea>
						</l:content>
					</l:Grid>
					<l:Grid
                        defaultSpan="XL12 L12 M12 S12"
                        vSpacing="0"
                        hSpacing="0">
						<l:layoutData>
							<l:GridData span="XL2 L2 M2 S12"/>
						</l:layoutData>
						<l:content>
                            <Text
                                class="sapUiTinyMarginBegin sapInoEvalWarningColor"
                                text="{path: 'object>MSG'}"
                                tooltip="{path: 'object>MSG_TOOLTIP'}"
                                visible="{:= ${parts: [{path: 'object>MSG'}], formatter: '.formatter.showWarningMsg'}}"
                                width="100%"></Text>
						</l:content>
					</l:Grid>
				</l:content>
			</l:Grid>
			<Text
                class="sapInoSliderAligned sapUiSmallMarginTopBottom sapInoCriterionValue"
                text="{parts: ['object>DATATYPE_CODE',
                               'object>NUM_VALUE',
                               'object>BOOL_VALUE',
                               'object>TEXT_VALUE',
                               'object>VALUE_OPTION_LIST_CODE',
                               'object>UOM_CODE'],
                       formatter: '.formatter.getFormattedValue'}{:= ${path: 'object>WEIGHT', formatter: '.formatter.getWeightMultiply'}}"
                textAlign="End"
                visible="{:= ${parts: [{path: 'object>NUM_VALUE_MIN'},
                                       {path: 'object>NUM_VALUE_MAX'},
                                       {path: 'object>VALUE_OPTION_LIST_CODE'},
                                       {path: 'object>DATATYPE_CODE'}],
                          formatter: '.formatter.isProgressIndicatorControl'}}"
                width="100%">
				<layoutData>
					<l:GridData span="XL1 L1 M2 S2"/>
				</layoutData>
			</Text>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>