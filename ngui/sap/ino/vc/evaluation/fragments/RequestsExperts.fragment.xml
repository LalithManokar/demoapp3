<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<List class="sapInoExpertsList" items="{path: 'object>EvaluationRequestItems'}" mode="None" noDataText="{i18n>EVALUATION_LBL_NO_EXPERTS_FOUND}">
		<CustomListItem press="onRequestItemPress" type="Active">
			<l:Grid defaultSpan="XL4 L4 M4 S4">
				<Link text="{object>EXPERT_NAME}" href="javascript:void(0)" press="onOpenCreator">
					<customData>
						<core:CustomData key="ID" value="{object>EXPERT_ID}" />
					</customData>
				</Link>
				<HBox>
					<Text class="sapMLabel" text="{i18n>EVALUATION_OBJECT_REQUEST_STATUS}" />
					<Text text="{path: 'object>STATUS_CODE', formatter: '.formatter.ideaStatus'}" />
				</HBox>
				<HBox>
					<Text class="sapMLabel" text="{i18n>EVALUATION_OBJECT_EVALREQUEST_RESULT}"  visible="{parts: ['object>OV_RES_DATATYPE_CODE', 'object>OV_RES_NUM_VALUE', 'object>OV_RES_BOOL_VALUE','object>OV_RES_TEXT_VALUE', 'object>OV_RES_VALUE_OPTION_LIST_CODE', 'object>OV_RES_UOM_CODE'], formatter: '.formatter.isFormattedValueVisible'}" />
					<Text text="{parts: ['object>OV_RES_DATATYPE_CODE','object>OV_RES_NUM_VALUE','object>OV_RES_BOOL_VALUE', 'object>OV_RES_TEXT_VALUE','object>OV_RES_VALUE_OPTION_LIST_CODE','object>OV_RES_UOM_CODE'], formatter: '.formatter.getFormattedValue'}" />
				</HBox>
			</l:Grid>
		</CustomListItem>
	</List>
</core:FragmentDefinition>