<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns="sap.m"
                         xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
		<Button action:STATUS_ACTION_CODE="{status>/EVAL_REWORK}"
		        visible="{status>/V_REWORK}"
				text="{path: 'status>/EVAL_REWORK', formatter: '.formatter.statusActionCode'}"
				type="Default"
				press="onExecuteStatusTransition"/>
		<Button action:STATUS_ACTION_CODE="{status>/EVAL_UNPUBLISH}"
		        visible="{status>/V_UNPUBLISH}"
				text="{path: 'status>/EVAL_UNPUBLISH', formatter: '.formatter.statusActionCode'}"
				type="Default"
				press="onExecuteStatusTransition"/>
		<Button action:STATUS_ACTION_CODE="{status>/EVAL_PUB_SUBMITTER}"
		        visible="{status>/V_PUB_SUBMITTER}"
				text="{path: 'status>/EVAL_PUB_SUBMITTER', formatter: '.formatter.statusActionCode'}"
				type="Accept"
				press="onExecuteStatusTransition"/>
		<Button action:STATUS_ACTION_CODE="{status>/EVAL_PUB_COMMUNITY}"
		        visible="{status>/V_PUB_COMMUNITY}"
				text="{path: 'status>/EVAL_PUB_COMMUNITY', formatter: '.formatter.statusActionCode'}"
				type="Accept"
				press="onExecuteStatusTransition"/>
</core:FragmentDefinition>