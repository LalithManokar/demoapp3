<core:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:control="sap.ino.controls"
    controllerName="sap.ino.vc.evaluation.RequestsForwardList"
    displayBlock="true">
	<VBox class="sapInoForwardList">
		<List
    	    headerText="{i18n>EVALUATIONREQUESTS_HEADER_MIT_FORWARD}"
            showSeparators="Inner" 
            visible="{=${object>Forwards}.length > 0}"
            items="{path : 'object>Forwards', templateShareable: false, sorter:[{path: 'CREATED_AT', descending: true}]}">
			<control:EvalRequestFeedListItem
                toSender="{object>TO_IDENTITY_NAME}"
    		    toSenderPress="onOpenCreatorInToForward"
    		    prefixToSender="{i18n>EVALUATIONREQUESTS_TIT_TO_FORWARD}"
    		    senderPress="onOpenCreatorInForward"
    		    iconPress="onOpenCreatorInForward"
    		    prefixSender="{i18n>EVALUATIONREQUESTS_TIT_BY_FORWARD}"
                sender="{object>FROM_IDENTITY_NAME}"
                icon="{ path:'object>FROM_IDENTITY_IMAGE_ID', formatter:'.formatter.userIcon' }"
                iconDensityAware="false"
                timestamp="{path: 'object>FORWARDED_AT', type: 'sap.ui.model.type.Date', formatOptions: { relative: true}}"
                text="{object>COMMENT_FORWARD}" />
		</List>
	</VBox>
</core:View>