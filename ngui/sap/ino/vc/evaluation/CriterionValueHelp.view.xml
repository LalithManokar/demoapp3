<mvc:View
    controllerName="sap.ino.vc.evaluation.CriterionValueHelp"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <QuickView
        class="sapInoCriterionValueHelp"
        id="criterionValueHelp">
        <pages>
            <QuickViewPage
                header="{parts: [{path: 'object>CRITERION_CODE'}, {path: 'object>criterion/CRITERION_CODE'}], formatter: '.formatter.criterionCodeWrapper'}">
                <QuickViewGroup>
                    <QuickViewGroupElement
                        value="{parts: [{path: 'object>CRITERION_CODE'}, {path: 'object>criterion/CRITERION_CODE'}], formatter: '.formatter.criterionCodeLongTextWrapper'}"/>
                </QuickViewGroup>
            </QuickViewPage>
        </pages>
    </QuickView>
</mvc:View>