<mvc:View
    controllerName="sap.ino.vc.evaluation.RequestsDisplay"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ino="sap.ino.controls"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
    xmlns:blocks="sap.ino.vc.evaluation"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page id="evaluationDisplay" class="sapInoEvaluationRequestsDisplay" 
        height="inherit"
        app:aofSmartControl="true"
        app:aofModel="object"
        app:aofObject="sap.ino.xs.object.evaluation.EvaluationRequest">
		<customHeader>
			<core:Fragment fragmentName="sap.ino.vc.evaluation.fragments.PageCustomHeader"  type="XML"/>
		</customHeader>
		<content>
			<uxap:ObjectPageLayout id="objectpage"  useIconTabBar="true" tabSelect="onTabSelect"  enableLazyLoading="true" visible="{view>/objectExists}">
				<uxap:headerTitle class="sapUiNoMargin">
					<uxap:ObjectPageHeader
                        id="ideaLayoutPageHeader"
                        visible="{= !${device>/system/phone} }"
                        objectTitle="{object>IDEA_NAME}"
                        objectSubtitle="{parts: ['i18n>FLD_BY', 'object>EVALUATOR_NAME', 'object>EVALUATOR_NAME', 'object>CHANGED_AT', 'object>CHANGED_AT'], formatter:'.formatter.alternativeBy'}"                    
                        isObjectIconAlwaysVisible="false"
                        isObjectTitleAlwaysVisible="false"
                        isObjectSubtitleAlwaysVisible="false"
                        isActionAreaAlwaysVisible="true"/>
				</uxap:headerTitle>
				<uxap:headerContent class="sapUiNoMargin">
					<core:Fragment  fragmentName="sap.ino.vc.evaluation.fragments.RequestsHeader" type="XML"/>
				</uxap:headerContent>
				<uxap:sections>
					<uxap:ObjectPageSection id="sectionExperts" title="{i18n>EVALUATIONREQUESTS_MENU_MIT_EXPERT}">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="{i18n>EVALUATIONREQUESTS_MENU_MIT_EXPERT}">
								<uxap:blocks>
									<core:Fragment fragmentName="sap.ino.vc.evaluation.fragments.RequestsExperts" type="XML"/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection id="sectionClarifications" title="{i18n>EVALUATIONREQUESTS_MENU_MIT_CLARIFICATION}" class="sapInoRequestsClarificationSection">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="{i18n>EVALUATIONREQUESTS_MENU_MIT_CLARIFICATION}">
								<uxap:blocks>
									<core:Fragment id="fragmentClarifications" fragmentName="sap.ino.vc.evaluation.fragments.RequestsClarification" type="XML"/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
				</uxap:sections>
			</uxap:ObjectPageLayout>
			<core:Fragment fragmentName="sap.ino.vc.commons.fragments.ObjectNotExists" type="XML"/>
		</content>
		<footer>
			<OverflowToolbar id="footerbar"   visible="{view>/objectExists}">
				<core:Fragment  fragmentName="sap.ino.vc.commons.fragments.MessageLog"  type="XML"/>
				<ToolbarSpacer/>
				<Button
                    visible="{object>/property/actions/update/enabled}"
                    type="Accept"
                    text="{i18n>BTN_EDIT}"
                    press="onEdit"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>