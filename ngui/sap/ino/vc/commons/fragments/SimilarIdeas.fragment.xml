<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls">
    <List
        headerText="{i18n>IDEA_OBJECT_TIT_SIMILAR_IDEAS}" 
        class="sapInoIdeaSimilarIdeasGroup"
        items="{ path: 'similarIdeas>/similarIdeasData', templateShareable: false }"
        width="100%"
        showSeparators="None">
        <CustomListItem>
            <Panel 
                class="sapInoFilterPanel" 
                expandable="true" 
                expanded="true"
                width="100%">
                <headerToolbar >
                    <Toolbar>
                        <Label 
                            tooltip="{path: 'similarIdeas>GROUP_NAME'}" 
                            text="{path : 'similarIdeas>GROUP_NAME', formatter : '.formatter.text'}"/>
                    </Toolbar>
                </headerToolbar>
    			<ino:WrappingList
                    wrapping="true"
                    items="{ path: 'similarIdeas>IDEAS', templateShareable: false }"
                    class="sapInoIdeaSimilarIdeasList">
            		<CustomListItem>
            			<Link text="{parts:['similarIdeas>NAME','similarIdeas>STATUS_CODE'], formatter: '.formatSimilarIdeaName'}" target="_blank" 
                            tooltip="{path: 'similarIdeas>NAME'}" 
            	            href="{path: 'similarIdeas>ID', formatter: '.getIdeaDisplayLink'}" 
            	            class="sapInoIdeaSimilarIdeasListIdea"/>
            		</CustomListItem>
                </ino:WrappingList>
        	</Panel>
    	</CustomListItem>
    </List>
</core:FragmentDefinition>


