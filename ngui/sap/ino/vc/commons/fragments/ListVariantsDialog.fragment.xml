<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
	    title="{path : 'list>/Variants/TITLE', formatter : '.formatter.text'}"
		contentWidth="300px"
        contentHeight="500px">
	    <List 
            items="{
                path: 'list>/Variants/Values'
            }"
            width="100%">
            <StandardListItem
                title="{path : 'list>TEXT', formatter : '.formatter.text'}"
        		type="Active"
        		press="onVariantBasePress">
        	</StandardListItem>
        </List>
        <beginButton>
            <Button text="{i18n>LIST_VARIANTS_BTN_CANCEL}" press="onListVariatsClose"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>