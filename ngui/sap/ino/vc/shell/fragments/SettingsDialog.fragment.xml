<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Dialog
        title="{i18n>SETTINGS_TIT}"
        contentWidth="570px"
        contentHeight="300px"
        stretch="{= ${device>/system/phone} }"
        horizontalScrolling ="false">
        <beginButton>
            <Button text="{i18n>SETTINGS_BTN_OK}" press="onSettingsOk"></Button>
        </beginButton>
        <endButton>
            <Button text="{i18n>SETTINGS_BTN_CANCEL}" press="onSettingsCancel"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>