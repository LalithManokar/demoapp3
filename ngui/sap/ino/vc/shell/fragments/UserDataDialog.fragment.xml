<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
	    contentHeight="600px"
	    contentWidth="800px"
        title="{i18n>USER_DATA_TIT}"
        stretch="{= ${device>/system/phone} }">
		<content>
			<IconTabBar class="sapUiNoMargin" stretchContentHeight="true" select="selectGroupTab" expandable="false">
				<items>
					<IconTabFilter text="{i18n>USER_DETAILS_USER_TAB_TLT}">
						<core:Fragment fragmentName="sap.ino.vc.iam.fragments.IdentityCardPage" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="{i18n>USER_CHANGE_HISTORY_USER_TAB_TLT}">
						<core:Fragment fragmentName="sap.ino.vc.iam.fragments.IdentityLog" type="XML"/>
					</IconTabFilter>
					<IconTabFilter id="userDataGroupPage" text="{i18n>USER_GROUP_USER_GROUP}" visible="{path: 'identityData>/open_group', formatter:'.transGroupVisible'}">
        		        <core:Fragment id="personalDataGroup" fragmentName="sap.ino.vc.shell.fragments.UserGroup" type="XML" />
        		    </IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<beginButton>
			<Button text="{i18n>TERMS_CONDITIONS_BTN_OK}" press="onUserDataClose"></Button>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>