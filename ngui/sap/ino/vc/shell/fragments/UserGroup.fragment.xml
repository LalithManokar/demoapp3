<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core">
    <t:Table id="userGroupTable" class="userGroupTable" selectionMode="MultiToggle" rows="{ path:'USER_GROUPS>/groups', sorter: { path:'GROUP_NAME', descending: false}}" visibleRowCount="10" ariaLabelledBy="userGroupTitle" enableSelectAll="false">
        <t:toolbar>
            <Toolbar>
                <SearchField
					placeholder="{i18n>USER_GROUP_SEARCH_GROUP}"
					value=""
					width="100%"
					search="onSearchUserGroup"/>
            </Toolbar>
        </t:toolbar>
        <t:columns>
            <t:Column filterProperty="GROUP_NAME">
				<Label text="{i18n>USER_GROUP_GROUP_NAME}" />
				<t:template>
					<Text text="{USER_GROUPS>GROUP_NAME}"/>
				</t:template>
			</t:Column>
			<t:Column filterProperty="DESCRIPTION">
				<Label text="{i18n>USER_GROUP_GROUP_DESCRIPTION}" />
				<t:template>
					<Text text="{USER_GROUPS>DESCRIPTION}"/>
				</t:template>
			</t:Column>
        </t:columns>
        <t:extension>
            <CheckBox text="{i18n>USER_GROUP_NONE_GROUP}" select="selectedNoneGroup" visible="{=!!${USER_GROUPS>/hasNoneGroup}}" selected="{USER_GROUPS>/SELECTED_NONE}"/>    
        </t:extension>
    </t:Table>
</core:FragmentDefinition>