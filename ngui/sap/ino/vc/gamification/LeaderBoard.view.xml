<mvc:View
    controllerName="sap.ino.vc.gamification.LeaderBoard"
	xmlns="sap.m"
	xmlns:ino="sap.ino.controls"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:wall="sap.ino.wall">
	<Page 
        id="leaderBoardpage"
        enableScrolling="false" 
        class="sapInoLeaderBoardPage">
		<customHeader>
			<ino:ColorBar 
                backgroundColor="#f4f4f4"
                class="sapMBar" 
                design="Auto">
				<ToolbarSpacer/>
						<Image  src="./ngui/sap/ino/assets/img/leaderBoard/leadboard2x.png"  class="sapInoLeaderBoardTitleImage"/>
				<Label text="{i18n>LEADER_BOARD_TITLE}"/>
				<ToolbarSpacer/>
				<core:Fragment fragmentName="sap.ino.vc.commons.fragments.FullScreenButton" type="XML" />
			</ino:ColorBar>
		</customHeader>
		<content>
		<HBox class="sapInoLeaderBoardSegBtnHbox">
				<SegmentedButton id="leaderBoardSegBtn" class="sapUiSmallMarginBottom sapInoLeaderBoardSegBtn">
			</SegmentedButton>		
		 </HBox>	
			<ScrollContainer
                id="scrollContainer"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapInoObjectList">
				<VBox>
					<List
                        id="leaderBoardList"
                        inset="true"
                        growing="false"
                    />
				</VBox>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>