<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:ino="sap.ino.controls"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<CustomListItem 
        width="100%"
        type="Active"
        press="onItemPress"
        class="sapInoNoticeFlatListItem"
        app:aofSmartControl="true"
        app:aofModel="data"
        app:aofObject="sap.ino.xs.object.idea.Idea">
		<l:VerticalLayout
            width="100%">
			<FlexBox
                width="100%"
                alignItems="Stretch">
				<items>
					<HBox alignContent ="Center" alignItems="Center">
						<layoutData>
							<FlexItemData growFactor="2" />
						</layoutData>
					   <HBox alignContent ="Center" alignItems="Center" width="85%">
					    <VBox alignContent ="Center" alignItems="Center" width="5%">
						<Image  src="{path:'dimension>SEQUENCE', formatter:'.formatter.formatRankImage'}" class ="sapInoLeaderBoardRankImage" 
						        visible="{path:'dimension>SEQUENCE', formatter:'.formatter.formatVisbleRankImage'}"
						        decorative="false"
						        tooltip="{path:'dimension>SEQUENCE', formatter:'.formatter.formatTooltipRank'}"
						        />
			            <Text text="{dimension>SEQUENCE}"  class ="sapInoLeaderBoardRank" 
			                  visible="{path:'dimension>SEQUENCE', formatter:'.formatter.formatVisbleNumber'}"
			                  tooltip="{path:'dimension>SEQUENCE', formatter:'.formatter.formatTooltipRank'}"/>
			             </VBox>     
						<ino:IdentityCard 
                          id="identityBox" 
                          class="sapInoLeaderBoardIdentityCard"
                          identityPress="onOpenIdentityQuickView"
                          identityId="{dimension>USER_ID}"
                          userImageUrl="{ path: 'dimension>IMAGE_ID', formatter: '.formatter.userImage' }"
                          userName="{dimension>USER_NAME}"
                          imageSize="M"/>
						<!--Text text ="{dimension>USER_NAME}" class="sapInoLeaderBoardUserName"/-->
						<Image src="{ path: 'dimension>BADGE_IMAGE_ID', formatter: '.formatter.userImage' }" class="sapInoLeaderBoardBadge"
			                   decorative="false" tooltip ="{dimension>BADGE_NAME}"/>
					   </HBox>
						<Text text ="{i18n>LEADER_BOARD_MY_RANKING}" class="sapInoLeaderBoardmMyRanking" visible="{path: 'dimension>USER_ID', formatter: '.formatter.formatMyRanking'}"/>
					</HBox>
				</items>
			</FlexBox>
		</l:VerticalLayout>
	</CustomListItem >
</core:FragmentDefinition>