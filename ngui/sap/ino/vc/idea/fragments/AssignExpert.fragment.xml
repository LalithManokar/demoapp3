<core:FragmentDefinition 
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:ino="sap.ino.controls"
    xmlns:mvc="sap.ui.core.mvc"
    >
    <SelectDialog id="assignExpertDialog"
        contentHeight="50%"
        noDataText="{i18n>IDEA_OBJECT_LBL_NO_EXPERT_FOUND}"
        title="{i18n>IDEA_OBJECT_TIT_ASSIGN_EXPERT}"
        liveChange="onAssignExpertSearch"
        search="onAssignExpertSearch"
        confirm="onAssignExpertDialogOK"
        cancel="onAssignExpertDialogCancel"
        items="{data>/SearchProposedExpertParams(searchToken='*',ideasToken='')/Results}"
        multiSelect="true">
        <CustomListItem class="ideaExpertAssignItem">
            <ino:IdentityActionCard 
                identityId="{data>ID}" 
                userOrganization="{data>ORGANIZATION}"
                userName="{data>NAME}"
                userImageUrl="{ path: 'data>IMAGE_ID', formatter: '.formatter.userImage' }"
                actionable="false"
                pinnable="{clipboard>/enabled}"
                isPinned="{ path: 'data>ID', formatter: '.formatIsUserInClipboard' }"
                pinPressed="onUserPinPressed"
                identityPress="onOpenIdentityQuickView"
            />
        </CustomListItem>
    </SelectDialog>
</core:FragmentDefinition>