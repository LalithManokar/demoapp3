<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ino="sap.ino.controls">
    <CustomListItem>
        <ino:IdentityActionCard 
            identityId="{data>IDENTITY_ID}" 
            userName="{data>NAME}"
            userOrganization="{data>ORGANIZATION}"
            userImageUrl="{ path: 'data>IMAGE_ID', formatter: '.formatter.userImage' }"
            actionable="false"
            pinnable="{clipboard>/enabled}"
            isPinned="{ parts: [{path: 'data>IDENTITY_ID'}, {path: 'clipboard>/changed'}], formatter: '.formatIsUserInClipboard' }"
            pinPressed="onUserPinPressed"
            identityPress="onOpenIdentityQuickView" />
    </CustomListItem >
</core:FragmentDefinition>