<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ino="sap.ino.controls">
	<SelectDialog
        contentHeight="50%"
        noDataText="{i18n>IDEA_OBJECT_LBL_NO_PARTICIPANTS_FOUND}"
        title="{i18n>IDEA_OBJECT_TIT_CHANGE_AUTHOR}"
        liveChange="onChangeAuthorSearch"
        search="onChangeAuthorSearch"
        items="{data>/SearchCampaignParticipantsParams(searchToken='*')/Results}"
        >
        <CustomListItem class="ideaCoachAssignItem">
            <ino:IdentityActionCard 
                identityId="{data>ID}" 
                userOrganization="{data>ORGANIZATION}"
                userName="{data>NAME}"
                userImageUrl="{ path: 'data>IMAGE_ID', formatter: '.formatter.userImage' }"
                actionable="false"
                pinnable="false"
                identityPress="onOpenIdentityQuickView"
            />
        </CustomListItem>
    </SelectDialog>
</core:FragmentDefinition>