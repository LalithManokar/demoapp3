<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m"
                         xmlns:mvc="sap.ui.core.mvc"
                        >
    <ActionSheet
		title="{i18n>IDEA_OBJECT_TIT_ASSIGN_GENERAL}"
		showCancelButton="true"
		placement="VerticalPreferredTop">
		<buttons>
		    <Button enabled="{assignment>/property/actions/assignToMe/enabled}" 
                    text="{i18n>IDEA_OBJECT_BTN_ASSIGN_ME}"
                    press="onAssignMeAsCoach"/>
			<Button enabled="{assignment>/property/actions/unassignCoach/enabled}"
                    text="{i18n>IDEA_OBJECT_BTN_UNASSIGN_COACH}"
                    press="onUnassignCoach"/>
            <Button enabled="{assignment>/property/actions/assignCoach/enabled}"
                    text="{i18n>IDEA_OBJECT_BTN_ASSIGN_COACH}"
                    press="onAssignCoach"/>
            <Button enabled="{assignment>/property/actions/addExpert/enabled}"
                    text="{i18n>IDEA_OBJECT_BTN_ASSIGN_EXPERTS}"
                    visible="{= !${device>/system/phone} &amp;&amp; !${object>ID} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }"
                    press="onAssignExperts"/>
            <Button enabled="{assignment>/property/actions/assignTag/enabled}"
                    text="{i18n>IDEA_OBJECT_BTN_ASSIGN_TAGS}"
                    visible="{= !${device>/system/phone} &amp;&amp; !${object>ID} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }"
                    press="onassignTag"/>   
            <Button enabled="{assignment>/property/actions/reassignCampaign/enabled}"
                    text="{i18n>IDEA_OBJECT_BTN_REASSIGN_CAMPAIGN}"
                    visible="{= !${device>/system/phone}  &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }"
                    press="onReassignCampaign"/>         
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>