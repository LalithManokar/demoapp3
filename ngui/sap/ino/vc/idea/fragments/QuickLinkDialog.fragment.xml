<core:FragmentDefinition xmlns="sap.m" 
    xmlns:commons="sap.ui.commons" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:u="sap.ui.unified" 
    xmlns:core="sap.ui.core" 
    xmlns:table="sap.ui.table">
    <Dialog title="{i18n>IDEA_QUICK_LINK_SAVE_FILTER_HEADER}"
            resizable="false"
            contentWidth="750px" 
            contentHeight="50%"
            class="sapInoScrollContainer">
        <VBox>
            <f:SimpleForm
                maxContainerCols="2"
                layout="ResponsiveGridLayout"
                editable="false">
                <f:content>
                    <VBox>
                        <Label class="sapUiSmallMarginEnd" 
                            text ="{i18n>NAME_OF_QUICK_LINK}"
                            required="true"/>
                        <Input id="quickLinkName" value="{view>/List/QUICKLINKNAME}" required="true" valueStateText="{i18n>MSG_OF_QUICK_LINK_NAME}" change="onQuickLinkNameChange"/>
                    </VBox>
                    
                    <Toolbar class="sapInoQuickLinkToolBar">
                        <Label class="sapInoQuickLinkLabel" text="{i18n>FILTER_OF_QUICK_LINK}"/>
                    </Toolbar>
                    <FlexBox direction="Column" alignItems="Start">
                        <items>
                            <!--campaign-->
                            <HBox class="sapUiTinyMarginBottom" width="100%" visible="{= ${view>/HIDE_CAMPAIGN_FILTER} !== true &amp;&amp; ${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/CAMPAIGN/VALUE}===1 &amp;&amp; !!${view>/List/CAMPAIGN}}">
                                <Label 
                                    labelFor="quickLinkCampaignFilter"
                                    text="{i18n>LIST_TIT_FILTER_CAMPAIGN_HEADER}:"/> 
                                <Text class="sapUiTinyMarginBegin" id="quickLinkCampaignFilter" text="{view>/quickLinkcampaignName}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/CAMPAIGN/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--campaign form-->
                            <HBox class="sapUiTinyMarginBottom" width="100%"  visible="{=${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/CUSTOM_IDEA_FORM/VALUE}===1 &amp;&amp; !!${view>/quickLinkCampaignForm}}">
                                <Label 
                                    labelFor="quickLinkCampaignFormFilter"
                                    text="{i18n>LIST_TIT_FILTER_CAMPAIGN_FORM_HEADER}:"/> 
                                <Text class="sapUiTinyMarginBegin" id="quickLinkCampaignFormFilter" text="{view>/quickLinkCampaignForm}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/CUSTOM_IDEA_FORM/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--phase-->
                            <HBox class="sapUiTinyMarginBottom" width="100%" visible="{=${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/PHASE/VALUE}===1 &amp;&amp; ${view>/List/PHASE}.length > 0}">
                                <Label 
                                    labelFor="quickLinkPhaseFilter"
                                    text="{i18n>LIST_TIT_FILTER_PHASE_HEADER}:"/>
                                <Text class="sapUiTinyMarginBegin" id="quickLinkPhaseFilter" text="{view>/quickLinkphaseSelect}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/PHASE/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--status-->
                            <HBox class="sapUiTinyMarginBottom" width="100%" visible="{= !${view>/List/HIDE_STATUS} &amp;&amp; ${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/STATUS_TYPE/VALUE}===1 &amp;&amp; ${view>/List/STATUS}.length > 0}">
                                <Label 
                                    labelFor="quickLinkStatusFilter"
                                    text="{i18n>LIST_TIT_FILTER_STATUS_HEADER}:"/>
                                <Text class="sapUiTinyMarginBegin" id="quickLinkStatusFilter" text="{view>/quickLinkstatusSelect}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/STATUS_TYPE/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--sub status-->
                            <HBox class="sapUiTinyMarginBottom" width="100%"  visible="{= !${view>/List/HIDE_STATUS} &amp;&amp; ${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/STATUS/VALUE}===1 &amp;&amp; ${view>/List/SUB_STATUS}.length > 0}">
                                <Label 
                                    labelFor="quickLinkSubStatusFilter"
                                    text="{i18n>LIST_TIT_FILTER_SUB_STATUS}:"/>
                                <Text class="sapUiTinyMarginBegin" id="quickLinkSubStatusFilter" text="{view>/quickLinksubStatusSelect}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/STATUS/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!-- vote num-->
                            <HBox class="sapUiTinyMarginBottom" width="100%" visible="{=${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/VOTE_NUMBER/VALUE}===1 &amp;&amp; !!${view>/List/VOTE_NUMBER}}">
                                <Label
                                    labelFor="quickLinkVoteNumberFilter"
                                    text="{i18n>LIST_TIT_FILTER_VOTE_NUMBER}:" />
                                <HBox width="100%">
                                    <Text class="sapUiTinyMarginBegin" id="quickLinkVoteNumberFilter" text="{view>/quickLinkvoteOperator}"/>
                                    <Text class="sapUiTinyMarginBegin" text="{view>/List/VOTE_NUMBER}"/>
                                </HBox>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/VOTE_NUMBER/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--responsobility list-->
                            <HBox class="sapUiTinyMarginBottom" width="100%" visible="{=${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/RESPONSIBILITY_LIST/VALUE}===1 &amp;&amp; ${view>/List/RESP_VALUE_CODE}.length > 0}">
                                <Label 
                                    labelFor="quickLinkRespListFilter"
                                    text="{i18n>LIST_TIT_FILTER_RESPONSIBILITY_LIST_HEADER}:"/>
                                <Text class="sapUiTinyMarginBegin" id="quickLinkRespListFilter" text="{view>/quickLinkrespListMultiInput}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/RESPONSIBILITY_LIST/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--author-->
                            <HBox class="sapUiTinyMarginBottom" width="100%"  visible="{= ${user>/privileges/sap.ino.ui::backoffice.access} &amp;&amp; ${view>/List/MANAGE} === true &amp;&amp; ${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/AUTHOR/VALUE}===1 &amp;&amp; ${view>/List/AUTHORS}.length > 0}">
                                <Label 
                                    labelFor="quickLinkAuthorFilter"
                                    text="{i18n>LIST_TIT_FILTER_AUTHOR_HEADER}:"/>
                                <Text class="sapUiTinyMarginBegin" id="quickLinkAuthorFilter" text="{view>/quickLinkauthorFilter}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/AUTHOR/SEQUENCE}" />
                                </layoutData>
                            </HBox>    
                            <!--coach-->
                            <HBox class="sapUiTinyMarginBottom" width="100%" visible="{= ${user>/privileges/sap.ino.ui::backoffice.access} &amp;&amp; ${view>/List/MANAGE} === true &amp;&amp; ${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/COACH/VALUE}===1 &amp;&amp; ${view>/List/COACHES}.length > 0}">
                                <Label 
                                    labelFor="quickLinkCoachFilter"
                                    text="{i18n>LIST_TIT_FILTER_COACH_HEADER}:"/>
                                <Text class="sapUiTinyMarginBegin" id="quickLinkCoachFilter" text="{view>/quickLinkcoachFilter}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/AUTHOR/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--due date-->
                            <HBox class="sapUiTinyMarginBottom" width="100%" visible="{= ${user>/privileges/sap.ino.ui::backoffice.access} &amp;&amp; ${view>/List/MANAGE} === true &amp;&amp; ${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/DUE_DATE/VALUE}===1 &amp;&amp; (!!${filterItemModel>/DueFrom} || !!${filterItemModel>/DueTo})}">
                                <Label 
                                    labelFor="quickLinkDateFilter"
                                    text="{i18n>LIST_TIT_FILTER_DUE_HEADER}:"/>
                                <Text class="sapUiTinyMarginBegin" id="quickLinkDateFilter" text="{view>/quickLinkdateFilter}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/DUE_DATE/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                            <!--Latest Update-->
                            <HBox class="sapUiTinyMarginBottom" width="100%"  visible="{= ${view>/List/IDEA_LIST_FILTER_PERSONALIZATION/LATEST_UPDATE/VALUE}===1 &amp;&amp; ${view>/List/LATEST_UPDATE}.length > 0}">
                                <Label 
                                    labelFor="quickLinkLatestUpdateFilter"
                                    text="{i18n>LIST_TIT_FILTER_LATEST_UPDATE}:"/> 
                                <Text class="sapUiTinyMarginBegin" id="quickLinkLatestUpdateFilter" text="{view>/quickLinklatestUpdateSelect}"/>
                                <layoutData>
                                    <FlexItemData order="{view>/List/IDEA_LIST_FILTER_PERSONALIZATION/LATEST_UPDATE/SEQUENCE}" />
                                </layoutData>
                            </HBox>
                        </items>
                    </FlexBox>
                    
                    <Toolbar class="sapInoQuickLinkToolBar">
                        <Label class="sapInoQuickLinkLabel" text="{i18n>SORT_OF_QUICK_LINK}" visible="{=!!${view>/List/SORT} &amp;&amp; ${view>/List/ADDSHORTBYVALUE}}"/>
                    </Toolbar>
                    <VBox visible="{=!!${view>/List/SORT} &amp;&amp; ${view>/List/ADDSHORTBYVALUE}}">
                        <HBox width="100%" class="sapUiTinyMarginBottom">
                            <Text class="sapUiTinyMarginEnd" visible="{=!!${view>/List/QUICKSORT}}" text="{path : 'view>/List/QUICKSORT', formatter : '.formatter.shortByQuickSortText'}" />
                            <Text class="sapUiTinyMarginEnd" text="{path : 'view>/List/SORT', formatter : '.formatter.shortBySortText1'}" />
                            <core:Icon id="shortByIcon3" class="sapUiTinyMarginEnd"/> 
                        </HBox>
                        <HBox width="100%" visible="{path:'view>/List/SORT', formatter: '.formatter.shortBySortVisible'}" class="sapUiTinyMarginBottom">
                            <Text class="sapUiTinyMarginEnd" text="{path : 'view>/List/SORT', formatter : '.formatter.shortBySortText2'}" />
                            <core:Icon id="shortByIcon4" class="sapUiTinyMarginEnd"/> 
                        </HBox>
                    </VBox>
                </f:content>
            </f:SimpleForm>        
        </VBox>
        <beginButton>
            <Button text="{i18n>BTN_OK}" type="Accept" press="onHandleQuickLinkOK" />
        </beginButton>
        <endButton>
            <Button text="{i18n>BTN_CANCEL}" press="onHandleQuickLinkCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
