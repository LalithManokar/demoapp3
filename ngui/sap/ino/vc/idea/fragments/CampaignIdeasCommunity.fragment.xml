<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout">
    <Panel width="auto" class="sapInoHomeTitledPanel sapInoCampaignHomeIdeaList sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader" active="true" press="onNavigateToIdeas">
				<Title id="panelTitle" text="{i18n>CAMPAIGN_HOME_PANEL_IDEAS_RECENT}" />
				<ToolbarSpacer />
				<Button icon="sap-icon://navigation-right-arrow" tooltip="{i18n>CAMPAIGN_HOME_PANEL_IDEAS_NAVIGATE}" press="onNavigateToIdeas"/>
			</Toolbar>
		</headerToolbar>
		<content>
		    <!-- note: must be growing list, as otherwise UI refreshing fails on model update - sapInoListHideGrowing CSS class hides "load" button -->
		    <ino:WrappingList
                visible="{= !${device>/system/phone} }"
                id="ideasList"
                noDataText="{i18n>CAMPAIGN_HOME_PANEL_IDEAS_NO_DATA}"
                growing="true"
                growingThreshold="4"
                growingScrollToLoad="false"
                wrapping="true"
                class="sapInoListHideGrowing">
            </ino:WrappingList>
            <Carousel
                id="ideasCarousel"
                visible="{device>/system/phone}"
                loop="false"
                class="sapInoHomepageCarouselMargin">
            </Carousel>
        </content>
    </Panel>
</core:FragmentDefinition>