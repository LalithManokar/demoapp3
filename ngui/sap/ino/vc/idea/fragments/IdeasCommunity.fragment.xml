<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout">
    <Panel width="auto" class="sapInoHomeTitledPanel sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader" active="true" press="onNavigateToIdeas" tooltip="{i18n>CAMPAIGN_HOME_PANEL_IDEAS_NAVIGATE}">
				<Title id="panelTitle" />
				<ToolbarSpacer />
				<Button icon="sap-icon://navigation-right-arrow" tooltip="{i18n>CAMPAIGN_HOME_PANEL_IDEAS_NAVIGATE}" press="onNavigateToIdeas"/>
			</Toolbar>
		</headerToolbar>
		<infoToolbar>
		    <Toolbar class="sapInoHomeTitledPanelNav">
				<ToolbarSpacer/>
				<SegmentedButton id="sapInoHomeIdeasButtons" visible="{= ${device>/system/desktop}}" selectedKey="my" select="onIdeaListTypeSelect">
					<items>
						<SegmentedButtonItem text="{i18n>HOMEPAGE_PANEL_IDEAS_MY}" key="my" />
						<SegmentedButtonItem text="{i18n>HOMEPAGE_PANEL_IDEAS_ALL}" key="all" />
						<SegmentedButtonItem text="{i18n>HOMEPAGE_PANEL_IDEAS_COMPLETED}" key="completed" />
					</items>
				</SegmentedButton>
				<Select id="sapInoHomeIdeasSelect" visible="{= !${device>/system/desktop}}" selectedKey="my" change="onIdeaListTypeSelect">
				    <items>
				        <core:Item text="{i18n>HOMEPAGE_PANEL_IDEAS_MY}" key="my" />
						<core:Item text="{i18n>HOMEPAGE_PANEL_IDEAS_ALL}" key="all" />
						<core:Item text="{i18n>HOMEPAGE_PANEL_IDEAS_COMPLETED}" key="completed" />
				    </items>
				</Select>
				<ToolbarSpacer/>
		    </Toolbar>
		</infoToolbar>
		<content>
		    <!-- note: must be growing list, as otherwise UI refreshing fails on model update - sapInoListHideGrowing CSS class hides "load" button -->
            <ino:WrappingList
                visible="{= !${device>/system/phone} }"
                id="ideasList"
                noDataText="{i18n>CAMPAIGN_HOME_PANEL_IDEAS_NO_DATA}"
                growing="true"
                growingThreshold="4"
                growingScrollToLoad="false"
                wrapping="true"
                class="sapInoListHideGrowing">
            </ino:WrappingList>
            <Carousel
                id="ideasCarousel"
                visible="{device>/system/phone}"
                loop="false"
                class="sapInoHomepageCarouselMargin">
            </Carousel>
        </content>
    </Panel>
</core:FragmentDefinition>