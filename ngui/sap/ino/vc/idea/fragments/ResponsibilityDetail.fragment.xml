<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:ino="sap.ino.controls">
	<Dialog 
        contentWidth="500px"
        title="{data>RESP_DEFAULT_TEXT}">
		<content>
			<f:SimpleForm
            maxContainerCols="2"
            layout="ResponsiveGridLayout"
            editable="false">
				<f:content>
					<Label text="{i18n>IDEA_OBJECT_TIT_RESP_SUB_RESP}" wrapping="true"/>
					<Text text="{data>DEFAULT_TEXT}" class="sapUiTinyMarginBottom" wrapping="true"/>
					<Label text="{i18n>IDEA_OBJECT_TIT_RESP_DESCRIPTION}" wrapping="true"/>
					<Text text="{data>DEFAULT_LONG_TEXT}" class="sapUiTinyMarginBottom" wrapping="true"/>
					<Label text="{i18n>IDEA_OBJECT_TIT_RESP_TAG}" wrapping="true"/>
					<Tokenizer class="sapUiTinyMarginBottom" tokens="{path: 'data>RespTags', templateShareable: 'true'}" editable="false">
            				<tokens>
            					<Token key="{data>TAG_ID}" text="{data>NAME}" editable="false"/>
            				</tokens>
            			</Tokenizer>
					<Label text="{i18n>IDEA_OBJECT_TIT_RESP_URL}" wrapping="true"/>
					<Link text="{data>LINK_URL}" href="{data>LINK_URL}" target="_blank" wrapping="true"
					visible="{path: 'data>LINK_URL', formatter: '.formatter.urlVisible'}"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<buttons>
			<Button text="{i18n>BTN_CLOSE}" press="onRespListHintDialogClose" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>