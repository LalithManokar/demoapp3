<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m">
    <SelectDialog id="campaignSuggestionSelectDialog"
            title="{i18n>LIST_TIT_FILTER_CAMPAIGN_HEADER}"
            search="onCampaignDialogSearch"
            liveChange="onCampaignDialogSearch"
            confirm="onCampaignDialogItemsSelect"
            items="{view>/campaignSuggestion}">
        <StandardListItem
            title="{view>SHORT_NAME}" type = "Active">
            <customData>
                <core:CustomData key="ID" value="{view>ID}" />
            </customData>
        </StandardListItem>
    </SelectDialog>
</core:FragmentDefinition>