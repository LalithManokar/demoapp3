<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m">
    <SelectDialog id="campaignFormSuggestionSelectDialog"
            title="{i18n>LIST_TIT_FILTER_CAMPAIGN_FORM_HEADER}"
            search="onCampaignFormDialogSearch"
            liveChange="onCampaignFormDialogSearch"
            confirm="onCampaignFormDialogItemsSelect"
            items="{filterItemModel>/campaignFormSuggestion}">
        <StandardListItem
            title="{filterItemModel>DEFAULT_TEXT}" type = "Active">
            <customData>
                <core:CustomData key="CODE" value="{filterItemModel>CODE}" />
            </customData>
        </StandardListItem>
    </SelectDialog>
</core:FragmentDefinition>