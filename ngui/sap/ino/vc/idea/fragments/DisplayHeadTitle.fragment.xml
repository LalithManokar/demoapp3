<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:uxap="sap.uxap"
	xmlns:ino="sap.ino.controls"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<HBox  visible="{= !${view>/DISABLE_IDEA_IMAGE}}">
		<ToggleButton 
                    type="Transparent" 
                    icon="sap-icon://pushpin-off" 
                    visible="{clipboard>/enabled}" 
                    tooltip="{ parts: [{path: 'object>ID'}, {path: 'clipboard>/changed'}], formatter: '.formatIdeaPinTooltip'}"
                    pressed="{ parts: [{path: 'object>ID'}, {path: 'clipboard>/changed'}], formatter: '.formatIsIdeaInClipboard'}" 
                    press="onIdeaPinPressed"
                    class="sapInoPinBtn"
                    app:model="object"
                    />
		<ino:Follow onlyIcon="true" visible="true" value="{object>FOLLOW}" styleType="ideaDetailFollow" type="IDEA" objectId="{object>ID}" enabled="true" follow="onFollow" />
		<ino:Vote
			        visible="{= !${device>/system/phone} }"
                    enabled="{parts: [{path: 'object>STATUS'}, {path: 'object>VOTING_ACTIVE'},{path: 'object>PARTICIPANT_CAN_VOTE'},{path: 'object>OPEN_STATUS_SETTING'},{path: 'object>VOTING_HAS_PRIVILEGE'}], formatter: '.formatter.votingActive'}"
			        objectId="{object>ID}"
			        voteId="{object>VOTE_ID}"
			        tooltip="{parts: [{path: 'data>STATUS'},
        						  {path: 'data>VOTING_HAS_PRIVILEGE'},
        						  {path: 'data>VOTING_ACTIVE'},
        						  {path: 'data>PHASE'},
        						  {path: 'data>VOTE_TYPE_TYPE_CODE'},
        						  {path: 'data>VOTE_COUNT'},
        						  {path: 'data>SCORE'},
        						  {path: 'data>USER_SCORE'},
        						  {path: 'data>/DISPLAY_ONLY'},
        						  {path: 'data>PARTICIPANT_CAN_VOTE'},
            					  {path: 'data>OPEN_STATUS_SETTING'}], formatter: '.formatter.voteTooltip'}"
			        type="{object>VOTE_TYPE_TYPE_CODE}"
			        userVote="onUserVote"
			        value="{object>USER_SCORE}"
			        maxStar="{object>MAX_STAR_NO}"
			        />
		<ino:IdeaVolunteer styleClass="sapInoIdeaVolunteer" key="{object>VOLUNTEER_ID}" ideaId="{object>ID}" enabled="true" visible="true" onlyIcon="true" value="{= !!${object>VOLUNTEER_ID}}" volunteer="toggleVolunteer" />
	</HBox>
</core:FragmentDefinition>