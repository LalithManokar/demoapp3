<core:FragmentDefinition xmlns="sap.m" 
    xmlns:commons="sap.ui.commons" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:u="sap.ui.unified" 
    xmlns:core="sap.ui.core" 
    xmlns:table="sap.ui.table">
    <Dialog 
        title="{i18n>QUICK_LINK_STANDARD_LIST_HEADER}"
        resizable="false"
        contentWidth="750px"
        contentHeight="50%"
        class="sapInoScrollContainer">
        <content>
            <Page showHeader="false">
                <VBox>
                    <Title class="sapUiTinyMarginTopBottom sapUiSmallMarginBeginEnd" text="{i18n>QUICK_LINK_STANDARD_LIST_IDEA_NUMBER}({view>/QUICK_LINK_COUNT})"/>
                    <Table id="quickLinkStandardListTable" 
                        mode="None" 
                        items="{path: 'list>/Variants/Values', sorter: { path: 'SEQUENCE', descending : false }, templateShareable: false}"
                        swipe="onQuickLinkItemSwipe">
                        <columns>
                            <Column width="5%">
                            </Column>
                            <Column width="70%">
                                <Text text="{i18n>QUICK_LINK_STANDARD_LIST_IDEA_NAME}" />
                            </Column>
                            <!--Column width="10%" hAlign="End">
                            </Column-->
                            <Column width="15%" hAlign="End">
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
                                type="Active"
                                visible="{= ${parts:[{path:'list>ACTION'}, {path:'component>/SHOW_BACKOFFICE'}], formatter: '.formatter.quickLinkStandardListVisible'} 
                                    &amp;&amp; ${list>VISIBLE} &amp;&amp; ${list>DELETE} !== 1}"
                                tooltip="{parts:['list>FILTER_INFO', 'list>ACTIVE', 'list>/Filter/Status', 'list>/Operator/Values'], formatter:'.formatter.quickLinkFilterInfo'}">
                                <cells>
                                    <CheckBox
                                        selected="{list>ACTIVE}"
                                        select="onQuickLinkSelectionChange"
                                        enabled="{path:'list>ACTION', formatter:'.formatter.disableQuickLinkAllIdeas'}"
                                       />
                                    <ObjectStatus
                        				class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom sapInoHierarchyLabel"
                        				text="{parts : [{path : 'list>TEXT'}, {path: 'list>LINK_TEXT'}], formatter : '.formatter.quickLinkTextFormate'}"
                        				state="None"
                        				icon="sap-icon://InoIcons/{= ${list>TYPE_CODE} === 'QUICK_LINK_CUSTOM_IDEA' ? 'quicklink-custom' : 'quicklink-standard'}">
                        				<customData>
    										<core:CustomData key="object" value="{list>OBJECT}"/>
    									</customData>
                        			</ObjectStatus>
                                    <!--Label
                                        text="{parts : [{path : 'list>TEXT'}, {path: 'list>LINK_TEXT'}], formatter : '.formatter.quickLinkTextFormate'}"
                                        class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom sapInoHierarchyLabel">
                                        <customData>
                                            <core:CustomData key="object" value="{list>OBJECT}"/>
                                        </customData>
                                    </Label-->
                                    <!--Label
                                        text="{path: 'list>COUNT'}"
                                        textAlign="Left"
                                        class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom sapInoHierarchyLabel"></Label-->
                                    <Button icon="sap-icon://overflow" type="Transparent" press="onQuickLinkStandListMenuButtonPress"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
                <!-- Popover is put here instead of a fragment file because the controller method can not be triggered inside a fragment file.-->
                <ResponsivePopover
            		placement="Left"
            		showHeader="false"
            		showArrow="false"
            		visible="false">
            		<content>
                		<HBox>
                		   <Button icon="sap-icon://arrow-top" type="Transparent" press="onQuickLinkMoveUpButtonPress"/>
                		   <Button icon="sap-icon://arrow-bottom" type="Transparent" press="onQuickLinkMoveDownButtonPress"/>
                		   <Button icon="sap-icon://delete" type="Transparent" press="onQuickLinkDeleteButtonPress"/>
                		</HBox>
            		</content>
            	</ResponsivePopover>
            </Page>
        </content>
        <beginButton>
            <Button id="quickLinkStandardListDialogOKButton" text="{i18n>BTN_OK}" type="Accept" press="onHandleQuickLinkStandardListDialogOK" />
        </beginButton>
        <endButton>
            <Button text="{i18n>BTN_CANCEL}" press="onHandleQuickLinkStandardListDialogCancel" />
        </endButton>
    </Dialog>
    
</core:FragmentDefinition>
