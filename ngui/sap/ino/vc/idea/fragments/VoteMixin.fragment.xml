<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<Dialog afterClose="onCloseDialog" title="{path: 'vote>/VOTE_REASON_CODE', formatter: '.transitionTitle'}">
		<VBox class="sapUiTinyMarginBeginEnd">	
		    <Text width="100%"  visible="{= ${vote>/VOTE_COMMENT_TYPE} === 'LIST'}" text="{i18n>IDEA_VOTE_REASON_CODE}" />
		    <Select width="100%"
		    		id="voteReasonList"
		    		visible="{= ${vote>/VOTE_COMMENT_TYPE} === 'LIST' }"
		    		selectedKey="{vote>/VOTE_REASON}"
                       items="{vote>/VOTE_COMMENT_LIST}">
				<core:Item
                           key="{vote>CODE}"
                           text="{vote>DEFAULT_TEXT}"/>
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Select>
		    
	        <TextArea width="100%" rows="2" visible="{= ${vote>/VOTE_COMMENT_TYPE} === 'TEXT'}" value="{path: 'vote>/VOTE_COMMENT', type: 'sap.ui.model.type.String', constraints: {maxLength: 500}}">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</TextArea>  
			<Text width="100%" text="{i18n>IDEA_VOTE_REASON_NOTE}" visible="{path: 'vote>/PUBLIC_VOTE', type: 'sap.ino.commons.models.types.IntBooleanType'}"/>
		
		</VBox>
		<buttons>
			<Button text="{i18n>BTN_OK}" type="Accept" press="onSubmit" />
			<Button text="{i18n>BTN_CANCEL}" press="onCloseDialog" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>