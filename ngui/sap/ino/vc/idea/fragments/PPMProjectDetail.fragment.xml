<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
                        >
	<FlexBox alignItems="Start" justifyContent="SpaceBetween" wrap="Wrap" width="100%">
		<items>
			<VBox width="100%" class="sapInoPPMItemHBox">
				<VBox class="sapInoPPMItemVBox sapUiTinyMarginTopBottom" width="100%">
					<HBox class="sapUiTinyMarginTop">
						<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_OBJECT_STATUS}"/>
						<Text class="sapInoPPMText" text="{ppm>StatusName}"/>
					</HBox>
					<HBox>
						<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_PROJECT_RESPONSIBLE}"/>
						<Text class="sapInoPPMText" text="{ppm>ProjectResponsible}"/>
					</HBox>
					<HBox>
						<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_PROJECT_RESPONSIBLE_NAME}"/>
						<Text class="sapInoPPMText" text="{ppm>ProjectResponsibleName}"/>
					</HBox>
					<Label text="{i18n>PPM_FLD_PROJECT_DESCRIPTION}" class="sapInoPPMLabel sapUiTinyMarginTop"/>
					<Text class="sapInoPPMText sapUiTinyMarginBottom" text="{ppm>ProjectDescription}"/>
				</VBox>
				<l:Grid position="Left" hSpacing="0">
					<HBox>
						<layoutData>
							<l:GridData span="XL4 L4 M7 S12"/>
						</layoutData>
						<items>
							<VBox>
								<core:Icon src="sap-icon://past" size="1.5rem" useIconTooltip="false"/>
							</VBox>
							<VBox class="sapInoPPMDetailVBox">
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_FORECASTED_START}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>ForecastedStart', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_FORECASTED_FINISH}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>ForecastedFinish', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
							</VBox>
						</items>
					</HBox>
					<HBox>
						<layoutData>
							<l:GridData span="XL4 L4 M7 S12"/>
						</layoutData>
						<items>
							<VBox>
								<core:Icon src="sap-icon://present" size="1.5rem" useIconTooltip="false"/>
							</VBox>
							<VBox class="sapInoPPMDetailVBox">
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_CALCULATED_START}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>CalculatedStart', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_CALCULATED_FINISH}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>CalculatedFinish', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
							</VBox>
						</items>
					</HBox>
				</l:Grid>
			</VBox>
		</items>
	</FlexBox>
</core:FragmentDefinition>