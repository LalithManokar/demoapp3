<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:commons="sap.ui.commons"
	xmlns:core="sap.ui.core"
	xmlns:table="sap.ui.table">
    <Dialog title="{i18n>LIST_TIT_FILTER_RESPONSIBILITY_LIST_HEADER}">
        <table:TreeTable 
            rows="{path: 'view>/resp', parameters: {arrayNames:['children']}}" 
            selectionMode="None"
            ariaLabelledBy="title">
            <table:columns>
                <table:Column width="auto">
                    <Label text="{i18n>LIST_TIT_FILTER_RESP_LIST}"/>
                    <table:template>
                        <commons:TriStateCheckBox
                            class="inmTagTriStatCheckBox"
                            text="{view>DEFAULT_TEXT}"
                            selectionState="{view>checked}"
                            change="onHandleRespSelectionChange">
                        </commons:TriStateCheckBox>
                    </table:template>
                </table:Column>
            </table:columns>
        </table:TreeTable>
        <beginButton>
            <Button text="{i18n>BTN_OK}" type="Accept" press="onHandleRespHelpOK" />
        </beginButton>
        <endButton>
            <Button text="{i18n>BTN_CANCEL}" press="onHandleRespHelpCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>