<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        afterClose="onFollowUpMixinFollowUpAfterClose"
        id="followUpDialog"
        title="{i18n>IDEA_OBJECT_TIT_FOLLOW_UP}">
        <f:SimpleForm
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="2"
            labelSpanM="2"
            emptySpanL="3"
            emptySpanM="3"
            columnsL="2"
            columnsM="2">
            <Label
                text="{i18n>IDEA_OBJECT_TIT_FOLLOW_UP_DATE}"
                labelFor="datePicker"/>
            <ComboBox
                id="relativeDate"
                items="{followUp>/FOLLOW_UP_RELATIVE_DATES}"
                selectedKey="{path: 'followUp>/FOLLOW_UP_DATE', type: '.followUpRelativeDateType'}">
                <core:Item
                    key="{followUp>key}"
                    text="{path: 'followUp>key', formatter: '.formatter.followUpRelativeDateText'}"/>
            </ComboBox>
            <DatePicker
                class="sapUiSmallMarginTopBottom"
                id="datePicker"
                displayFormat="long"
                placeholder="{i18n>IDEA_OBJECT_FLD_FOLLOW_UP}"
                value="{path: 'followUp>/FOLLOW_UP_DATE', type: 'sap.ui.model.type.Date', formatOptions: {style: 'medium', strictParsing: true}}"/>
        </f:SimpleForm>
        <buttons>
            <Button
                id="followUpOKButton"
                enabled="{path: 'message>/', formatter: '.formatter.followUpOkButtonEnabled'}"
                press="onFollowUpMixinFollowUpDialogOK"
                text="{i18n>BTN_OK}"
                type="Accept"/>
            <Button
                id="followUpDeleteButton"
                enabled="{=${followUp>/FOLLOW_UP_DATE} ? true : false}"
                press="onFollowUpMixinFollowUpDialogDelete"
                text="{i18n>BTN_DEL}"
                type="Reject"/>
            <Button
                id="followUpCancelButton"
                press="onFollowUpMixinFollowUpDialogCancel"
                text="{i18n>BTN_CANCEL}"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>