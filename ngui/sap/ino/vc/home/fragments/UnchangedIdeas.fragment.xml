<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
	<Panel id="unchangedIdeas" width="auto" class="sapInoHomeTitledPanel sapInoTopCampaignItem sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader" active="true" id="toolbar--UnchangedIdeasFrame"
				    tooltip="{i18n>HOMEPAGE_PANEL_ANALYTICS_NAVIGATE}"
				    press="onNavigateToReport">
				<Title id="panelTitle" text="{i18n>MW_TCO_TIT_UNCHANGED_IDEAS}"/>
				<ToolbarSpacer />
				<Button
				    icon="sap-icon://navigation-right-arrow"
				    id="button--UnchangedIdeasFrame"
				    tooltip="{i18n>HOMEPAGE_PANEL_ANALYTICS_NAVIGATE}"
				    press="onNavigateToReport"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<VBox alignItems="Center" justifyContent="Center" class="sapInoHomepageChart">
				<viz:VizFrame
                            width="100%"
                            height="100%"
                            id="UnchangedIdeasFrame"
                            vizType='bar'>
					<viz:dataset>
						<viz.data:FlattenedDataset data="{/results}">
							<viz.data:dimensions>
								<viz.data:DimensionDefinition name="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_DAYS_GROUP"
                                    value="" />
							</viz.data:dimensions>
							<viz.data:measures>
								<viz.data:MeasureDefinition name="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_GT_31_DAYS"
                                    value="{IDEAS_31}" />
								<viz.data:MeasureDefinition name="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_LT_30_DAYS"
                                    value="{IDEAS_8_30}" />
								<viz.data:MeasureDefinition name="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_BT_2_AND_7"
                                    value="{IDEAS_2_7}" />
								<viz.data:MeasureDefinition name="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_TODAY"
                                    value="{IDEAS_1}" />
							</viz.data:measures>
						</viz.data:FlattenedDataset>
					</viz:dataset>
					<viz:feeds>
						<viz.feeds:FeedItem id="feedOlderValues" uid="valueAxis" type="Measure"
                            values="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_GT_31_DAYS" />
						<viz.feeds:FeedItem id="feedMonthValues" uid="valueAxis" type="Measure"
                            values="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_LT_30_DAYS" />
						<viz.feeds:FeedItem id="feedWeekValues" uid="valueAxis" type="Measure"
                            values="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_BT_2_AND_7" />
						<viz.feeds:FeedItem id="feedCurrentValues" uid="valueAxis" type="Measure"
                            values="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_TODAY" />
						<viz.feeds:FeedItem id="feedCategoryAxis" uid="categoryAxis" type="Dimension"
                            values="ANALYITCS_HOME_PAGE_UNCHANGED_IDEAS_DAYS_GROUP" />
					</viz:feeds>
				</viz:VizFrame>
			</VBox>
		</content>
	</Panel>
</core:FragmentDefinition> 