<core:FragmentDefinition
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
        >
    <ResponsivePopover
            title="{i18n>SHELL_EXP_NOTIFICATION}"
            contentWidth="850px"
            contentHeight="300px"
            horizontalScrolling ="false"
            placement="Bottom">
        <endButton>
            <Button text="{i18n>NOTIFICATIONS_REMOVE_ALL}" press="onRemoveAllNotifications" 
            visible="{= ${notifications>/NOTIFICATIONS}.length > 0}" app:latest_notification_id="{path: 'notifications>/NOTIFICATIONS', formatter: '.formatterLatestNotificationId'}"/>
        </endButton>
        <content>
        <List id="nlist" items="{notifications>/NOTIFICATIONS}" noDataText="{i18n>NO_NOTIFICATIONS_FOUND}">
            <NotificationListItem class="sapInoNotification"
            					  title="{path:'notifications>TITLE', formatter:'.formatter.notificationText'}"
                                  description="{path:'notifications>SUBTITLE', formatter:'.formatter.notificationText'}"
                                  datetime="{notifications>RELATIVE_TIMESTAMP}"
                                  authorPicture="{path:'notifications>ACTOR_IMAGE_ID', formatter:'.formatter.userIcon'}"
                                  showCloseButton="false"
                                  showButtons="true"
                                  press="onNotificationNavigate"
                                  close="onRemoveNotification"
                                  app:notification_id="{notifications>ID}"
                                  app:object_type_code="{notifications>OBJECT_TYPE_CODE}"
                                  app:object_id="{notifications>OBJECT_ID}"
                                  app:notification_code="{notifications>NOTIFICATION_CODE}"
                                  authorName="{notifications>ACTOR_NAME}">
            <buttons>
            <Button icon="sap-icon://sys-cancel"
            		type="Transparent"
            		tooltip="{i18n>NOTIFICATIONS_REMOVE}"
            		press="onRemoveNotification"/>
            </buttons>
                
            </NotificationListItem>
        </List>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>