<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Dialog
        class="sapInoAboutBox"
        title="{i18n>ABOUT_TIT}"
        contentWidth="410px"
        contentHeight="250px"
        horizontalScrolling="false"
        verticalScrolling="false"
        resizable="false">
        <html:style>
            .sapInoAboutBox .sapMDialogSection {
                background-color: white;
            }
            
            .sapInoAboutBox .sapMDialogSection .sapMFlexItem:first-child {
                overflow: hidden;
                min-height: 70px;
            }
            
            @media (max-height: 225px) {
                .sapInoAboutBox .sapMDialogSection .sapMFlexItem:first-child {
                    visibility: hidden;
                    min-height: 20px;
                }
            }
            
            @media (max-height: 285px) {
                .sapInoAboutBox .sapMDialogSection .sapMFlexItem:last-child {
                    visibility: hidden;
                }
            }
        </html:style>
        <content>
            <FlexBox
                direction="Column"
                alignItems="Start"
				justifyContent="SpaceBetween"
				height="100%" >
				<Image
                    src="/sap/ino/ngui/sap/ino/assets/img/About_Header.png"
                    width="100%">
                </Image>
                <Label class="sapUiLargeMarginBeginEnd" text="{path : 'device>/system', formatter : '.formatter.version'}" />
                <Image
                    src="/sap/ino/ngui/sap/ino/assets/img/About_Logo.png">
                </Image>
            </FlexBox>
        </content>
        <beginButton>
            <Button text="{i18n>ABOUT_BTN_OK}" press="onAboutClose"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>