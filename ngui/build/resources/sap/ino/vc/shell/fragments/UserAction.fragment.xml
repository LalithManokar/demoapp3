<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ActionSheet
		showCancelButton="true"
		class="sapInoUserActionSheetClass"
		placement="Bottom">
		<buttons>
			<Button text="{i18n>USER_BTN_ACCOUNT}" icon="sap-icon://user-settings" press="onPersonalSetting" />
			<Button text="{i18n>USER_BTN_TOGGLE_FS}" icon="sap-icon://full-screen" press="onToggleFullScreen" visible="{path : 'device>/system', formatter: '.formatter.fullScreenToggle'}" />
			<Button id="termsConditions" text="{i18n>USER_BTN_TERMS}" icon="sap-icon://newspaper" press="onTermsConditions" visible="{path : 'device>/system', formatter: '.formatter.displayTermsConditions'}" />
			<Button text="{i18n>USER_BTN_ABOUT}" icon="sap-icon://hint"  press="onAbout" />
			<Button text="{i18n>USER_BTN_LOGOUT}" icon="sap-icon://log" press="onLogout" visible="{user>/data/BASIC_AUTH}"/>
		</buttons>
	</ActionSheet>     
</core:FragmentDefinition>