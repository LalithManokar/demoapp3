<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:ino="sap.ino.controls"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <tnt:SideNavigation 
        id="sideNavigation"
        class="sapInoNavigation">
        <tnt:item>
            <tnt:NavigationList
                id="navmenu"
                items="{
                    path: 'navigationList>/Navigation'
                }"
                class="sapInoNavigationListSelect">
                <ino:ActiveNavigationListItem
                    icon="{navigationList>ICON}"
                    text="{path: 'navigationList>TITLE', formatter: '.formatter.text'}"
                    tooltip="{path: 'navigationList>TITLE', formatter: '.formatter.text'}"
                    selected="{parts: [{path: 'navigation>/Route'}, {path: 'navigationList>TO'}], formatter: '.formatter.navigationItemSelected'}"
                    select="onNavigate"
                    visible="{
                        parts: [{path: 'user>/privileges/sap.ino.ui::backoffice.access'}, {path: 'navigationList>FRONTOFFICE_ENABLED'}, {path: 'navigationList>MOBILE_ENABLED'}, {path: 'device>/system/phone'}, {path: 'navigationList>TO'}],
                        formatter: '.formatter.navigationItemVisible'
                    }"
                    hasExpander="false" 
                    custom:TO="{navigationList>TO}"
                    />
            </tnt:NavigationList>
        </tnt:item>
        <tnt:fixedItem>
            <tnt:NavigationList
                id="navfooter"
                expanded="true">
                <ino:ActiveNavigationListItem
                    icon="sap-icon://pushpin-off"
                    text="{i18n>MENU_MIT_CLIPBOARD}"
                    tooltip="{i18n>MENU_MIT_CLIPBOARD}"
                    select="onNavFooterPressed"
                    hasExpander="false"
                    visible="{clipboard>/enabled}"
                    custom:ITEM="CLIPBOARD"
                    />
                <tnt:NavigationListItem
                    icon="sap-icon://sys-help"
                    text="{i18n>MENU_MIT_HELP}"
                    tooltip="{i18n>MENU_MIT_HELP}"
                    select="onNavFooterPressed"
                    hasExpander="false"
                    custom:ITEM="HELP"
                    />
            </tnt:NavigationList>
        </tnt:fixedItem>
    </tnt:SideNavigation>
</core:FragmentDefinition>
	
