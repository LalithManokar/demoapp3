<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ino="sap.ino.controls">
	<Panel id="topContributor" width="auto" class="sapInoHomeTitledPanel sapInoTopCampaignItem sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader">
				<Title id="panelTitle" text="{i18n>MW_TCO_TIT_TOP_CONTRIBUTORS}"/>
				<ToolbarSpacer />
				<!--Button icon="sap-icon://navigation-right-arrow" press=""/-->
			</Toolbar>
		</headerToolbar>
		<content>
			<List
			    id="topContributorsList"
				items="{
				    path: 'data>TopContributors',
				    sorter:[{path: 'IDEA_COUNT', descending: true}],
				    length: 4
				}">
				<CustomListItem>
					<HBox>
						<ino:IdentityCard 
                            id="campaignHomeComment" 
                            identityPress="onOpenIdentityQuickView"
                            identityId="{data>IDENTITY_ID}"
                            userName="{data>NAME}"
                            orientation="Horizontal"
                            userImageUrl="{path: 'data>IDENTITY_IMAGE_ID', formatter:'.formatter.userImage' }" 
                            imageSize="S">
							<ino:content>
								<HBox>
									<core:Icon size="1rem" src="sap-icon://lightbulb" tooltip="{i18n>MW_TCO_ALT_NR_OF_IDEAS_TOOLTIP}"/>
									<Label text="{data>IDEA_COUNT}"/>
								</HBox>
							</ino:content>
						</ino:IdentityCard>
					</HBox>
				</CustomListItem>
			</List>
		</content>
	</Panel>
</core:FragmentDefinition> 