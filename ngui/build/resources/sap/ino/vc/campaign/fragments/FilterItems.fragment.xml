<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout">
    <!-- height: 99% to avoid unneccessary scrollbars during zoom -->
    <VBox
        width="100%"
        class="sapInoFilterSidePanelItemsMainSection sapInoFilterSidePanelContentWH">
        <l:VerticalLayout
            width="100%"
            class="sapUiContentPadding"
            visible="{= ${view>/List/IS_SHOW_MORE_FILTER} === true}"
            id="filterItems">
            <Label 
                id="respListFilterLabel"
                text="{i18n>LIST_TIT_FILTER_RESPONSIBILITY_LIST_HEADER}"/>
            <Select
        	    ariaLabelledBy="respListFilterLabel"
                width="100%"
                id="respListSelect"
                selectedKey="{view>/List/RESP_CODE}"
                change="onFilterRespListChange"
                enabled="{path : 'view>/resp', formatter : '.formatter.respListFilterEnable'}"
                items="{
                    path : 'view>/resp'
                }"
                class="sapUiSmallMarginBottom">
                <core:ListItem
                    key="{view>CODE}"
                    text="{view>DEFAULT_TEXT}">
                </core:ListItem>
            </Select>
            <Label 
                id="campaignHasBlogLabel"
                text="{i18n>CAMPAIGN_LIST_TIT_FILTER_HAS_BLOG}"/>
            <Select
                ariaLabelledBy="campaignHasBlogLabel"
                width="100%"
                id="isBlogSelect"
                selectedKey="{view>/List/HAS_BLOG}"
                change="onFilterHasBlogChange"
                class="sapUiSmallMarginBottom"
                 items="{
                    path : 'view>/HAS_BLOG'
                }"                >
              <core:ListItem
                    key="{view>code}"
                    text="{view>text}">
                </core:ListItem>                
             
            </Select>
        </l:VerticalLayout>
    </VBox>
</core:FragmentDefinition>