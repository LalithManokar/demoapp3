<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
	<Panel id="campaignActivities" width="auto" class="sapInoHomeTitledPanel sapInoTopCampaignItem sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader" active="true" id="toolbar--CampaignActivitiesFrame" press="onNavigateToReport" tooltip="{i18n>CAMPAIGN_HOME_PANEL_ANALYTICS_NAVIGATE}">
				<Title id="panelTitle" text="{i18n>MW_TCO_TIT_ACTIVITIES}"/>
				<ToolbarSpacer />
				<Button
				    id="button--CampaignActivitiesFrame"
                    icon="sap-icon://navigation-right-arrow"
                    tooltip="{i18n>CAMPAIGN_HOME_PANEL_ANALYTICS_NAVIGATE}"
                    press="onNavigateToReport"
                    visible="{=!${device>/system/phone}}"/>
			</Toolbar>
		</headerToolbar>
		<content>
		    <VBox alignItems="Center" justifyContent="Center" class="sapInoHomepageChart" visible="true">
                <viz:VizFrame
                    width="100%"
                    height="100%"
                    id="CampaignActivitiesFrame"
                    vizType='column'>
                    <viz:dataset>
                        <viz.data:FlattenedDataset data="{/results}">
                            <viz.data:dimensions>
                                <viz.data:DimensionDefinition name="Year/Month"
                                    value="{YEAR_MONTH}" />
                            </viz.data:dimensions>
                            <viz.data:measures>
                                <viz.data:MeasureDefinition name="Campaign Views"
                                    value="{CAMPAIGN_VIEWS}" />
                                <viz.data:MeasureDefinition name="Idea Views"
                                    value="{IDEA_VIEWS}" />
                                <viz.data:MeasureDefinition name="Ideas Submitted"
                                    value="{SUBMITTED}" />
                                <viz.data:MeasureDefinition name="Ideas Completed"
                                    value="{COMPLETED}" />
                                <viz.data:MeasureDefinition name="Ideas Discontinued"
                                    value="{DISCONTINUED}" />
                                <viz.data:MeasureDefinition name="Ideas Merged"
                                    value="{MERGED}" />
                            </viz.data:measures>
                        </viz.data:FlattenedDataset>
                    </viz:dataset>
                    <viz:feeds>
                        <viz.feeds:FeedItem id="feedCampaignViewsValues" uid="valueAxis" type="Measure"
                            values="Campaign Views" />
                        <viz.feeds:FeedItem id="feedIdeaViewsValues" uid="valueAxis" type="Measure"
                            values="Idea Views" />
                        <viz.feeds:FeedItem id="feedSubmittedValues" uid="valueAxis" type="Measure"
                            values="Ideas Submitted" />
                        <viz.feeds:FeedItem id="feedCompletedValues" uid="valueAxis" type="Measure"
                            values="Ideas Completed" />
                        <viz.feeds:FeedItem id="feedDiscontinuedValues" uid="valueAxis" type="Measure"
                            values="Ideas Discontinued" />
                        <viz.feeds:FeedItem id="feedMergedValues" uid="valueAxis" type="Measure"
                            values="Ideas Merged" />
                        <viz.feeds:FeedItem id="feedCategoryAxis" uid="categoryAxis" type="Dimension"
                            values="Year/Month" />
                    </viz:feeds>
                </viz:VizFrame>
            </VBox>
            <VBox alignItems="Center" justifyContent="Center">
				<Text class="sapUiTinyMarginTopBottom" text="{i18n>CAMPAIGN_HOME_REPORT_NO_DATA}"/>
			</VBox>
		</content>
	</Panel>
</core:FragmentDefinition> 