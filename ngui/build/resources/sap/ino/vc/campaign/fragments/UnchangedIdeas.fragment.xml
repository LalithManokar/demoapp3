<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
	<Panel id="unchangedIdeas" width="auto" class="sapInoHomeTitledPanel sapInoTopCampaignItem sapInoHomepageBorder">
		<headerToolbar>
			<Toolbar height="3rem" class="sapInoHomeTitledPanelHeader" active="true" id="toolbar--UnchangedIdeasFrame" press="onNavigateToReport" tooltip="{i18n>CAMPAIGN_HOME_PANEL_ANALYTICS_NAVIGATE}">
				<Title id="panelTitle" text="{i18n>MW_TCO_TIT_UNCHANGED_IDEAS}"/>
				<ToolbarSpacer />
				<Button
				    id="button--UnchangedIdeasFrame"
				    icon="sap-icon://navigation-right-arrow"
				    tooltip="{i18n>CAMPAIGN_HOME_PANEL_ANALYTICS_NAVIGATE}"
				    press="onNavigateToReport"
				    visible="{=!${device>/system/phone}}"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<VBox alignItems="Center" justifyContent="Center" class="sapInoHomepageChart" visible="true">
				<viz:VizFrame
                    id="UnchangedIdeasFrame"
                    vizType='bar'
                    height="100%"
                    width="100%">
					<viz:dataset>
						<viz.data:FlattenedDataset data="{/results}">
							<viz.data:dimensions>
								<viz.data:DimensionDefinition name="Campaign"
                                    value="{CAMPAIGN_ID}" />
							</viz.data:dimensions>
							<viz.data:measures>
								<viz.data:MeasureDefinition name=">31 Days"
                                    value="{IDEAS_31}" />
								<viz.data:MeasureDefinition name="8-30 Days"
                                    value="{IDEAS_8_30}" />
								<viz.data:MeasureDefinition name="2-7 Days"
                                    value="{IDEAS_2_7}" />
								<viz.data:MeasureDefinition name="Today"
                                    value="{IDEAS_1}" />
							</viz.data:measures>
						</viz.data:FlattenedDataset>
					</viz:dataset>
					<viz:feeds>
						<viz.feeds:FeedItem id="feedOlderValues" uid="valueAxis" type="Measure"
                            values=">31 Days" />
						<viz.feeds:FeedItem id="feedMonthValues" uid="valueAxis" type="Measure"
                            values="8-30 Days" />
						<viz.feeds:FeedItem id="feedWeekValues" uid="valueAxis" type="Measure"
                            values="2-7 Days" />
						<viz.feeds:FeedItem id="feedCurrentValues" uid="valueAxis" type="Measure"
                            values="Today" />
						<viz.feeds:FeedItem id="feedCategoryAxis" uid="categoryAxis" type="Dimension"
                            values="Campaign" />
					</viz:feeds>
				</viz:VizFrame>
			</VBox>
			<VBox alignItems="Center" justifyContent="Center">
				<Text class="sapUiTinyMarginTopBottom" text="{i18n>CAMPAIGN_HOME_REPORT_NO_DATA}"/>
			</VBox>
		</content>
	</Panel>
</core:FragmentDefinition> 