<mvc:View
    id="campaigncommunity"
    controllerName="sap.ino.vc.campaign.CommunityHome"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:ino="sap.ino.controls"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Page 
        class="sapInoCampaignHomepage"
        id="communityhomepage"
        showHeader="false"
        showSubHeader="false"
        app:aofSmartControl="true"
        app:aofModel="data"
        app:aofObject="sap.ino.xs.object.campaign.Campaign"
        >
        <HBox 
            visible="{view>/objectExists}"
            class="sapInoBaseHomepageContent sapInoCampaignHomepageContent"
            alignItems="Start"
			justifyContent="Center">
			<VBox>
			    <VBox
            	    alignItems="End"
            	    justifyContent="Center">
            		<HBox
            		    alignItems="Center"
            		    class="sapInoBaseHomepageButtons"
            		    visible="{ parts: ['user>/privileges/sap.ino.ui::backoffice.access', 'property>/nodes/Root/customProperties/backofficeCampaignPrivilege'], formatter: '.formatter.baseCampaignHomePageButtons' }">
            		    <core:Fragment id="backofficeButton" fragmentName="sap.ino.vc.commons.fragments.BackofficeToggleButton" type="XML" />
            		    <core:Fragment id="campaignSettingsButton" fragmentName="sap.ino.vc.campaign.fragments.CampaignSettingsButton" type="XML" />
            		</HBox>
            	</VBox>
			    <HBox>
                    <VBox
                        class="sapInoBaseHomepageLeft sapInoCampaignHomepageLeft">
                        <VBox id="leftProfileContainer">
                            <core:Fragment id="CampaignProfileFragment" fragmentName="sap.ino.vc.campaign.fragments.CampaignProfile" type="XML" class="sapInoFloatingBackground" />
                        </VBox>
                        <VBox id="leftCampaignManagerContainer">
                            <core:Fragment id="CampaignManagersFragment" fragmentName="sap.ino.vc.campaign.fragments.CampaignManagers" type="XML"/>
                        </VBox>
                        <VBox id="leftCampaignTagsContainer">
                            <core:Fragment id="campaignTagsFragment" fragmentName="sap.ino.vc.campaign.fragments.CampaignTags" type="XML" />
                        </VBox>
                        <VBox id="leftCommentContainer"/>
                    </VBox>
                    <VBox
                        class="sapInoBaseHomepageCenter sapInoCampaignHomepageCenter">
                        <core:Fragment id="bannerFragment" fragmentName="sap.ino.vc.campaign.fragments.Banner" type="XML" />
                        <VBox width="100%" id="milestoneContainer" visible="{= !${device>/system/phone} }"></VBox>
                        <Carousel
                            id="campaignBannerList"
                            visible="{= ${data>PAGE_COUNT_LOCALE} > 0 }"
                            class="sapInoCampaignBannerCarousel sapInoFloatingBackground sapBannerList"
                            loop="true"
                            pages="{path : 'data>Pages', sorter:[{path: 'PAGE_NO', descending: false}]}"
                            pageChanged="onChangePage">
                            <pages>
                                <VBox
                                    class="sapInoCampaignBannerPage">
                                    <core:HTML content="{ path:'data>HTML_CONTENT', formatter: '.formatter.wrapHTML'}" sanitizeContent="true"/>
                                </VBox>
                            </pages>
                        </Carousel>
                        <VBox id="centerExtensionContainer" class="sapUiSmallMarginTop">
							<core:Fragment id="extensionFragment" fragmentName="sap.ino.vc.campaign.fragments.BackOfficeHomeExtension" type="XML" class="sapInoFloatingBackground"/>
						</VBox>
                        <VBox id="centerProfileContainer" class="sapUiSmallMarginTop" />
                         <VBox id="centerCampaignManagerContainer"/>
                        <VBox id="centerCampaignTagsContainer"/>
                        <core:Fragment id="ideasFragment" fragmentName="sap.ino.vc.idea.fragments.CampaignIdeasCommunity" type="XML" />
                        <core:Fragment id="feedsFragment" fragmentName="sap.ino.vc.campaign.fragments.CampaignFeeds" type="XML" />
                        <VBox id="centerBlogContainer"/>
                        <HBox 
                            class="sapInoCampaignHomeCenterSegment"
                            fitContainer="true">
                           
                            <VBox>
                                <layoutData>
                                    <FlexItemData minWidth="50%" maxWidth="50%" />
                                </layoutData>
                                <VBox id="centerTopCommentatorSplitContainer"/>
                                <VBox id="centerBlogSplitContainer"/>
                               
                            </VBox>
                             <VBox>
                                <layoutData>
                                    <FlexItemData minWidth="50%" maxWidth="50%" />
                                </layoutData>
                                <VBox id="centerCampaignManagerSplitContainer"/>
                                <VBox id="centerCommentSplitContainer"/>
                                
                            </VBox>
                           
                        </HBox>
                        <VBox id="centerCommentContainer"/>
                        
                        
                    </VBox>
                    <VBox
                        class="sapInoBaseHomepageRight sapInoCampaignHomepageRight">
                        <VBox id="rightBlogContainer">
                            <core:Fragment id="blogsFragment" fragmentName="sap.ino.vc.blog.fragments.BlogsCommunity" type="XML" />  
                        </VBox>
                        <VBox id="rightCommentContainer">
                            <core:Fragment id="commentFragment" fragmentName="sap.ino.vc.comment.fragments.CampaignComment" type="XML" />
                        </VBox>
                        <VBox id="rightTopCommentatorContainer">
                            <core:Fragment id="topCommentatorFragment" fragmentName="sap.ino.vc.campaign.fragments.TopCommentators" type="XML" />
                        </VBox>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
        <core:Fragment fragmentName="sap.ino.vc.commons.fragments.ObjectNotExists"
                       type="XML"/>
    </Page>
</mvc:View>