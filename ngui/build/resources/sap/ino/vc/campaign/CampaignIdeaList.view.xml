<mvc:View
    controllerName="sap.ino.vc.campaign.CampaignIdeaList"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <Page 
        id="idealistpage"
        showFooter="{= !${device>/system/phone} &amp;&amp; !!${view>/List/SHOW_MASS_ACTION_BAR} }"
        enableScrolling="false">
        <customHeader>
            <core:Fragment fragmentName="sap.ino.vc.commons.fragments.ObjectListToolbar" type="XML"/>
        </customHeader>
        <content>
            <core:Fragment fragmentName="sap.ino.vc.idea.fragments.IdeaList" type="XML" />
        </content>
        <footer>
            <core:Fragment fragmentName="sap.ino.vc.idea.fragments.MassActionToolbar" type="XML" />
        </footer>
    </Page>
</mvc:View>