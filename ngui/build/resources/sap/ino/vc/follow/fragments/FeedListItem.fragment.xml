<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:ino="sap.ino.controls"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<CustomListItem class="sapInoFeedListItem">
		<content>
			<FlexBox alignItems="Start" width="100%" height="100%">
				<items>
					<VBox width="100%" class="sapUiSmallMarginTopBottom" >
						<HBox width="100%">
							<ino:IdentityCard
                                        visible="{= !${device>/system/phone} }"
                                        userImageUrl="{ path: 'feed>ACTOR_IMAGE_ID', formatter: '.formatter.userImage' }"
                                        identityId="{feed>ACTOR_ID}"
                                        identityPress="onOpenIdentityQuickView"
                                        imageSize="S" />
							<VBox height="100%" wrap="Wrap" class="sapInoFeedListItemBox">
								<l:HorizontalLayout allowWrapping="true" class="sapInoFeedListItemTxt sapUiSmallMarginBottom">
									<l:content>
										<Link visible="{= !!${feed>ACTOR_ID}}" text="{feed>ACTOR_NAME}" press="onOpenActor" class="sapUiTinyMarginEnd"/>
										<core:HTML 
                                                    content="{path: 'feed>', formatter:'.feedMsgFormatter'}" 
                                                    sanitizeContent="true" 
                                                    afterRendering="_onAfterRendering"/>
									</l:content>
								</l:HorizontalLayout>
								<Label text="{path: 'feed>EVENT_AT', type: 'sap.ui.model.type.DateTime', formatOptions: { relative: false }}"
                                            class="sapInoTimestamp"/>
								<core:HTML preferDOM="false" sanitizeContent="true" 
                                            visible="{= ${feed>INVOLVED_OBJ_TYPE_CODE} === 'COMMENT' &amp;&amp; !!${feed>CONTENT}}" 
                                            content="{path:'feed>CONTENT', formatter:'.formatter.wrapToHTML'}" 
                                            class="sapUiSmallMarginTop" />
								<l:HorizontalLayout class="sapUiSmallMarginTop" />
							</VBox>
						</HBox>
					</VBox>
				</items>
			</FlexBox>
		</content>
	</CustomListItem>
</core:FragmentDefinition>     