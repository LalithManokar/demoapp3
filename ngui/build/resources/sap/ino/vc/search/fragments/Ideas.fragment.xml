<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:ino="sap.ino.controls"
	xmlns:core="sap.ui.core">
	
    <ino:WrappingList 
        id="objectIdeaList"
        growing="true"
        visible="{path: 'data>/Ideas', formatter:'.isShown'}"
        growingThreshold="{path : 'device>/system', formatter: '.formatter.listThreshold'}"
        growingScrollToLoad="true"
        wrapping="true"
        noDataText="{i18>CAMPAIGN_HOME_PANEL_IDEAS_NO_DATA}"
        updateStarted="onObjectListUpdateStarted"
        updateFinished="onObjectListUpdateFinished">
    </ino:WrappingList>
    <OverflowToolbar design="transparent" height="2rem" class="sapInoGlobalSearchToolbar" visible="{path: 'data>/Ideas', formatter:'.isShown'}">
        <ToolbarSpacer/>
		<Link text="{i18n>CTRL_GLOBAL_SEARCH_MORE}" tooltip="{i18n>CTRL_GLOBAL_SEARCH_MORE_IDEA_TOOLTIP}" visible="{parts: [{path: 'data>/Ideas'}], formatter: '.showMoreLink'}" press="goIdeas" class="sapInoGlobalSearchMore"/>
    </OverflowToolbar>
</core:FragmentDefinition>