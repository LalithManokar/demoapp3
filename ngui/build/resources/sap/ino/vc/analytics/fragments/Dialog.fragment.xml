<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog class="sapInoSmartChartMinWidth">
		<customHeader>
			<!-- 	<Toolbar><ToolbarSpacer/><Title text="{i18n>BO_ANA_FLD_SAVE_AS}" level="H2"/><ToolbarSpacer/><Button icon="sap-icon://decline" press="onCancel" /></Toolbar> 	-->
			<OverflowToolbar id="otb3" class="sapInoSmartChart">
				<Label text="{i18n>BO_ANA_FLD_SAVE_AS}" />
				<ToolbarSpacer />
				<Button icon="sap-icon://decline" press="onCancel" />
			</OverflowToolbar>
		</customHeader>
		<content>
			<l:HorizontalLayout class="sapUiSmallMargin" >
				<Label text="{i18n>BO_ANA_FLD_REPORT_TITLE}" textAlign="Left" class="sapInoDialogBtn" id="title"></Label>
				<Input id="reportTitle"></Input>
			</l:HorizontalLayout>
		</content>
		<beginButton >
			<Button text="{i18n>BO_COMMON_BUT_SAVE}" press="onSubmit" id="submitButton"/>
		</beginButton >
		<endButton>
			<Button text="{i18n>BO_COMMON_BUT_CANCEL}" press="onCancel" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>