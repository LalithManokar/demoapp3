<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:c="sap.ino.controls">
	<Dialog id="parameterDialog" title="{i18n>BO_ANA_FLD_SELECT_PARAMETER}" modal="true" contentWidth="100px">
		<content>
			<l:VerticalLayout
			    width="100%">
				<Label id="dialogLabel" design="sap.m.LabelDesign.Bold"/>
				<c:ListBox id="listBox" width="100%" height="150px" visible="{objectContext>/listBoxVisible}"/>
                <DatePicker id="datePicker" width="100%" valueFormat="yyyy-MM-dd" visible="{objectContext>/datePickerVisible}"/>
				<FlexBox
				    id="dialogVBox"
				    width="100%"
				    height="150px"
	                justifyContent="Center"
				    alignItems="Center"
				    visible="{objectContext>/VBoxVisible}">
					<items>
						<BusyIndicator size="1.5em"/>
					</items>
				</FlexBox>
			</l:VerticalLayout>
		</content>
		<buttons>
			<Button id="parameterbutton" text="{i18n>BO_ANA_BUT_NEXT}"/>
			<Button id="parametercancelbutton" text="{i18n>BO_COMMON_BUT_CANCEL}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>