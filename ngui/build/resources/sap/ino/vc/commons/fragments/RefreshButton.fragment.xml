<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Button 
        icon="sap-icon://refresh"
        press="onRefresh"
        tooltip="{i18n>EXP_REFRESH_BUTTON}"
        visible="{= !${device>/system/phone} &amp;&amp; !${view>/HIDE_HEADER_BUTTONS} &amp;&amp; !${view>/HIDE_REFRESH}}"
        type="Transparent">
        <layoutData>
            <OverflowToolbarLayoutData moveToOverflow="false" />
        </layoutData>
    </Button>
</core:FragmentDefinition>