<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<HBox  
        alignItems="Center">
		<Label text="{i18n>EXP_LABEL_OFFICE_VIEW_BACKOFFICE}" class="sapUiTinyMarginEnd sapInoBackofficeToggleButton"/> 
		<Switch 
        id="backofficeToogle" 
        state="{component>/SHOW_BACKOFFICE}" 
        tooltip="{= ${component>/SHOW_BACKOFFICE} ? ${i18n>EXP_TOGGLE_OFFICE_VIEW_COMMUNITY} : ${i18n>EXP_TOGGLE_OFFICE_VIEW_BACKOFFICE} }" 
        change="onOfficeToggle"/>
	</HBox>
</core:FragmentDefinition>