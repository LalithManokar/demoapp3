<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ToggleButton
        id="filterButton"
        icon="sap-icon://filter" 
        tooltip="{i18n>EXP_FILTER_BUTTON}"
        press="onShowFilterBar" 
        pressed="false"
        class="sapInoPinBtn"
        visible="{device>/system/desktop}">
        <layoutData>
            <OverflowToolbarLayoutData moveToOverflow="false" />
        </layoutData>
    </ToggleButton>
    <Button
        id="filterButtonMobile"
        icon="sap-icon://filter" 
        tooltip="{i18n>EXP_FILTER_BUTTON}"
        press="onShowFilterBar" 
        class="sapInoPinBtn"
        visible="{= !${device>/system/desktop}}">
        <layoutData>
            <OverflowToolbarLayoutData moveToOverflow="false" />
        </layoutData>
    </Button>
</core:FragmentDefinition>