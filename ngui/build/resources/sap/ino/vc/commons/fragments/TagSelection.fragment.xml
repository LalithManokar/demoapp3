<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls">
   <Tokenizer id="Tags" class="sapInoWrap" tokens="{view>/List/TAGS}" editable="true" visible="{= ${view>/List/TAGCLOUD} === true }">
   <tokens>
  <Token 
       ariaLabelledBy="tagSelectFilterLabel"
       selected="{= !${view>ID} }"
       key="{view>ID}"
       delete="onTagItemDelete"
       editable="true"
       text="{path: 'view>NAME', formatter: '.formatter.decodeURI'}"/>
   </tokens>
</Tokenizer>  
</core:FragmentDefinition>