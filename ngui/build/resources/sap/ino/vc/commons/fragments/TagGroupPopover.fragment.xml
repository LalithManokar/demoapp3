<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:commons="sap.ui.commons"
	xmlns:table="sap.ui.table"
	xmlns:core="sap.ui.core">
	<Popover
		showHeader="false"
		contentWidth="400px"
		contentHeight="500px"
		placement="sap.m.PlacementType.HorizontalPreferredRight" >
		 <Page
            showHeader="true"
            enableScrolling="false"
            title="{path:'/RootGroupName',formatter : '.formatter.TagGroupName'}">
        <content>
          <table:TreeTable
                    rows="{path:'/', parameters: {arrayNames:['children']}}"
                    selectionMode="None"
                    ariaLabelledBy="title">
                <table:columns>
                    <table:Column width="auto">
                        <Label text="{i18n>LIST_TIT_FILTER_TAG_HIERARCHY}"/>
                        <table:template>
                            <HBox class="sapInoTagHierarcyGrp">
                            <commons:TriStateCheckBox
                            class="inmTagTriStatCheckBox"
                            text="{NAME}"
                            selectionState="{checked}"
                            change="onTagSelectionChange">
                            </commons:TriStateCheckBox>
                        	<core:Icon
                    			src="sap-icon://group-2"
                    			visible="{= ${path:'OBJECT_TYPE_CODE',formatter:'.setVibilityTagIcon'}}">
                    		</core:Icon>
                    		</HBox>
                        </table:template>
                    </table:Column>
                    
                </table:columns>
            </table:TreeTable>
        </content>
        <footer>
				<Toolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>LIST_TIT_FILTER_TAG_DONE}" type="Accept" press="onTagTreeSelectedDone"/>
			</Toolbar>
        </footer>
    </Page>
	</Popover>
</core:FragmentDefinition>