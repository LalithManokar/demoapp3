<mvc:View
    controllerName="sap.ino.vc.idea.Rewards"
	xmlns="sap.m"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<l:Grid id="myGrid" defaultSpan="XL12 L12 M12 S12">
		<List
            class="sapInoRewardList sapUiMediumMarginBottom"
            headerText="{i18n>EVALUATION_LIST_TIT}"            
            id="rewardsList"
            items="{path: 'data>Rewards',
                    sorter: [{path: 'GROUP_ORDER',
                              descending: false,
                              group: '.grouper'},
                             {path: 'CREATED_AT',
                              descending: true}],
                    groupHeaderFactory: '.formatter.formatGroupHeader'}"
            mode="None"
            noDataText="{i18n>REWARDS_LBL_NO_REWARDS_FOUND}">
			<headerToolbar>
				<Toolbar width="100%">
					<content>
						<Title
                            class="sapUxAPObjectPageSubSectionHeaderTitle"
                            text="{i18n>REWARDS_OBJECT_ALL}"/>
					</content>
				</Toolbar>
			</headerToolbar>
			<CustomListItem
                id="rewardsListItem"
                press="onItemPress"
                type="Active">
				<customData>
					<core:CustomData key="RewardListId" value="{data>REWARD_LIST_ID}" />
					<core:CustomData key="IdeaID" value="{data>IDEA_ID}" />
					<core:CustomData key="IdeaPhaseCode" value="{data>IDEA_PHASE_CODE}" />
					<core:CustomData key="IdeaName" value="{data>IDEA_NAME}" />
					<core:CustomData key="UnitCode" value="{data>REWARD_UNIT}" />
					<core:CustomData key="UnitText" value="{data>REWARD_UNIT_DESCRIPTION}" />
				</customData>
				<content>
					<l:Grid
                        defaultSpan="XL12 L12 M9 S8"
                        hSpacing="0"
                        vSpacing="0"
                        position="center">
						<l:content>
							<HBox>
								<VBox>
									<Text 
                                    class="sapInoRewardListItemDate"
                                    text="{path: 'data>CREATED_AT', formatter: '.formatter.toDate'}"></Text>
								</VBox>
								<VBox visible="{= ${data>EMPLOYEE_ID} > 0}" class="sapInoRewardsEmployee">
									<Link
                                    class="sapInoRewardCreatorName sapUiSmallMarginBegin"
                                    text="{data>EMPLOYEE_NAME}"
                                    wrapping="true"
                                    press="onEmployeePressed"></Link>
								</VBox>
								<VBox visible="{= ${data>EMPLOYEE_ID} === 0}">
									<Text text="{i18n>IDEA_OBJECT_TIT_IDEA_Anonymity}"/>
								</VBox>
								<layoutData>
									<l:GridData span="XL3 L3 M12 S12" />
								</layoutData>
							</HBox>
							<HBox>
								<VBox class = "sapUiSmallMarginBegin">
									<Label
                                            class="sapInoRewardListLabel"
                                            wrapping = "true"
                                            text="{i18n>REWARDS_TIT_REWARD_AMT}"></Label>
								</VBox>
								<VBox class = "sapUiSmallMarginBegin sapInoRewardsTabAmount">
									<Text 
								    class="sapInoRewardsValueText"
								    text="{parts: [{path: 'data>REWARD_AMOUNT'}, {path: 'data>REWARD_UNIT'}],
								           formatter: '.formatter.rewardAmountUnit' }"></Text>
								</VBox>
								<VBox class = "sapUiSmallMarginBegin">
									<Label
                                            class="sapInoRewardListLabel"
                                            text="{i18n>REWARDS_TIT_REWARD_SHARE}"></Label>
								</VBox>
								<VBox class = "sapInoRewardsTabShare">
									<Text class = "sapInoRewardsValueText"
                                          text="{path: 'data>REWARD_SHARE', formatter: '.formatter.addPercentage'}"></Text>
								</VBox>
								<VBox class = "sapUiSmallMarginBegin">
									<Label
				                            class="sapInoRewardListLabel"
				                            text="{i18n>REWARDS_TIT_CONTRIBUTION_SHARE}" ></Label>
								</VBox>
								<Text
									class="sapInoRewardsValueText sapInoRewardsTabShare"
				                    text="{path: 'data>CONTRIBUTION_SHARE', formatter: '.formatter.addPercentage'}"></Text>
								<Label 
				                            class="sapInoRewardListLabel sapUiSmallMarginBegin"
				                            text="{i18n>REWARDS_TIT_REWARD_STATUS}"></Label>
								<Text
									class="sapInoRewardsValueText sapUiSmallMarginBegin"
				                            text="{data>REWARD_STATUS_TEXT}"/>
								<layoutData>
									<l:GridData span="XL9 L9 M12 S12" />
								</layoutData>
							</HBox>
						</l:content>
					</l:Grid>
				</content>
			</CustomListItem>
		</List>
	</l:Grid>
</mvc:View>