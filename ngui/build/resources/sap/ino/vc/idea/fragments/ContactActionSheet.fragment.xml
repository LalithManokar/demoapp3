<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m"
                         xmlns:mvc="sap.ui.core.mvc"
                        >
    <ActionSheet
		title="{i18n>IDEA_OBJECT_TIT_CONTACT}"
		showCancelButton="true"
		placement="VerticalPreferredTop">
		<buttons>
			<Button text="{i18n>IDEA_OBJECT_BTN_CONTACT_CONTRIBUTORS}"
                    press="onContactContributors"/>
            <Button text="{i18n>IDEA_OBJECT_BTN_CONTACT_COACH}"
                    enabled="{= ${object>/Coach}.length > 0 }"
                    press="onContactCoach"/>
		    <Button text="{i18n>IDEA_OBJECT_BTN_CONTACT_IDEA_EXPERTS}"
		            enabled="{= ${object>/Experts}.length > 0 }"
                    press="onContactIdeaExperts"/>
			<Button text="{i18n>IDEA_OBJECT_BTN_CONTACT_CAMPAIGN_EXPERTS}"
			        enabled="{= ${object>/CampaignExperts}.length > 0 }"
                    press="onContactCampaignExperts"/>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>