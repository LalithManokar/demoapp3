<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="copyDialog"
        title="{i18n>IDEA_OBJECT_TIT_COPY}">
        <f:SimpleForm
            maxContainerCols="1"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="1"
            labelSpanM="1"
            emptySpanL="3"
            emptySpanM="3"
            columnsL="1"
            columnsM="1">
            <Label
                required="{object>meta/nodes/Root/attributes/NAME/required}"
                text="{i18n>IDEA_OBJECT_FLD_COPY_IDEA_TITLE}"
                labelFor="title"/>
            <Input
                id="title"
                value="{copy>/NAME}"
                maxLength="{object>meta/nodes/Root/attributes/NAME/maxLength}"
                enabled="true"
                liveChange="onCopyIdeaTitleChange">
            </Input>
        </f:SimpleForm>
        <buttons>
            <Button
                id="copyok"
                text="{i18n>BTN_OK}"
                type="Accept"
                press="onCopyDialogOk"/>
            <Button
                text="{i18n>BTN_CANCEL}"
                press="onCopyDialogClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>