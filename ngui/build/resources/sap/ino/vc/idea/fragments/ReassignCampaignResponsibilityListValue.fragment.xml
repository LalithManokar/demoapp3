<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:table="sap.ui.table"
	xmlns="sap.m">
	<Dialog
        title="{assignment>/RESP_NAME}"
        class="sapInoRespListValueDialog">
		<table:TreeTable
        id="respValueTreeTable"
        selectionMode="Single"
        enableColumnReordering="false"
        expandFirstLevel="false"
        columnHeaderVisible="false"
        selectionBehavior="RowOnly"
        rowSelectionChange="onRespRowSelectionChange"
        rows="{ path:'assignment>/Resp_Value_Tree',
        parameters : {
                countMode: 'Inline',
                arrayNames: ['children']}}">
			<table:columns>
				<table:Column>
					<table:template>
						<Text text="{assignment>NAME}" wrapping="false" />
					</table:template>
				</table:Column>
			</table:columns>
		</table:TreeTable>
		<beginButton>
			<Button text="{i18n>BTN_OK}" press ="onSelectedItem" enabled="{view>/ENABLE_OK_BTN}" />
		</beginButton>
		<endButton>
			<Button text="{i18n>BTN_CANCEL}" press="onRespValueDialogClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
