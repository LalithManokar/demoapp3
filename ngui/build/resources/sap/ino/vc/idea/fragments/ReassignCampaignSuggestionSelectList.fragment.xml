<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m">
    <SelectDialog id="reassignCampaignSuggestionSelectDialog"
            title="{i18n>LIST_TIT_FILTER_CAMPAIGN_HEADER}"
            search="onReassignCampaignDialogSearch"
            liveChange="onReassignCampaignDialogSearch"
            confirm="onReassignCampaignDialogItemsSelect"
            items="{assignment>/campaignSuggestion}">
        <StandardListItem
            title="{assignment>SHORT_NAME}" type = "Active">
            <customData>
                <core:CustomData key="ID" value="{assignment>ID}" />
            </customData>
        </StandardListItem>
    </SelectDialog>
</core:FragmentDefinition>