<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m"
                         xmlns:ino="sap.ino.controls"
                         xmlns:mvc="sap.ui.core.mvc"
                        >
    <SelectDialog id="assignCoachDialog"
        contentHeight="50%"
        noDataText="{i18n>IDEA_OBJECT_LBL_NO_COACH_FOUND}"
        title="{i18n>IDEA_OBJECT_TIT_ASSIGN_COACH}"
        liveChange="onAssignCoachSearch"
        search="onAssignCoachSearch"
        confirm="onAssignCoachDialogOK"
        cancel="onAssignCoachDialogCancel"
        items="{data>/SearchCoach(searchToken='*')/Results}"
        >
        <CustomListItem class="ideaCoachAssignItem">
            <ino:IdentityActionCard 
                identityId="{data>ID}" 
                userOrganization="{data>ORGANIZATION}"
                userName="{data>NAME}"
                userImageUrl="{ path: 'data>IMAGE_ID', formatter: '.formatter.userImage' }"
                actionable="false"
                visible="{ path: 'data>ID', formatter: '.formatIdentityCardShow' }"
                pinnable="{clipboard>/enabled}"
                isPinned="{ path: 'data>ID', formatter: '.formatIsUserInClipboard' }"
                pinPressed="onUserPinPressed"
                identityPress="onOpenIdentityQuickView"
            />
        </CustomListItem>
    </SelectDialog>
</core:FragmentDefinition>