<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:ino="sap.ino.controls"
	xmlns:mvc="sap.ui.core.mvc"
                        >
	<FlexBox alignItems="Start" justifyContent="SpaceBetween" wrap="Wrap" width="100%" class="sapInoPPMItemHBox">
		<items>
			<VBox width="100%" class="sapInoPPMItemHBox">
				<l:Grid position="Left" hSpacing="0">
					<HBox>
						<layoutData>
							<l:GridData span="XL4 L4 M7 S12"/>
						</layoutData>
						<items>
							<VBox class="sapInoPPMItemVBox sapUiTinyMarginTop">
								<HBox class="sapUiTinyMarginTop">
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_OBJECT_STATUS}"/>
									<Text class="sapInoPPMText" text="{ppm>StatusName}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_PRIORITY}"/>
									<Text class="sapInoPPMText" text="{ppm>PriorityName}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_ITEM_ACTIVE}"/>
									<Text class="sapInoPPMText" text="{ppm>IsItemActive}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_TECHNICAL_SUCCESS_PROBABILITY}"/>
									<Text class="sapInoPPMText" 
									text="{path: 'ppm>TechnicalSuccessProbability', formatter: '.formatter.successProbability'}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_COMMERICAL_SUCCESS_PROBABILITY}"/>
									<Text class="sapInoPPMText" 
									text="{path: 'ppm>CommercialSuccessProbability', formatter: '.formatter.successProbability'}"/>
								</HBox>
							</VBox>
						</items>
					</HBox>
					<HBox>
						<layoutData>
							<l:GridData span="XL4 L4 M7 S12"/>
						</layoutData>
						<items>
							<VBox class="sapInoPPMItemVBox sapUiTinyMarginTop">
							    <HBox class="sapUiTinyMarginTop">
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_DECISION_POINTS_TOTAL}"/>
									<Text class="sapInoPPMText" text="{ppm>DecisionPointsTotal}"/>
								</HBox>
								<HBox class="sapUiTinyMarginBottom">
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_DECISION_POINTS_ACTIVE}"/>
									<Text class="sapInoPPMText" text="{ppm>DecisionPointActive} ({ppm>DecisionPointActiveName})"/>
								</HBox>
								<ino:ProcessIndicator processSteps="{path: 'ppm>DecisionPointsTotal',  type: 'sap.ui.model.type.String'}"
                                    currentStep="{path: 'ppm>DecisionPointActive', type: 'sap.ui.model.type.String', formatter: '.formatter.currentStep'}"
                                    tooltip="{ppm>DecisionPointActiveName}"/>
							</VBox>
						</items>
					</HBox>
				</l:Grid>
				<Label text="{i18n>PPM_FLD_ITEM_DESCRIPTION}" class="sapInoPPMLabel"/>
				<Text class="sapInoPPMText sapUiTinyMarginBottom" text="{ppm>ItemDescription}"/>
				<l:Grid position="Left" hSpacing="0" class="sapUiTinyMarginTop">
					<HBox>
						<layoutData>
							<l:GridData span="XL4 L4 M7 S12"/>
						</layoutData>
						<items>
							<VBox>
								<core:Icon src="sap-icon://past" size="1.5rem" useIconTooltip="false"/>
							</VBox>
							<VBox class="sapInoPPMDetailVBox">
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_FORECASTED_START}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>ForecastedStart', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_FORECASTED_FINISH}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>ForecastedFinish', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
							</VBox>
						</items>
					</HBox>
					<HBox>
						<layoutData>
							<l:GridData span="XL4 L4 M7 S12"/>
						</layoutData>
						<items>
							<VBox>
								<core:Icon src="sap-icon://present" size="1.5rem" useIconTooltip="false"/>
							</VBox>
							<VBox class="sapInoPPMDetailVBox">
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_PLANNED_START}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>PlannedStart', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
								<HBox>
									<Label class="sapInoPPMLabel" text="{i18n>PPM_FLD_PLANNED_FINISH}"/>
									<Text class="sapInoPPMText" text = "{path:'ppm>PlannedFinish', type:'sap.ui.model.type.Date',
							formatOptions:{ style: 'medium', source: { pattern : 'yyyy-MM-dd\'T\'HH:mm:ss'} }}"/>
								</HBox>
							</VBox>
						</items>
					</HBox>
				</l:Grid>
			</VBox>
		</items>
	</FlexBox>
</core:FragmentDefinition>