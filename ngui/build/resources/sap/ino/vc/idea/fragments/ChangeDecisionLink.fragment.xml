<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m">
    <Dialog id="addLinkDialog"
            title="{i18n>IDEA_OBJECT_TIT_MODIFY_LINK}">
            <f:SimpleForm maxContainerCols="2"
                          editable="true"
                          layout="ResponsiveGridLayout"
                          labelSpanL="2"
                          labelSpanM="2"
                          emptySpanL="3"
                          emptySpanM="3"
                          columnsL="2"
                          columnsM="2">
                <Label text="{i18n>IDEA_OBJECT_TIT_LINK_URL}" required="true"/>
                <Input id="URLInput" class="sapInoIdeaModifyLinkDialogURL" value="{link>URL}" maxLength="{object>meta/nodes/Links/attributes/URL/maxLength}"/>
                <Label text="{i18n>IDEA_OBJECT_TIT_LINK_LABEL}"/>
                <Input class="sapInoIdeaModifyLinkDialogLABEL" value="{link>LABEL}" maxLength="{object>meta/nodes/Links/attributes/LABEL/maxLength}"/>
            </f:SimpleForm>
        <beginButton>
            <Button text="{i18n>BTN_OK}" press="onAddLinkChangeDecisionDialogOK"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>BTN_CANCEL}" press="onAddLinkChangeDecisionDialogCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>