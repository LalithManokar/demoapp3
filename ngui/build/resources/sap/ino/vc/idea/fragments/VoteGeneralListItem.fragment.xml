<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:ino="sap.ino.controls">
	<CustomListItem class="ideaVoteListItem">
		<HBox>
			<VBox>
				<ino:IdentityCard
                userImageUrl="{ path: 'data>IDENTITY_IMAGE_ID', formatter: '.formatter.userImage' }"
                identityId="{data>USER_ID}"
                identityPress="onOpenIdentityQuickView"
                imageSize="M"/>
			</VBox>
			<VBox height="100%" wrap="Wrap" class="sapInoIdeaVoteBoxIdentity">
					<Link class="sapInoIdeaVoterName"
    				    text="{data>NAME}" 
    				    emphasized="true" 
    				    press="OnUserPressed"
    				    wrapping="true"
    				    visible="{= ${object>PUBLIC_VOTE} ? true : false}"/>
				<Text text="{i18n>IDEA_VOTE_LIST_ANONYMOUS_USER}" wrapping="false" visible="{= !${object>PUBLIC_VOTE} ? true : false}"/>	    
				<Text text="{=${data>COMPANY} ? ${data>COMPANY} : ${data>ORGANIZATION}}" wrapping="true"/>
			</VBox>
			<VBox>
				<HBox>
					<core:Icon src="sap-icon://InoIcons/heart"  class="sapInoIdeaVoteText sapUiSmallMarginEnd"/>
					<Text class="sapInoIdeaVoteText sapUiLargeMarginEnd" visible="{= !${data>SOURCE_IDEA_ID} ? false : true}" text="{i18n>IDEA_VOTE_LIST_MERGED_VOTE}" wrapping="false"/>
					<Text text="{parts: [{path: 'data>VOTE_REASON'}, {path: 'data>VOTE_COMMENT'}], formatter: '.formatter.voteComment'}" class="sapInoIdeaVoteText"/>
				</HBox>
				<Label text="{path: 'data>CHANGED_AT', type: 'sap.ui.model.type.Date', formatOptions: { relative: true}}" />
			</VBox>
		</HBox>
	</CustomListItem>
</core:FragmentDefinition>