<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<OverflowToolbar class="sapMBar" design="Auto" visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/SHOW_MASS_ACTION_BAR} }">
		<core:Fragment fragmentName="sap.ino.vc.commons.fragments.MessageLog" type="XML"/>
		<!--
		<HBox visible="{= !!${filterItemModel>/isShowFilterSideFilterButtonGroup}}" class="sapInoFilterSideFilterButtonGroup">
			<Button
                visible="{= ${view>/List/IS_FILTER_SUBPAGE} === true || ${view>/List/TAGCLOUD} === true}"
                icon="sap-icon://accept"
                type="Accept"
	            text="{i18n>LIST_BTN_FILTER_APPLY}"
	            tooltip="{i18n>LIST_BTN_FILTER_APPLY}"
	            press="onApplyFilterToQuery"/>	
            <Button 
                id="showMoreFiltersBtn"
                visible="{= !${view>/List/IS_SHOW_MORE_FILTER}}"
                icon="sap-icon://add-filter" 
                class="sapUiTinyMarginBegin"
                type="Emphasized" 
                text="{i18n>LIST_BTN_MORE_FILTERS}"
                press="onMoreFilterChange" />
			<Button 
                visible="{= ${view>/List/IS_FILTER_SUBPAGE} === true || ${view>/List/TAGCLOUD} === true}"
                icon="sap-icon://sys-cancel"
                class="sapUiTinyMarginBegin"
                text="{i18n>LIST_BTN_RESET_FILTERS}"
                press="onFilterReset" />
		</HBox>
		-->
		<ToolbarSpacer/>
		<HBox>
			<Button 
                id="sapInoMassMarkAsRead"
                text="{i18n>IDEA_LIST_BTN_MASS_MARKREAD_BUTTON}"
                tooltip="{i18n>IDEA_LIST_EXP_MASS_MARKREAD_BUTTON}"
                visible="true"
                enabled="{= ${view>/List/SELECT_ALL_ENABLE}}"
                press="onMassMarkAsRead"></Button>		
			<Button
	            id="sapInoMassSelect"
	            text="{= ${view>/List/SELECT_ALL} ? ${i18n>IDEA_LIST_BTN_MASS_DESELECT_BUTTON} : ${i18n>IDEA_LIST_BTN_MASS_SELECT_BUTTON}}"
	            tooltip="{i18n>IDEA_LIST_BTN_MASS_SELECT_BUTTON}"
	            enabled="{= ${view>/List/SELECT_ALL_ENABLE} &amp;&amp; !${view>/List/EXPORT_ALL}}"
	            visible="{= (${view>/ORIENTATION} === 1 || ${view>/List/MANAGE}) }"
	            press="onMassIdeaSelect"></Button>
			<Button 
                id="sapInoMassAssignBtn"
                text="{i18n>IDEA_LIST_BTN_MASS_ASSIGN_BUTTON}"
                tooltip="{i18n>IDEA_LIST_EXP_MASS_ASSIGN_BUTTON}"
                visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }"
                enabled="false"
                press="onMassAssign"></Button>
            <Button
                id="sapInoMassMergeBtn"
                text="{i18n>IDEA_LIST_BTN_MASS_MERGE_BUTTON}"
                tooltip="{i18n>IDEA_LIST_BTN_MASS_MERGE_BUTTON}"
                enabled="{path: 'clipboard>/object', formatter: '.formatMergeBtnEnable'}"
                visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }"
                press="handleMassMerge"
                ></Button>
			<Button 
                id="sapInoMassStatusBtn"
                text="{i18n>IDEA_LIST_BTN_MASS_STATUS_BUTTON}"
                tooltip="{i18n>IDEA_LIST_EXP_MASS_STATUS_BUTTON}"
                enabled="false"
                visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }"
                press="onMassChangeStatus"></Button>
            <Button 
                id="sapInoMassChangeAuthorBtn"
                visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }" 
                text="{i18n>IDEA_LIST_BTN_MASS_AUTHOR_BUTTON}" 
                tooltip="{i18n>IDEA_LIST_EXP_MASS_AUTHOR_BUTTON}"
                enabled="false"
                press="onMassChangeAuthor" />
			<Button 
                id="sapInoMassFollowUpBtn"
                text="{i18n>IDEA_LIST_BTN_MASS_FOLLOWUP_BUTTON}"
                tooltip="{i18n>IDEA_LIST_EXP_MASS_FOLLOWUP_BUTTON}"
                enabled="false"
                visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true }"
                press="onMassFollowUp"></Button>
		</HBox>
		<HBox>
			<core:Fragment fragmentName="sap.ino.vc.commons.fragments.ExportButton" type="XML"/>
		</HBox>
	</OverflowToolbar>
</core:FragmentDefinition>