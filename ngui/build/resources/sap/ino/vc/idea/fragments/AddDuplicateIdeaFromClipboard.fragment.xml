<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog 
        afterClose="onAfterClose"
        contentWidth="50%"
        stretch="{device>/system/phone}"
        title="{i18n>IDEA_RELATED_TIT_MARK_DUPLICATE}">
        <VBox width="100%">
            <List
                id="AddDuplicateIdeaList"
                mode="None"
                noDataText="{i18n>RELATED_IDEAS_LBL_NO_DUPLICATES_TO_MARK}"/>
        </VBox>
        <buttons>
            <Button text="{i18n>BTN_OK}" type="Accept" enabled="{= ${duplicate>/selectedDupIdeas}.length > 0 }" press="onAddFromClipboardDialogOK"/>
            <Button text="{i18n>BTN_SELECT_ALL}" press="onAddFromClipboardDialogSelectAll"/>
            <Button text="{i18n>BTN_CANCEL}" press="onAddFromClipboardDialogCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>