<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls"
    xmlns:l="sap.ui.layout">
    <FlexBox class="sapInoSortPanelSection" alignItems="Start" justifyContent="Start">
		<Label id="sortByLabel" text="{i18n>LIST_TIT_SORT_HEADER}" class="sapInoSortPanelLabel" labelFor="QuickSorterSelect"/>
	    <SelectList id="QuickSorterSelect" selectedKey="{path:'view>/List/QUICKSORT'}" items="{list>/QuickSorter}" class="sapInoQuickSortPanel" visible="{path:'list>/QuickSorter', formatter: '.transListValue' }" itemPress="onQuickSort">
	        <core:Item key="{list>ACTION}" text="{path:'list>TEXT', formatter : '.formatter.text'}" enabled="{parts:['list>ACTION', 'view>/List/SORT'], formatter:'.quickSortEnable'}" tooltip="{path : 'list>TEXT', formatter : '.formatter.text'}"/>
	    </SelectList>
        <FlexBox id="SorterContainer" class="sapInoSortPanelItemsMainSection" alignItems="Center" justifyContent="Start" wrap="Wrap">
            <FlexBox
                alignItems="Stretch"
				justifyContent="Start"
                class="sapUiTinyMarginBottom sapInoIdeaSorterItem">
                <Select
                    ariaLabelledBy="sortByLabel"
                    items="{
                        path: 'list>/Sorter/Values'
                    }"
                    width="160px"
                    class="sortSelectBox"
                    change="onSorterChange">
                    <core:Item
                        text="{path : 'list>TEXT', formatter : '.formatter.text'}"
                        tooltip="{path : 'list>TEXT', formatter : '.formatter.text'}"
                        key="{list>ACTION}"
                        class="sapUiSmallMarginTopBottom sapUiSmallMarginEnd">
                	</core:Item>
                </Select>
                <ToggleButton press="onOrder" pressed="true" class="sapInoIdeaSorterBottom"/>
                <Button
                    id="addSortBtn"
                    ariaLabelledBy="firstSort"
                    enabled="{path:'list>/Sorter/disableAddButton', formatter:'.isDisable'}"
                    icon="sap-icon://add"
                    tooltip="{i18n>EXP_ADD_SORT_BUTTON}"
                    press="onSorterAdd"
                    type="Transparent"
                    class="sapInoIdeaSorterBottom">
                </Button>
            </FlexBox>
        </FlexBox>
    </FlexBox>
</core:FragmentDefinition>