<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m"
                         xmlns:mvc="sap.ui.core.mvc"
                        >
    <VBox>
        <!-- Label text="{ path: 'data>DECIDER_NAME', formatter: '.decisionMadeByFormatter' }" visible="{= ${data>DECIDER_ID} ? true : false }"/ -->
        <Label text="{ path: 'data>REASON_CODE',formatter: '.decisionReasonCodeFormatter'}" visible="{= ${data>REASON_CODE} ? true : false}" />
        <Label text="{ path: 'data>REASON', formatter: '.decisionReasonFormatter' }" visible="{= ${data>REASON} ? true : false }"/>
        <HBox>
        <Label text="{i18n>ACTIVITIES_MSG_DECISION_LINK}" visible="{path: 'data>LINK_URL', formatter: '.formatter.urlVisible'}" 
            class="sapUiTinyMarginEnd"/>
        <Link text="{ parts : [{path: 'data>LINK_LABEL'}, {path: 'data>LINK_URL'}] , formatter : '.formatter.linkLabel' }"  
            href="{data>LINK_URL}" target="_blank" visible="{path: 'data>LINK_URL', formatter: '.formatter.urlVisible'}"/>
        </HBox>
        <Link text="{i18n>ACTIVITIES_MSG_DECISION_MAIL_LINK}" press="onDecisionLinkPress" visible="{= ${data>SEND_RESPONSE} === 1 }" />
    </VBox>
</core:FragmentDefinition>