<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m"
                         xmlns:mvc="sap.ui.core.mvc"
                        >
    <ActionSheet
		title="{i18n>IDEA_OBJECT_TIT_MARK_AS_READ_GENERAL}"
		showCancelButton="true"
		placement="VerticalPreferredTop">
		<buttons>
		    <Button enabled="{markAsRead>/markAllRead}" 
                    text="{i18n>IDEA_OBJECT_BTN_MARK_ALL_READ}"
                    press="onMarkAllRead"/>
			<!--Button enabled="{markAsRead>/NEW_IDEAS}" 
                    text="{i18n>IDEA_OBJECT_BTN_MARK_CREATED_READ}"
                    press="onMarkCreatedRead"/-->
            <Button enabled="{markAsRead>/NEW_STATUSES}" 
                    text="{i18n>IDEA_OBJECT_BTN_MARK_STATUS_READ}"
                    press="onMarkStatusRead"/>
            <Button enabled="{markAsRead>/NEW_UPDATES}" 
                    text="{i18n>IDEA_OBJECT_BTN_MARK_UPDATED_READ}"
                    press="onMarkUpdatedRead"/>
            <Button enabled="{markAsRead>/NEW_COMMENTS}" 
                    text="{i18n>IDEA_OBJECT_BTN_MARK_COMMENT_READ}"
                    press="onMarkCommentRead"/>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>