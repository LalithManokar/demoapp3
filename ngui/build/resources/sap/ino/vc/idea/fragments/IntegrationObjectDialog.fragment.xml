<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog
        id="integrationObjectDialog"
        title="{i18n>IDEA_OBJECT_TIT_INTEGRATION_TARGET}"
        verticalScrolling="true"
		horizontalScrolling="false"
        contentWidth="750px"
        contentHeight="300px">
		<List id="integrationTargetList" mode="SingleSelectLeft"
     		select="selectIntegrationTarget" 
     		updateFinished="onUpdateFinished"
     		items="{objectContext>/RESULT}"
			width="100%">
			<items>
				<StandardListItem title="{objectContext>APINAME}"
    			    type="Active"
    				info="Target System:{objectContext>targetSystemName}"></StandardListItem>
			</items>
		</List>
		<buttons>
			<Button
                id="objectConfirm"
                text="{i18n>INTEGRATION_OBJECT_BTN_CONFIRM}"
                type="Accept"
                enabled="{objectContext>/enableCreateIntegrationObjectBtn}"   
                press="onIntegrationObjectTargetConfim"/>
			<Button
                text="{i18n>BTN_CANCEL}"
                press="onIntegrationObjectDialogClose"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>