<core:FragmentDefinition 
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
        xmlns:ino="sap.ino.controls">
    <Dialog 
        contentWidth="500px"
        afterClose="onAddExpertAfterClose"
        title="{i18n>EXPERTS_TIT_ADD_EXPERT}">

        <Text text="{i18n>EXPERTS_TEXT_ADD_EXPERT}" class="sapUiTinyMarginBeginEnd" wrapping="true"/>
        <ino:IdentityActionCard 
            identityId="{data>ID}" 
            userName="{data>NAME}"
            userOrganization="{data>ORGANIZATION}"
            userRole="{ path: 'data>ROLE_CODE', formatter: '.formatter.roleCode' }"
            userImageUrl="{ path: 'data>IDENTITY_IMAGE_ID', formatter: '.formatter.userImage' }"
            actionable="false"
            pinnable="false"
            identityPress="onOpenIdentityQuickView"
        />
        <buttons>
            <Button text="{i18n>BTN_OK}" type="Accept" press="onAddExpertDialogOK" />
            <Button text="{i18n>BTN_CANCEL}" press="onAddExpertDialogCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>