<mvc:View
    controllerName="sap.ino.vc.idea.RelatedIdeas"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<l:VerticalLayout width="100%">
		<OverflowToolbar visible="{=!${device>/system/phone}  &amp;&amp; ${object>/property/actions/update/enabled} &amp;&amp; ${clipboard>/enabled}}">
			<ToolbarSpacer/>
			<Button
                    press="onMarkDuplicateFromClipboard"
                    enabled="{parts: [{path: 'object>/ID'}, {path: 'clipboard>/changed'}], formatter: '.formatHasOtherIdeasInClipboard'}"
                    text="{i18n>IDEA_OBJECT_BTN_ADD_DUPLICATE_FROM_CLIPBOARD}"
                    type="Default"/>
		</OverflowToolbar>
		<Panel id ="mergeCampaignPanel" width="auto">
			<List
            id="idealist-merge"
            growing="false"
            horizontal="true"
            class = "sapInoIdeasRelatedList"
            showNoData="false"
            wrapping="true"
            visible="{= ${data>RelatedIdeas} &amp;&amp; ${data>RelatedIdeas}.length > 0}"/>
			<content />
		</Panel>
		<Panel id ="currentCampaignPanel" expanded="false" width="auto" expand=".onExpandCurrent" expandable="true">
			<headerToolbar>
				<OverflowToolbar height="100%" press=".onExpandCurrent">
					<HBox>
						<Text text="{i18n>IDEA_SIMILAR_CURRENT_CAMPAIGN_NAME}" class="sapUxAPObjectPageSubSectionHeaderTitle" />
					</HBox>
				</OverflowToolbar>
			</headerToolbar>
			<List
            id="idealist-related"
            growing="false"
            horizontal="true"
            class = "sapInoIdeasRelatedList"
            showNoData="false"
            wrapping="true"
            />
			<List
            id="idealist-similar"
			class="sapInoIdeasRelatedList"            
            noDataText="{i18n>IDEA_RELATED_NO_DATA}"></List>
			<content />
		</Panel>
		<Panel id ="otherCampaignPanel" expanded="false" width="auto" expand=".onExpandOther" expandable="true">
			<headerToolbar>
				<OverflowToolbar height="100%" press=".onExpandOther">
					<HBox>
						<Text text="{i18n>IDEA_SIMILAR_OTHER_CAMPAIGN_NAME}" class="sapUxAPObjectPageSubSectionHeaderTitle" />
					</HBox>
				</OverflowToolbar>
			</headerToolbar>
			<List
            id="idealist-relatedOther"
            growing="false"
            horizontal="true"
            showNoData="false"
			class="sapInoIdeasRelatedList"              
            wrapping="true"
            />
			<List
            id="idealist-similarOther"
            class="sapInoIdeasRelatedList"  
            noDataText="{i18n>IDEA_RELATED_NO_DATA}"></List>
			<content />
		</Panel>		
	</l:VerticalLayout>
</mvc:View>