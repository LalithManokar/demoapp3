<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<Dialog
	id = "forwardDialog"
 title = "{i18n>EVALUATIONREQUESTS_TIT_FORWARD}"
 contentWidth="40%"
 contentHeight ="30%">
		<content>
			<Label text ="{i18n>EVALUATIONREQUESTS_TIT_LBL_FORWARD_TO}" required = "true" class="sapUiSmallMarginBegin sapUiSmallMarginTop"/>
			<HBox class="sapUiSmallMarginBegin">
				<VBox class="sapInoForwardClarInputWidth sapUiSmallMarginEnd">
					<MultiInput
												    class="experts"
                                                    id="inputForwardExpert"
                                                    startSuggestion="2"
                                                    showSuggestion="true"
                                                    maxTokens="1"
                                                    filterSuggests="false"
                                                    showValueHelp="false"
                                                    enableMultiLineMode="false" />
				</VBox>
			</HBox>
			<Label text="{i18n>EVALUATIONREQUESTS_TIT_LBL_FORWARD_REASON}" class="sapUiSmallMarginBegin sapUiSmallMarginTop"/>
			<HBox class="sapUiSmallMarginBegin">
			<VBox class = "sapInoForwardClarInputWidth  sapUiSmallMarginEnd">
			<TextArea id="txtAreaForwardReasonDes" 
			          rows="6" 
			          class = "sapInoForwardClarInputWidth"
			          cols="80" 
			          placeholder="{i18n>EVALUATIONREQUESTS_FLD_FORWARD_REASON}" ></TextArea>
			</VBox>          
			</HBox>	          
		</content>
		<buttons>
			<Button id ="btnForwardSubmit" text ="{i18n>EVALUATION_OBJECT_BTN_SUBMIT}" press = "onSubmitForward" type = "Accept"/>
			<Button id="btnForwardCancel" text="{i18n>BTN_CANCEL}" press="onForwardClose"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>