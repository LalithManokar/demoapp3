<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <l:Grid
        class="sapInoEvaluationCriterion"
        defaultSpan="XL11 L11 M10 S10"
        vSpacing="0"
        hSpacing="0">
        <l:content>
            <l:Grid
                class="sapUiSmallMarginTopBottom"
                defaultSpan="XL5 L5 M6 S12"
                vSpacing="0"
                hSpacing="0">
                <l:content>
                    <Link
                        press="onCriterionPressed"
                        text="{path: 'object>CRITERION_CODE', formatter: '.formatter.criterionCode'} {path: 'object>WEIGHT', formatter: '.formatter.getWeight'}"
                        textAlign="{= ${device>/system/phone} ? 'Begin' : 'End'}"
                        width="100%"/>
            
                    <l:Grid
                        defaultSpan="XL8 L8 M8 S8"
                        hSpacing="0"
                        vSpacing="0">
                        <l:layoutData>
                            <l:GridData span="XL7 L7 M6 S12"/>
                        </l:layoutData>
                        <l:content>
                            <l:VerticalLayout width="100%">
                                            <l:layoutData>
                                                <l:GridData span="XL2 L2 M2 S2"/>
                                            </l:layoutData>
                            <Text
                                class="sapInoProgressIndicatorMin"
                                text="{object>NUM_VALUE_MIN}"
                                textAlign="End"
                                visible="{:= ${parts: [{path: 'object>NUM_VALUE_MIN'},
                                                                   {path: 'object>NUM_VALUE_MAX'},
                                                                   {path: 'object>children'},
                                                                   {path: 'object>VALUE_OPTION_LIST_CODE'},
                                                                   {path: 'object>DATATYPE_CODE'}],
                                                      formatter: '.formatter.showAggregatingProgressIndicatorControl'}}"
                                width="100%">
                                <layoutData>
                                    <l:GridData span="XL2 L2 M2 S2"/>
                                </layoutData>
                            </Text>
                            </l:VerticalLayout>
                    
                            <l:VerticalLayout width="100%">
                                <ProgressIndicator
                                    class="sapInoProgressIndicator"
                                    height="10px"
                                    percentValue="{parts: ['object>DATATYPE_CODE',
                                                           'object>NUM_VALUE',
                                                           'object>BOOL_VALUE',
                                                           'object>TEXT_VALUE',
                                                           'object>VALUE_OPTION_LIST_CODE',
                                                           'object>UOM_CODE',
                                                           'object>NUM_VALUE_MIN',
                                                           'object>NUM_VALUE_MAX'],
                                                   formatter: '.formatter.progressIndicatorValue'}"
                                    showValue="false"
                                    state="None"
                                    visible="{parts: ['object>NUM_VALUE_MIN', 'object>NUM_VALUE_MAX', 'object>VALUE_OPTION_LIST_CODE', 'object>DATATYPE_CODE'],
                                              formatter: '.formatter.isProgressIndicatorControl'}"
                                    width="100%"/>
                                <Text
                                    text="{object>TEXT_VALUE}"
                                    width="100%"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                      formatter: '.formatter.isTextControl'}}"/>
                                <Text
                                    text="{parts: ['object>DATATYPE_CODE',
                                                   'object>NUM_VALUE',
                                                   'object>BOOL_VALUE',
                                                   'object>TEXT_VALUE',
                                                   'object>VALUE_OPTION_LIST_CODE',
                                                   'object>UOM_CODE'],
                                           formatter: '.formatter.getFormattedValue'}"
                                    textAlign="Begin"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                      formatter: '.formatter.isBooleanControl'}}"
                                    width="100%"/>
                                <Text
                                    text="{parts: ['object>DATATYPE_CODE',
                                                   'object>NUM_VALUE',
                                                   'object>BOOL_VALUE',
                                                   'object>TEXT_VALUE',
                                                   'object>VALUE_OPTION_LIST_CODE',
                                                   'object>UOM_CODE'],
                                           formatter: '.formatter.getFormattedValue'}"
                                    textAlign="Begin"
                                    visible="{path: 'object>VALUE_OPTION_LIST_CODE', formatter: '.formatter.isComboBoxControl'}"
                                    width="100%"/>  
                                <Text
                                    text="{parts: ['object>DATATYPE_CODE',
                                                   'object>NUM_VALUE',
                                                   'object>BOOL_VALUE',
                                                   'object>TEXT_VALUE',
                                                   'object>VALUE_OPTION_LIST_CODE',
                                                   'object>UOM_CODE'],
                                           formatter: '.formatter.getFormattedValue'}{path: 'object>WEIGHT', formatter: '.formatter.getWeightMultiply'}"
                                    textAlign="Begin"
                                    visible="{:= ${parts: [{path: 'object>DATATYPE_CODE'},
                                                           {path: 'object>VALUE_OPTION_LIST_CODE'}],
                                                      formatter: '.formatter.isInputControl'}}"
                                    width="100%"/>    
                            </l:VerticalLayout>
                            
                            <l:VerticalLayout width="100%">
                                            <l:layoutData>
                                                <l:GridData span="XL2 L2 M2 S2"/>
                                            </l:layoutData>
                            <Text
                                class="sapInoProgressIndicatorMax"
                                text="{object>NUM_VALUE_MAX}"
                                textAlign="Begin"
                                visible="{:= ${parts: [{path: 'object>NUM_VALUE_MIN'},
                                                                   {path: 'object>NUM_VALUE_MAX'},
                                                                   {path: 'object>children'},
                                                                   {path: 'object>VALUE_OPTION_LIST_CODE'},
                                                                   {path: 'object>DATATYPE_CODE'}],
                                                      formatter: '.formatter.showAggregatingProgressIndicatorControl'}}"
                                width="100%">
                                <layoutData>
                                    <l:GridData span="XL2 L2 M2 S2"/>
                                </layoutData>
                            </Text>
                            </l:VerticalLayout>
                        
                            <Text
                                class="sapInoLightText sapUiTinyMarginTopBottom"
                                text="{path: 'object>COMMENT'}"
                                textAlign="Begin"
                                visible="{parts: ['object>DATATYPE_CODE', 'object>COMMENT'],
                                          formatter: '.formatter.showCommentDisplay'}"
                                width="100%">
                                <layoutData>
                                    <l:GridData
                                        indent="XL2 L2 M2 S0"
                                        span="XL8 L8 M8 S10"/>
                                </layoutData>
                            </Text>
                        
                        </l:content>
                    </l:Grid>
                </l:content>
            </l:Grid>
            
            <Text
                class="sapUiSmallMarginTopBottom sapInoCriterionValue"
                text="{parts: ['object>DATATYPE_CODE',
                               'object>NUM_VALUE',
                               'object>BOOL_VALUE',
                               'object>TEXT_VALUE',
                               'object>VALUE_OPTION_LIST_CODE',
                               'object>UOM_CODE'],
                       formatter: '.formatter.getFormattedValue'}"
                textAlign="End"
                visible="{parts: ['object>DATATYPE_CODE', 'object>NUM_VALUE_MIN', 'object>NUM_VALUE_MAX', 'object>VALUE_OPTION_LIST_CODE'],
                          formatter: '.formatter.showValue'}"
                width="100%">
                <layoutData>
                    <l:GridData span="XL1 L1 M2 S2"/>
                </layoutData>
            </Text>
            
        </l:content>
    </l:Grid>
</core:FragmentDefinition>