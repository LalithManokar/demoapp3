<core:FragmentDefinition
	xmlns="sap.ui.table"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">
	<Table
		id="evaluationrequestlist"
		visibleRowCount="15"
		enableColumnReordering="true"
		selectionMode="{view>/List/SELECTION_MODE}"
		rowSelectionChange="onTableSelectionChange"
		filter="onTableFilter"
		class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiTinyMarginTop sapUiSmallMarginBottom">
		<columns>
			<Column id="colIdeaTitle" hAlign="Begin" showFilterMenuEntry="true" filterProperty="IDEA_TITLE" sortProperty="IDEA_TITLE">
				<m:Label text="{i18n>EVAL_REQ_LIST_FLD_IDEA_NAME}" />
				<template>
					<m:Link tooltip="{data>IDEA_TITLE}" text="{data>IDEA_TITLE}" href="{parts: [{path: 'data>IDEA_ID'}, {path: 'view>/List/IDEA_NAVIGATION_SECTION'}], formatter: '.formatter.ideaNavigationLink'}"/>
				</template>
			</Column>
			<Column id="colCampaign" hAlign="Begin" showFilterMenuEntry="true" filterProperty="CAMPAIGN_NAME" sortProperty="CAMPAIGN_NAME">
				<m:Label text="{i18n>EVAL_REQ_LIST_FLD_CAMPAIGN_NAME}" />
				<template>
					<m:Link tooltip="{data>CAMPAIGN_TITLE}" text="{data>CAMPAIGN_TITLE}" href="{path: 'data>CAMPAIGN_ID', formatter: '.formatter.campaignNavigationLink'}"/>
				</template>
			</Column>
			<Column id="colExpert" visible="{= !${view>/List/IS_EVAL_REQ_LIST_FOR_ME}}" hAlign="Begin" showFilterMenuEntry="true" filterProperty="EXPERT_NAME" sortProperty="EXPERT_NAME">
				<m:Label text="{i18n>EVAL_REQ_LIST_FLD_EXPERT}" />
				<template>
					<m:Text tooltip="{data>EXPERT_NAME}" text="{data>EXPERT_NAME}" wrapping="false"/>
				</template>
			</Column>
			<Column id="colStatus" hAlign="Begin" showFilterMenuEntry="true" filterProperty="STATUS_CODE" sortProperty="STATUS_CODE">
				<m:Label text="{i18n>EVAL_REQ_LIST_FLD_STATUS}" />
				<template>
					<m:Text text="{data>STATUS_TEXT}"/>
				</template>
			</Column>
			<Column id="colAcceptDate" hAlign="Begin" showFilterMenuEntry="true" filterProperty="ACCEPT_DATE" sortProperty="ACCEPT_DATE" columnMenuOpen="onTableColumnMenuOpen">
				<m:Label text="{i18n>EVAL_REQ_LIST_FLD_ACCEPTANCE_DUE_DATE}" />
				<template>
					<m:Text text="{path: 'data>ACCEPT_DATE', type: 'sap.ui.model.type.Date', formatOptions: { relative: false }}"/>
				</template>
			</Column>
			<Column id="colCompleteDate" hAlign="Begin" showFilterMenuEntry="true" filterProperty="COMPLETE_DATE" sortProperty="COMPLETE_DATE" sorted="true" sortOrder="Ascending" columnMenuOpen="onTableColumnMenuOpen">
				<m:Label text="{i18n>EVAL_REQ_LIST_FLD_COMPLETION_DUE_DATE}" />
				<template>
					<m:Text text="{path: 'data>COMPLETE_DATE', type: 'sap.ui.model.type.Date', formatOptions: { relative: false }}"/>
				</template>
			</Column>
			<Column id="colBtnNavigation" hAlign="Center" showFilterMenuEntry="false" width="6rem">
				<template>
					<m:Button text="{i18n>EVAL_REQ_LIST_BTN_NAVIGATION_BUTTON}" press="onTableBtnPress"/>
				</template>
			</Column>
		</columns>
	</Table>
</core:FragmentDefinition>