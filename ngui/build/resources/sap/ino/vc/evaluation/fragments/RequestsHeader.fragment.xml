<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:uxap="sap.uxap">
	<l:ResponsiveFlowLayout responsive="true">
		<l:layoutData>
			<uxap:ObjectPageHeaderLayoutData width="100%"/>
		</l:layoutData>
		<l:content>
			<l:Grid defaultSpan="XL6 L6 M6 S12" class="evaluationRequestsDisplay">
				<l:content>
					<Title  class="sapUiTinyMarginTopBottom"  text="{object>IDEA_NAME}"  titleStyle="H2">
						<layoutData>
							<l:GridData span="XL12 L12 M12 S12"/>
						</layoutData>
					</Title>
					<VBox>
						<HBox>
							<Label class="sapUiTinyMarginEnd" text="{:= ${i18n>EVALUATIONREQUESTS_TIT_DEADLINE_ACCEPTANCE}}"/>
							<Text text="{path: 'object>ACCEPT_DATE', formatter: '.formatter.toDate'}"/>
						</HBox>
						<HBox>
							<Label class="sapUiTinyMarginEnd" text="{:= ${i18n>EVALUATIONREQUESTS_TIT_DEADLINE_COMPLETION}}"/>
							<Text text="{path: 'object>COMPLETE_DATE', formatter: '.formatter.toDate'}"/>
						</HBox>
						<HBox>
							<Label class="sapUiTinyMarginEnd" text="{:= ${i18n>EVALUATIONREQUESTS_TIT_IDEA_PHASE}}"/>
							<Text text="{path: 'object>IDEA_PHASE_CODE', formatter: '.formatter.ideaPhase'}"/>
						</HBox>
						<HBox>
							<Label class="sapUiTinyMarginEnd" text="{:=${i18n>EVALUATIONREQUESTS_TIT_IDEA}}" />
							<Link text="{object>IDEA_NAME}" emphasized="true" wrapping="false" href="{path:'object>IDEA_ID', formatter: '.formatter.ideaNavigationLink'}" />
						</HBox>
					</VBox>
					<VBox>
						<Label class="sapUiTinyMarginEnd" text="{i18n>EVALUATIONREQUESTS_TIT_DESCRIPTION}" />
						<TextArea value="{ path: 'object>DESCRIPTION'}" cols="60" rows="5" enabled="false" />
					</VBox>
				</l:content>
			</l:Grid>
		</l:content>
	</l:ResponsiveFlowLayout>
</core:FragmentDefinition>