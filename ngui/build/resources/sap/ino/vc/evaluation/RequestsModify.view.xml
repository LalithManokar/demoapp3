<mvc:View
    controllerName="sap.ino.vc.evaluation.RequestsModify"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ino="sap.ino.controls"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
	xmlns:c="sap.ui.commons"
	xmlns:f="sap.ui.layout.form"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<Page id="evaluationRequestsModify" class="sapInoEvaluationRequestsModify">
		<customHeader>
			<ino:ColorBar>
				<core:Fragment fragmentName="sap.ino.vc.commons.fragments.NavBackButton" type="XML" />
				<ToolbarSpacer/>
				<Text text="{=${object>STATUS} === 'sap.ino.config.EVAL_REQ_DEFAULT' ? ${i18n>EVALUATIONREQUESTS_TIT_NEW_VALUE} : ${i18n>EVALUATIONREQUESTS_TIT_EDIT_VALUE} }" />
				<ToolbarSpacer/>
				<core:Fragment fragmentName="sap.ino.vc.commons.fragments.FullScreenButton" type="XML"/>
			</ino:ColorBar>
		</customHeader>
		<content>
			<uxap:ObjectPageLayout 
                    id="evaluationRequestsLayout" 
                    useIconTabBar="true" 
                    enableLazyLoading="true" 
                    visible="{view>/objectExists}">
				<uxap:sections>
					<uxap:ObjectPageSection title="{i18n>MENU_MIT_DETAILS}">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="{i18n>MENU_MIT_DETAILS}">
								<uxap:blocks>
									<l:Grid position="Center"  id="gridEvalRequest">
										<f:SimpleForm id="simpleFrmEvalRequest" editable="true" singleContainerFullSize="false"
                                              layout="ResponsiveGridLayout"
                                              columnsL="1"
                                              labelSpanL="2"
                                              labelSpanM="3"
                                              emptySpanL="{view>/Layouts/SimpleFormLayout/emptySpanL}"
                                              emptySpanM="{view>/Layouts/SimpleFormLayout/emptySpanM}">
											<f:layoutData>
												<l:GridData span="XL11 L11 M11 S11" />
											</f:layoutData>
											<Label text="{i18n>EVALUATIONREQUESTS_TIT_IDEA}"  required="{object>meta/nodes/Root/attributes/IDEA_NAME/required}" />
											<Link text="{object>IDEA_NAME}" emphasized="true" wrapping="false" href="{path:'object>IDEA_ID', formatter: '.formatter.ideaNavigationLink'}" />
											<Label labelFor="inputExperts" text="{i18n>EVALUATIONREQUESTS_TIT_EXPERT}"  required="true" />
											<HBox class="sapInoInputExperts sapUiExtrmeTinyMarginTop">
												<MultiInput
                                                    id="inputExperts"
                                                    startSuggestion="2"
                                                    showSuggestion="true"
                                                    filterSuggests="false"
                                                    showValueHelp="false"
                                                    enableMultiLineMode="false"
                                                    tokens="{object>/Experts}">
													<tokens>
														<Token key="{object>IDENTITY_ID}" text="{object>NAME}" delete="onTokenDelete"/>
													</tokens>
												</MultiInput>
												<Button
                                                    id="btnExpertFinder"
                                                    class="sapInoCommonButton"
                                                    text="{i18n>EVALUATIONREQUESTS_BTN_EXPERTFINDER}"
                                                    press="onFindExpert"/>
												<Button
                                                    id="btnAddFromClipboard"
                                                    class="sapInoCommonButton"
                                                    text="{i18n>BTN_ADD_FROM_CLIPBOARD}"
                                                    press="onAddFromClipboard" 
                                                    visible="{=!${device>/system/phone}}" 
                                                    enabled="{ parts: [{path: 'clipboard>/changed'}], formatter: '.formatHasUsersInClipboard' }"/>
											</HBox>
											<Label text="{i18n>EVALUATIONREQUESTS_TIT_IDEA_PHASE}" id="txtIdeaPhaseCode" required="{object>meta/nodes/Root/attributes/IDEA_PHASE_CODE/required}" />
											<Text class="sapUiExtrmeTinyMarginTop" text="{path:'object>IDEA_PHASE_CODE', formatter: '.formatter.ideaPhase'}" />
											<Label  />
											<Text text="{ parts: [{path: 'i18n>EVALUATIONREQUESTS_TIT_CAMPAIGN_SUBMIT_TO'},{path:'object>CAMPAIGN_SUBMIT_TO'}], formatter: '.toSubmitDate' }" />
											<Label labelFor="dpAcceptDate" text="{i18n>EVALUATIONREQUESTS_TIT_DEADLINE_ACCEPTANCE}"  required="{object>meta/nodes/Root/attributes/ACCEPT_DATE/required}" />
											<HBox class="sapInoDPicker">
												<DatePicker  id="dpAcceptDate" required="true" value="{path:'object>ACCEPT_DATE', type:'sap.ui.model.odata.type.DateTime', formatOptions:{ UTC:false, style:'medium', format:'yyyyMMdd' }}"/>
											</HBox>
											<Label labelFor="dpCompletetDate" text="{i18n>EVALUATIONREQUESTS_TIT_DEADLINE_COMPLETION}"   required="{object>meta/nodes/Root/attributes/COMPLETE_DATE/required}" />
											<HBox class="sapInoDPicker">
												<DatePicker  id="dpCompletetDate" required="true" value="{path:'object>COMPLETE_DATE', type:'sap.ui.model.odata.type.DateTime', formatOptions:{ UTC:false, style:'medium', format:'yyyyMMdd' }}"/>
											</HBox>
											<Label text="{i18n>EVALUATIONREQUESTS_TIT_DESCRIPTION}"  required="{object>meta/nodes/Root/attributes/DESCRIPTION/required}" />
											<TextArea class="sapUiTinyMarginTop" id="txtAreaDesc" rows="5" cols="80" value="{object>DESCRIPTION}"></TextArea>
										</f:SimpleForm>
									</l:Grid>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
				</uxap:sections>
			</uxap:ObjectPageLayout>
			<core:Fragment fragmentName="sap.ino.vc.commons.fragments.ObjectNotExists" type="XML"/>
		</content>
		<footer>
			<OverflowToolbar visible="{view>/objectExists}">
				<core:Fragment
                    fragmentName="sap.ino.vc.commons.fragments.MessageLog"
                    type="XML"/>
				<ToolbarSpacer/>
				<Button
                    id="evaluationSubmitBtn"
                    type="Accept"
                    text="{i18n>EVALUATION_OBJECT_BTN_SUBMIT}"
                    press="onSubmit"/>
				<Button
                    type="Reject"
                    visible="{=${object>STATUS} !== 'sap.ino.config.EVAL_REQ_DEFAULT' &amp;&amp; ${object>/property/actions/del/enabled}}"
                    text="{i18n>BTN_DEL}"
                    press="onDelete"/>
				<Button
                    text="{i18n>BTN_CLOSE}"
                    press="onCancel"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>