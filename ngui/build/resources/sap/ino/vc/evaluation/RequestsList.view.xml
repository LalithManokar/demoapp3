<mvc:View
    controllerName="sap.ino.vc.evaluation.RequestsList"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Page 
        id="evalreqlistpage"
        showFooter="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} }"
        enableScrolling="false"
        app:aofObject="sap.ino.xs.object.evaluation.EvaluationRequestItem">
        <customHeader>
            <core:Fragment fragmentName="sap.ino.vc.commons.fragments.ObjectListToolbar" type="XML"/>
        </customHeader>
        <content>
            <core:Fragment fragmentName="sap.ino.vc.evaluation.fragments.RequestsList" type="XML" />
        </content>
        <footer>
            <core:Fragment fragmentName="sap.ino.vc.evaluation.fragments.MassActionToolbar" type="XML" />
        </footer>
    </Page>
</mvc:View>