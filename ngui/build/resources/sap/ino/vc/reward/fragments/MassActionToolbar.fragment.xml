<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<OverflowToolbar class="sapMBar" design="Auto" visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} }">
	    <core:Fragment fragmentName="sap.ino.vc.commons.fragments.MessageLog" type="XML"/>
	    <ToolbarSpacer/>
        <HBox>
            <Button
	            id="sapInoMassSelect"
	            text="{= ${view>/List/SELECT_ALL} ? ${i18n>IDEA_LIST_BTN_MASS_DESELECT_BUTTON} : ${i18n>IDEA_LIST_BTN_MASS_SELECT_BUTTON}}"
	            tooltip="{i18n>IDEA_LIST_BTN_MASS_SELECT_BUTTON}"
	            enabled="{= ${view>/List/SELECT_ALL_ENABLE} &amp;&amp; ${view>/List/IS_IDEA_LIST}}"
	            visible="{= ${view>/ORIENTATION} === 1 || ${view>/List/MANAGE} &amp;&amp; ${view>/List/IS_IDEA_LIST} }"
	            press="onMassIdeaSelect">
	            <layoutData>
                    <OverflowToolbarLayoutData moveToOverflow="true" />
                </layoutData>
	        </Button>
            <Button 
                id="sapInoMassDeleteBtn"
                text="{i18n>IDEA_LIST_BTN_MASS_DELETE_BUTTON}"
                tooltip="{i18n>IDEA_LIST_BTN_MASS_DELETE_BUTTON}"
                enabled="false"
                visible="{= !${device>/system/phone} &amp;&amp; !!${view>/List/MANAGE} &amp;&amp; ${user>/privileges/sap.ino.ui::backoffice.access} === true &amp;&amp; !${view>/List/IS_IDEA_LIST} }"
                press="onMassDelete">
                <layoutData>
                    <OverflowToolbarLayoutData moveToOverflow="true" />
                </layoutData>
            </Button>
        </HBox>
        <HBox>
            <core:Fragment fragmentName="sap.ino.vc.commons.fragments.ExportButton" type="XML"/>
        </HBox>
    </OverflowToolbar>
</core:FragmentDefinition>