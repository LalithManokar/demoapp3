<core:FragmentDefinition
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<VBox class="sapInoScheduledNotificationSetting">
		<Text text="{i18n>FEEDS_SETTING_WARNING}" class="sapInoPersonalizeSettingLabel sapInoPersonalizeWarning"/>
		<Panel class="sapInoFilterPanel" expandable="false"  width="100%">
			<headerToolbar>
				<Toolbar>
					<Label text="{i18n>NEWFEEDS_SETTING_SCHEDULE_TITLE}"/>
				</Toolbar>
			</headerToolbar>
			<RadioButtonGroup columns="2"  width="100%" selectedIndex="{NEWFEED>/setting/FEEDS_KEY}" class="sapUiSmallMarginBottom">
				<buttons>
					<RadioButton text="{i18n>NEWFEED_SETTING_SCHEDULE_DAILY}" tooltip="{i18n>NEWFEED_SETTING_SCHEDULE_DAILY}"/>
					<RadioButton text="{i18n>NEWFEED_SETTING_SCHEDULE_NEVER}" tooltip="{i18n>NEWFEED_SETTING_SCHEDULE_NEVER}"/>
				</buttons>
			</RadioButtonGroup>
		</Panel>
		<Panel class="sapInoFilterPanel sapInoFeedsSetting" expandable="false" width="100%">
			<headerToolbar>
				<Toolbar>
					<Text 
					    tooltip="{i18n>FEEDS_SETTING_OVERALL_TITLE}"
    				    text="{i18n>FEEDS_SETTING_OVERALL_TITLE}"  />
				</Toolbar>
			</headerToolbar>
			<VBox>
				<CheckBox 
                    tooltip="{i18n>FEEDS_SETTING_CAMPAIGNS_TITLE}"
                    text="{i18n>FEEDS_SETTING_CAMPAIGNS_TITLE}" 
                    enabled="{path: 'NEWFEED>/setting/FEEDS_KEY', formatter: '.formatEnableMappingSettingFeedsKeyValue'}"
                    selected="{path:'NEWFEED>/setting/CAMPAIGN_SETTING_VALUE', type: 'sap.ino.commons.models.types.IntBooleanType'}" />
				<CheckBox 
                    tooltip="{ i18n>FEEDS_SETTING_IDEAS_TITLE }"
                    text="{i18n>FEEDS_SETTING_IDEAS_TITLE}"
                    enabled="{path: 'NEWFEED>/setting/FEEDS_KEY', formatter: '.formatEnableMappingSettingFeedsKeyValue'}"
                    selected="{path:'NEWFEED>/setting/IDEA_SETTING_VALUE', type: 'sap.ino.commons.models.types.IntBooleanType'}" />
				<CheckBox 
                    tooltip="{i18n>FEEDS_SETTING_TAGS_TITLE }"
                    text="{i18n>FEEDS_SETTING_TAGS_TITLE}" 
                    enabled="{path: 'NEWFEED>/setting/FEEDS_KEY', formatter: '.formatEnableMappingSettingFeedsKeyValue'}"
                    selected="{path:'NEWFEED>/setting/TAG_SETTING_VALUE', type: 'sap.ino.commons.models.types.IntBooleanType'}" />
			</VBox>
		</Panel>
	</VBox>
</core:FragmentDefinition>