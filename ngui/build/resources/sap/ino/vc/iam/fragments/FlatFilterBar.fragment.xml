<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <OverflowToolbar 
        active="true"
        design="Info"
        press="onFilterBarPress"
        visible="{device>/system/phone}">
        <content>
			<Label
				text="{ parts:[{path : 'device>/system'}, {path:'view>/List/SORT'}], formatter : '.formatter.listSortText' }"/>
			<core:Icon
			    id="sortReverse"
				src="sap-icon://sort"
				alt="{i18n>FILTER_SORT_REVERSE}"/>
			<ToolbarSpacer/>	
			<core:Icon
			    id="filterReset"
				src="sap-icon://undo"
				alt="{i18n>FILTER_RESET}"/>
		</content>
    </OverflowToolbar>
</core:FragmentDefinition>