<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ino="sap.ino.controls">
    <ino:QuickViewPageEnhance
        title="{identityData>/NAME}" 
        header="{i18n>USER_DETAILS_USER_HEADER}"
        description="{ parts: [{path: 'identityData>/ORGANIZATION'}, {path: 'identityData>/VALIDATION_TO'}, {path: 'identityData>/LAST_LOGIN'}], formatter: '.formatter.generateDescription' }"
        icon="{= !!${identityData>/IDENTITY_IMAGE_ID} ? ${config>/BACKEND_ROOT_URL} + '/' +
		    ${config>/sap.ino.config.URL_PATH_XS_ATTACHMENT_TITLE_IMAGE_DOWNLOAD} + '/' +
			${identityData>/IDENTITY_IMAGE_ID} : 'sap-icon://person-placeholder' }"
		headerToolBarText="{i18n>USER_DETAILS_LEADER_BOARD_TITLE}"
		headerToolBarIcon="./ngui/sap/ino/assets/img/leaderBoard/leadboard2x.png"
		visibleLeaderBoard="{identityData>/ENABLE_LEADERBOARD}"
		visibleDimension ="{identityData>/ENABLE_GAMIFICATION}"
		navigate="onPressNavigateToLeaderBoard">
		<ino:dimensionGroups>
		</ino:dimensionGroups>
        <ino:groups>
            <QuickViewGroup visible="{=!!${identityData>/CORP_INFO}}" heading="{i18n>USER_DETAILS_CORPORATE_INFO}"> 
                <elements>
                    <QuickViewGroupElement visible="{=${identityData>/CORP_INFO/COMPANY}!==undefined}" label="{i18n>USER_DETAILS_COMPANY}" value="{identityData>/CORP_INFO/COMPANY}"/>
                    <QuickViewGroupElement visible="{=${identityData>/CORP_INFO/COST_CENTER}!==undefined}" label="{i18n>USER_DETAILS_COST_CENTER}" value="{identityData>/CORP_INFO/COST_CENTER}"/>
                    <QuickViewGroupElement visible="{=${identityData>/CORP_INFO/OFFICE}!==undefined}" label="{i18n>USER_DETAILS_OFFICE}" value="{identityData>/CORP_INFO/OFFICE}"/>
                </elements>
            </QuickViewGroup>
            <QuickViewGroup  visible="{=!!${identityData>/CONTACT_DETAIL}}" heading="{i18n>USER_DETAILS_CONTACT}">
                <elements>
                    <QuickViewGroupElement visible="{=${identityData>/CONTACT_DETAIL/PHONE}!==undefined}" label="{i18n>USER_DETAILS_PHONE}" value="{identityData>/CONTACT_DETAIL/PHONE}" type="phone"/>
                    <QuickViewGroupElement visible="{=${identityData>/CONTACT_DETAIL/MOBILE}!==undefined}" label="{i18n>USER_DETAILS_MOBILE}" value="{identityData>/CONTACT_DETAIL/MOBILE}" type="mobile"/>
                    <QuickViewGroupElement
                        visible="{=${identityData>/CONTACT_DETAIL/EMAIL}!==undefined}" 
                        label="{i18n>USER_DETAILS_EMAIL}"
                        value="{identityData>/CONTACT_DETAIL/EMAIL}"
                        url="{path: 'identityData>/CONTACT_DETAIL/EMAIL', formatter: '.formatter.generateMailURL'}"
                        target=""
                        type="link"/>
                </elements>
            </QuickViewGroup>
            <QuickViewGroup visible="{=!!${identityData>/ADDR_INFO}}" heading="{i18n>USER_DETAILS_ADDRESS_INFO}">
                <elements>
                    <QuickViewGroupElement visible="{=${identityData>/ADDR_INFO/STREET}!==undefined}" label="{i18n>USER_DETAILS_STREET}" value="{identityData>/ADDR_INFO/STREET}" />
                    <QuickViewGroupElement visible="{=${identityData>/ADDR_INFO/ZIP_CODE}!==undefined}" label="{i18n>USER_DETAILS_ZIP_CODE}" value="{identityData>/ADDR_INFO/ZIP_CODE}" />
                    <QuickViewGroupElement visible="{=${identityData>/ADDR_INFO/CITY}!==undefined}" label="{i18n>USER_DETAILS_CITY}" value="{identityData>/ADDR_INFO/CITY}"/>
                    <QuickViewGroupElement visible="{=${identityData>/ADDR_INFO/COUNTRY}!==undefined}" label="{i18n>USER_DETAILS_COUNTRY}" value="{identityData>/ADDR_INFO/COUNTRY}"/>  
                </elements> 
            </QuickViewGroup>  
        </ino:groups>
    </ino:QuickViewPageEnhance>
</core:FragmentDefinition>
