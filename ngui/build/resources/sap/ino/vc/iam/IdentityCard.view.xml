<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:l="sap.ui.layout"
        xmlns="sap.m"
        xmlns:core="sap.ui.core" controllerName="sap.ino.vc.iam.IdentityCard">
    <QuickView 
        id="identityCard"
        visible="{= !${device>/system/phone} }"
        class="sapInoIdentityCardQuickView"        
        placement="HorizontalPreferredRight"
        width="320px">
        <pages>
            <core:Fragment fragmentName="sap.ino.vc.iam.fragments.IdentityCardPage" type="XML"/>
        </pages>
    </QuickView>
    <Dialog
        id="identityCardPhone"
        visible="{device>/system/phone}"
        title="{i18n>USER_DETAILS_USER_HEADER}"
        class="sapInoIdentityCardDialog"
        stretch="true"
        >
        <content>
            <core:Fragment fragmentName="sap.ino.vc.iam.fragments.IdentityCardPage" type="XML"/>
        </content>
        <beginButton>
            <Button text="{i18n>BTN_OK}" press="onClose"></Button>
        </beginButton>
    </Dialog>
</mvc:View>
