<mvc:View
   controllerName="sap.ino.installation.controller.InstallationCreateProcess"
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"	
	xmlns:f="sap.f"
	displayBlock="true">
			<Page showHeader="false"  class="sapInoInstallationPage">
				<content>
					<Panel class="sapInoInstallationPanelContent sapInoInstallationProcessPanelContent"
							headerText="{parts:['i18n>INSTALL_INNOVATION_MANAGEMENT_SYSTEM','preCheck>/du_version/version','preCheck>/du_version/version_patch','preCheck>/du_version/version_sp'],formatter:'.formatTitleText'}"
							>
					</Panel>
					<Wizard id="createProcessWizard"  showNextButton ="false">
						<WizardStep id="createInput"
				    	title="{i18n>PROCESS_CREATE_INPUT}"
					    activate="onActivate" 
					    validated="false" 
					    nextStep="createProcessing"
					    complete="onCompleteInstallDu">
	                    <core:Fragment fragmentName="sap.ino.installation.view.fragments.installationCreateProcessInput" type="XML"/>			    
					    </WizardStep>
					    
						<!--WizardStep id="createInputSummary"
					    title="{i18n>PROCESS_CREATE_INPUT_SUMMARY}"
					    activate="onActivateUpgradePrepare"
					    complete="onCompletePrepare"
					    validated="false"
					    nextStep="createProcessing">
					    <core:Fragment fragmentName="sap.ino.installation.view.fragments.installationCreateProcessInputSummary" type="XML"/>
					    </WizardStep-->
					    
						<WizardStep id="createProcessing"
					    title="{i18n>PROCESS_CREATE_PROCESS}"
					    activate="onActivateCreatePost"
					    validated="false" >
					    <core:Fragment fragmentName="sap.ino.installation.view.fragments.installationCreateProcessProcessing" type="XML"/>
					    </WizardStep>
					</Wizard>					
				</content>
			</Page>
</mvc:View>