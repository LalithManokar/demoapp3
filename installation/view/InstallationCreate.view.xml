<mvc:View
   controllerName="sap.ino.installation.controller.InstallationCreate"
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	displayBlock="true">
			<Page showHeader="false"  class="sapInoInstallationPage">
				<content>
					<Panel class="sapInoInstallationPanelContent"
							headerText="{i18n>SET_UP_INNOVATION_MANAGEMENT_SYSTEM}"
							>
						<content >
							<VBox class="sapInoInstallationPanelVboxCenter">
								<Text class="sapInoInstallationPanelVboxTextCenter" 
								text="{parts:['i18n>DESCRIPTION_OF_INSTALLATION_CREATE','preCheck>/du_version/version','preCheck>/du_version/version_patch','preCheck>/du_version/version_sp'],formatter:'.formatTitleText'}"/>
								<Toolbar class="sapInoInstallationPanelVboxToolbar" width="100%" height="1px"/>
								<Button type = "Accept" class="sapInoInstallationPanelStartButton" text="{i18n>INSTALLATION_BTN_START}" press="onPressStart"/>
							<HBox class="sapInoInstallationPanelHboxTopMargin">
								<Link text="{i18n>LINK_CONNECT_SUPPPORT}" class="sapInoInstallationPanelLinkRightMargin"
				                      target="_blank"
				                      href="http://www.sap.com" />
								<Link text="{i18n>LINK_SAP_APPLICATION_HELP}"
				                      target="_blank"
				                      href="http://www.sap.com" />				                      
							</HBox>
							</VBox>
                           <!--Button
									text="{i18n>showHelloButtonText}"
									press=".onShowHello"/-->
								<!--Input
									value="{/recipient/name}"
									description="Hello {/recipient/name}"
									valueLiveUpdate="true"
									width="60%"/-->
						</content>
					</Panel>
				</content>
			</Page>
</mvc:View>