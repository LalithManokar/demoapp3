schema = "SAP_INO";
query = "select id,1 as can_comment 
        from\"sap.ino.db.campaign::t_campaign\"
         where id not in 
             (select object_id from\"sap.ino.db.iam::v_auth_object_identity_limitation_action\" as limitation
             where limitation.object_type_code = 'CAMPAIGN' and limitation.action_code = 'IDEA_COMMENT')
        union all
        select distinct object_id as id ,1 as can_comment from\"sap.ino.db.iam::v_auth_object_identity_limitation_action\" as limitation
              where limitation.object_type_code = 'CAMPAIGN' and limitation.action_code = 'IDEA_COMMENT' and limitation.disabled = 0";

depends_on_table = ["sap.ino.db.campaign::t_campaign"];

depends_on_view = [ 
                    "sap.ino.db.iam::v_auth_object_identity_limitation_action"];    