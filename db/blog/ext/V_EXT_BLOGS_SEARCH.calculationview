        <keyMapping columnObjectName="Script_View" columnName="CREATED_BY_ID"/>
      </attribute>
      <attribute id="CREATED_BY_NAME" order="7">
        <descriptions defaultDescription="CREATED_BY_NAME"/>
        <keyMapping columnObjectName="Script_View" columnName="CREATED_BY_NAME"/>
      </attribute>
      <attribute id="COMMENT_COUNT" order="8">
        <descriptions defaultDescription="COMMENT_COUNT"/>
        <keyMapping columnObjectName="Script_View" columnName="COMMENT_COUNT"/>
      </attribute>
      <attribute id="CHANGED_AT" order="9">
        <descriptions defaultDescription="CHANGED_AT"/>
        <keyMapping columnObjectName="Script_View" columnName="CHANGED_AT"/>
      </attribute>
      <attribute id="CAMPAIGN_ID" order="10">
        <descriptions defaultDescription="CAMPAIGN_ID"/>
        <keyMapping columnObjectName="Script_View" columnName="CAMPAIGN_ID"/>
      </attribute>
      <attribute id="CAMPAIGN_NAME" order="11">
        <descriptions defaultDescription="CAMPAIGN_NAME"/>
        <keyMapping columnObjectName="Script_View" columnName="CAMPAIGN_NAME"/>
      </attribute>
      <attribute id="CAMPAIGN_SHORT_NAME" order="12">
        <descriptions defaultDescription="CAMPAIGN_SHORT_NAME"/>
        <keyMapping columnObjectName="Script_View" columnName="CAMPAIGN_SHORT_NAME"/>
      </attribute>
      <attribute id="CAMPAIGN_DESCRIPTION" order="13">
        <descriptions defaultDescription="CAMPAIGN_DESCRIPTION"/>
        <keyMapping columnObjectName="Script_View" columnName="CAMPAIGN_DESCRIPTION"/>
      </attribute>
      <attribute id="CAMPAIGN_COLOR" order="14">
        <descriptions defaultDescription="CAMPAIGN_COLOR"/>
        <keyMapping columnObjectName="Script_View" columnName="CAMPAIGN_COLOR"/>
      </attribute>
      <attribute id="STATUS_CODE" order="15">
        <descriptions defaultDescription="Status Code"/>
        <keyMapping columnObjectName="Script_View" columnName="STATUS_CODE"/>
      </attribute>
      <attribute id="IS_CHANGEABLE" order="16">
        <descriptions defaultDescription="UPDATE_ALLOWED"/>
        <keyMapping columnObjectName="Script_View" columnName="IS_CHANGEABLE"/>
      </attribute>
      <attribute id="IS_DELETABLE" order="17">
        <descriptions defaultDescription="DELETE_ALLOWED"/>
        <keyMapping columnObjectName="Script_View" columnName="IS_DELETABLE"/>
      </attribute>
      <attribute id="ATTACHMENT_COUNT" order="18">
        <descriptions defaultDescription="ATTACHMENT_COUNT"/>
        <keyMapping columnObjectName="Script_View" columnName="ATTACHMENT_COUNT"/>
      </attribute>
    </attributes>
    <calculatedAttributes/>
