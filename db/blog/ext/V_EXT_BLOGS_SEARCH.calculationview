<?xml version="1.0" encoding="UTF-8"?>
<Calculation:scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:Calculation="http://www.sap.com/ndb/BiModelCalculation.ecore" schemaVersion="2.3" id="V_EXT_BLOGS_SEARCH" applyPrivilegeType="NONE" checkAnalyticPrivileges="false" defaultClient="$$client$$" defaultLanguage="$$language$$" hierarchiesSQLEnabled="false" translationRelevant="true" visibility="internal" calculationScenarioType="SCRIPT_BASED" dataCategory="DEFAULT" enforceSqlExecution="false" executionSemantic="UNDEFINED" scriptParametersCaseSensitive="true">
  <descriptions defaultDescription="V_EXT_BLOGS_SEARCH"/>
  <defaultSchema schemaName="SAP_INO"/>
  <localVariables>
    <variable id="searchToken" parameter="true">
      <descriptions defaultDescription="Free text search token"/>
      <variableProperties datatype="NVARCHAR" defaultValue="undefined" length="100" mandatory="true">
        <valueDomain type="empty"/>
        <selection multiLine="false" type="SingleValue"/>
      </variableProperties>
    </variable>
    <variable id="tagsToken" parameter="true">
      <descriptions defaultDescription="Concatenated, comma separated list of tags"/>
      <variableProperties datatype="NVARCHAR" defaultValue="undefined" length="2048" mandatory="true">
        <valueDomain type="empty"/>
        <selection multiLine="false" type="SingleValue"/>
      </variableProperties>
    </variable>
    <variable id="filterName" parameter="true">
      <descriptions defaultDescription="Named filter condition"/>
      <variableProperties datatype="VARCHAR" defaultValue="undefined" length="20" mandatory="true">
        <valueDomain type="empty"/>
        <selection multiLine="false" type="SingleValue"/>
      </variableProperties>
    </variable>
  </localVariables>
  <variableMappings/>
  <informationModelLayout relativeWidthScenario="27"/>
  <dataSources/>
  <calculationViews>
    <calculationView xsi:type="Calculation:SqlScriptView" id="Script_View">
      <descriptions/>
      <viewAttributes>
        <viewAttribute datatype="INTEGER" id="ID"/>
        <viewAttribute datatype="NVARCHAR" id="TITLE" length="100"/>
        <viewAttribute datatype="NVARCHAR" id="SHORT_DESCRIPTION" length="500"/>
        <viewAttribute datatype="TIMESTAMP" id="PUBLISHED_AT"/>
        <viewAttribute datatype="TIMESTAMP" id="CREATED_AT"/>
        <viewAttribute datatype="INTEGER" id="CREATED_BY_ID"/>
        <viewAttribute datatype="NVARCHAR" id="CREATED_BY_NAME" length="100"/>
        <viewAttribute datatype="INTEGER" id="COMMENT_COUNT"/>
        <viewAttribute datatype="TIMESTAMP" id="CHANGED_AT"/>
        <viewAttribute datatype="INTEGER" id="CAMPAIGN_ID"/>
        <viewAttribute datatype="NVARCHAR" id="CAMPAIGN_NAME" length="100"/>
        <viewAttribute datatype="NVARCHAR" id="CAMPAIGN_SHORT_NAME" length="40"/>
        <viewAttribute datatype="NVARCHAR" id="CAMPAIGN_DESCRIPTION" length="5000"/>
        <viewAttribute datatype="VARCHAR" id="CAMPAIGN_COLOR" length="6"/>
        <viewAttribute datatype="VARCHAR" id="STATUS_CODE" length="500"/>
        <viewAttribute datatype="TINYINT" id="IS_CHANGEABLE"/>
        <viewAttribute datatype="TINYINT" id="IS_DELETABLE"/>
        <viewAttribute datatype="INTEGER" id="ATTACHMENT_COUNT"/>
      </viewAttributes>
      <calculatedViewAttributes/>
      <localVariable>#searchToken</localVariable>
      <localVariable>#tagsToken</localVariable>
      <localVariable>#filterName</localVariable>
      <definition>begin
    call &quot;SAP_INO&quot;.&quot;sap.ino.db.basis::p_string_splitter&quot;(:tagsToken, ',', :lt_tag_id_strings);
    lt_tags_blogs = select id 
                         from &quot;sap.ino.db.blog::t_blog&quot;
                         where length(:tagsToken) = 0
                    union all
                    select tag.object_id as id
                        from &quot;sap.ino.db.tag::t_object_tag&quot; tag 
                         where length(:tagsToken) &gt; 0 and 
                               tag.tag_id in (select STRING from :lt_tag_id_strings) and
                               tag.object_type_code = 'BLOG' 
                         group by tag.object_id 
                         having length(:tagsToken) &gt; 0  and 
                                count(*) = (select count(STRING) from :lt_tag_id_strings);

    call &quot;SAP_INO&quot;.&quot;sap.ino.db.blog::p_blog_search&quot;(:searchToken, :lt_search_blogs);
    call &quot;SAP_INO&quot;.&quot;sap.ino.db.blog::p_blog_filter&quot;(:filterName,  :lt_filter_blogs);

     lt_count_attachments =  select blog.id as blog_id, count(attachment.id) as attachment_count from &quot;sap.ino.db.blog::v_blog_campaign_small&quot; as blog
                                left outer join &quot;sap.ino.db.attachment::t_attachment_assignment&quot; as attachment
                                on attachment.owner_type_code = 'BLOG' 
                                and attachment.owner_id = blog.id
                                group by blog.id;
                              
     var_out = select
     				 blog.id,
                     blog.title,
                     blog.short_description,
                     blog.published_at,
                     blog.created_at,
                     blog.created_by_id,
                     blog.created_by_name,
                     blog.comment_count,
                     blog.changed_at,
                     blog.campaign_id,
                     blog.campaign_name,
                     blog.campaign_short_name,
                     blog.campaign_description,
                     blog.campaign_color,
                     blog.status_code,
                     case 
                       when update_allowed.blog_id is null then
                         cast(0 as tinyint)
                       else
                         cast(1 as tinyint)
                     end as is_changeable,
                     case 
                     	when delete_allowed.blog_id is null then
                     	  cast(0 as tinyint)
                     	else
                     	  cast(1 as tinyint)
                     end as is_deletable,
                     count_attachments.attachment_count   
                 from &quot;sap.ino.db.blog::v_blog_campaign_small&quot; as blog 
                    inner join :lt_search_blogs as search
                        on blog.id = search.id
                    inner join :lt_tags_blogs as tags
                        on blog.id = tags.id
                    inner join :lt_filter_blogs as filter_blogs
                        on blog.id = filter_blogs.id
                    left outer join :lt_count_attachments as count_attachments
                    	on count_attachments.blog_id = blog.id
                    left outer join &quot;sap.ino.db.blog::v_auth_blogs_update&quot; as update_allowed
                        on blog.id = update_allowed.blog_id
                    left outer join &quot;sap.ino.db.blog::v_auth_blogs_delete&quot; as delete_allowed
                        on blog.id = delete_allowed.blog_id
                 where  blog.id in (select blog_id from &quot;sap.ino.db.blog::v_auth_blogs_read&quot;) and (
                       	blog.campaign_id &gt; 0
                 );
end</definition>
    </calculationView>
  </calculationViews>
  <logicalModel id="Script_View">
    <descriptions/>
    <attributes>
      <attribute id="ID" order="1">
        <descriptions defaultDescription="ID"/>
